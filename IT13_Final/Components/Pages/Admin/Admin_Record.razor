@* Add Admin Modal *@
@if (showAddAdminModal)
{
    <div class="modal-overlay" @onclick="CloseAddAdminModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Admin</h2>
                <button class="modal-close-btn" @onclick="CloseAddAdminModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-tabs">
                <button class="modal-tab @(activeAddAdminTab == "user" ? "active" : "")" @onclick='() => SetActiveAddAdminTab("user")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>User Information</span>
                </button>
                <button class="modal-tab @(activeAddAdminTab == "address" ? "active" : "")" @onclick='() => SetActiveAddAdminTab("address")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>Address Information</span>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addAdminEditContext" OnValidSubmit="SaveAdminAsync" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    
                    @if (activeAddAdminTab == "user")
                    {
                        <div class="form-grid">
                            <div class="form-field">
                                <label class="field-label">First Name</label>
                                <input id="addAdminFirstName" class="form-input" value="@_addAdminModel.FirstName" @oninput="FilterAddAdminFirstNameInput" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => _addAdminModel.FirstName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Middle Name</label>
                                <input id="addAdminMiddleName" class="form-input" value="@_addAdminModel.MiddleName" @oninput="FilterAddAdminMiddleNameInput" placeholder="Enter middle name (optional)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Last Name</label>
                                <input id="addAdminLastName" class="form-input" value="@_addAdminModel.LastName" @oninput="FilterAddAdminLastNameInput" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => _addAdminModel.LastName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Email</label>
                                <InputText class="form-input" @bind-Value="_addAdminModel.Email" placeholder="Enter email address" />
                                <ValidationMessage For="@(() => _addAdminModel.Email)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Birthday</label>
                                <input type="date" class="form-input" value="@(_addAdminModel.Birthday?.ToString("yyyy-MM-dd") ?? "")" max="@MaxBirthdayDate.ToString("yyyy-MM-dd")" @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) { AddAdminBirthday = DateOnly.FromDateTime(date); } else { AddAdminBirthday = null; } })" />
                                <ValidationMessage For="@(() => _addAdminModel.Birthday)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Age</label>
                                <InputNumber TValue="int?" class="form-input" @bind-Value="_addAdminModel.Age" disabled />
                                <ValidationMessage For="@(() => _addAdminModel.Age)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Sex</label>
                                <select class="form-input sex-select" value="@_addAdminModel.Sex" @onchange="@((ChangeEventArgs e) => { 
                                    _addAdminModel.Sex = e.Value?.ToString() ?? string.Empty; 
                                    if (_addAdminEditContext != null)
                                    {
                                        _addAdminEditContext.NotifyFieldChanged(_addAdminEditContext.Field(nameof(_addAdminModel.Sex)));
                                    }
                                    StateHasChanged(); 
                                })">
                                    <option value="">Select Sex</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <ValidationMessage For="@(() => _addAdminModel.Sex)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Contact Number</label>
                                <InputText class="form-input" @bind-Value="_addAdminModel.Contact" placeholder="+63 912 345 6789" />
                                <ValidationMessage For="@(() => _addAdminModel.Contact)" />
                            </div>
                        </div>
                    }
                    else if (activeAddAdminTab == "address")
                    {
                        <div class="form-grid">
                            <div class="form-field full-width">
                                <label class="field-label">Street Address</label>
                                <InputText class="form-input" @bind-Value="_addAdminAddressModel.Street" placeholder="123 Main Street, Barangay Name" />
                                <ValidationMessage For="@(() => _addAdminAddressModel.Street)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Province</label>
                                <select class="form-input province-select" value="@_addAdminAddressModel.Province" @onchange="OnProvinceChanged">
                                    <option value="">Select Province</option>
                                    @foreach (var province in _addAdminProvinces)
                                    {
                                        <option value="@province">@province</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addAdminAddressModel.Province)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">City</label>
                                <select class="form-input city-select" value="@_addAdminAddressModel.City" @onchange="OnCityChanged" disabled="@(string.IsNullOrEmpty(_addAdminAddressModel.Province))">
                                    <option value="">Select City</option>
                                    @foreach (var city in _addAdminCities)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addAdminAddressModel.City)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Zip Code</label>
                                <input class="form-input" value="@_addAdminAddressModel.Zip" disabled placeholder="Auto-filled" />
                                <ValidationMessage For="@(() => _addAdminAddressModel.Zip)" />
                            </div>
                        </div>
                    }

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddAdminModal">Cancel</button>
                        <button type="submit" class="save-admin-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Admin</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

