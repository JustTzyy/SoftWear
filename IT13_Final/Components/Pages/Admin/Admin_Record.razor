            return $"Until {filterEndDate.Value:MMM dd, yyyy}";
        return "All Time";
    }

    private async Task PrintAdminRecords()
    {
        // Use all filtered admins for the PDF, not just the current page
        var recordsForPrint = allFilteredAdmins.Any() ? allFilteredAdmins : adminUsers;
        
        var reportData = new
        {
            title = "Admin Records Report",
            printedBy = "Administrator",
            printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
            dateRange = GetDateRangeText(),
            totalCount = recordsForPrint.Count,
            records = recordsForPrint.Select(u => new
            {
                id = u.Id,
                name = u.Name,
                email = u.Email,
                dateCreated = u.DateCreated.ToString("MMM dd, yyyy")
            }).ToList()
        };

        await JSRuntime.InvokeVoidAsync("printAdminRecords", reportData);
        
        // Log history
        if (AuthState.CurrentUser != null)
        {
            try
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "print",
                    "User Management",
                    $"Printed admin records report ({recordsForPrint.Count} records)"
                );
            }
            catch { }
        }
    }
