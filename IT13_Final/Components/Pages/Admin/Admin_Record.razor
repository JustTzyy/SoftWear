    private async Task SaveUpdateAdminAsync()
    {
        if (!_updateAdminUserId.HasValue)
        {
            return;
        }
        
        // Clear any previous validation messages
        _updateValidationMessageStore?.Clear();
        
        // Validate required fields manually since we're using native inputs
        bool hasErrors = false;
        
        if (string.IsNullOrWhiteSpace(_updateAdminModel.FirstName))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.FirstName)), "First Name is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_updateAdminModel.LastName))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.LastName)), "Last Name is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_updateAdminModel.Email))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Email)), "Email is required.");
            hasErrors = true;
        }
        else if (!System.Text.RegularExpressions.Regex.IsMatch(_updateAdminModel.Email, @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Email)), "Invalid email format.");
            hasErrors = true;
        }
        
        if (!_updateAdminModel.Birthday.HasValue)
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Birthday)), "Birthday is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_updateAdminModel.Sex))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Sex)), "Sex is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_updateAdminModel.Contact))
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Contact)), "Contact Number is required.");
            hasErrors = true;
        }

        // Validate admin age requirement (must be at least 24 years old)
        if (!_updateAdminModel.Age.HasValue || _updateAdminModel.Age.Value < 24)
        {
            _updateValidationMessageStore?.Add(_updateAdminEditContext.Field(nameof(_updateAdminModel.Age)), "Admin users must be at least 24 years old.");
            hasErrors = true;
        }
        
        if (hasErrors)
        {
            _updateAdminEditContext?.NotifyValidationStateChanged();
            StateHasChanged();
            return;
        }
        
        // Build admin name for confirmation
        var adminName = $"{_updateAdminModel.FirstName} {_updateAdminModel.LastName}".Trim();
        if (string.IsNullOrWhiteSpace(adminName))
        {
            adminName = _updateAdminModel.Email;
        }
        
        // Show confirmation dialog
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to update {adminName}?");
        
        if (!confirmed)
        {
            return; // User cancelled
        }
        
        // All validation passed - proceed with update

        try
        {
            // Update the admin user
            var success = await UserService.UpdateAdminAsync(
                _updateAdminUserId.Value,
                _updateAdminModel.Email,
                _updateAdminModel.FirstName,
                string.IsNullOrWhiteSpace(_updateAdminModel.MiddleName) ? null : _updateAdminModel.MiddleName,
                _updateAdminModel.LastName,
                string.IsNullOrWhiteSpace(_updateAdminModel.Contact) ? null : _updateAdminModel.Contact,
                _updateAdminModel.Birthday,
                _updateAdminModel.Age,
                string.IsNullOrWhiteSpace(_updateAdminModel.Sex) ? null : _updateAdminModel.Sex
            );

            if (success)
            {
                // Save/update address if provided
                if (!string.IsNullOrWhiteSpace(_updateAdminAddressModel.Street) ||
                    !string.IsNullOrWhiteSpace(_updateAdminAddressModel.City) ||
                    !string.IsNullOrWhiteSpace(_updateAdminAddressModel.Province) ||
                    !string.IsNullOrWhiteSpace(_updateAdminAddressModel.Zip))
                {
                    await AddressService.SaveAddressAsync(_updateAdminUserId.Value, _updateAdminAddressModel);
                }

                // Refresh list
                await LoadAdminUsersAsync();
                
                // Show success message
                successMessageText = "Admin updated successfully!";
                showSuccessMessage = true;
                
                // Close modal immediately
                CloseUpdateAdminModal();
                
                // Set timer to hide success message after 5 seconds
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (IT13_Final.Services.Data.EmailAlreadyExistsException)
        {
            // Add email validation error directly to the Email field
            if (_updateValidationMessageStore != null && _updateAdminEditContext != null)
            {
                _updateValidationMessageStore.Add(
                    _updateAdminEditContext.Field(nameof(_updateAdminModel.Email)),
                    "Email address already exists.");
                _updateAdminEditContext.NotifyValidationStateChanged();
            }
        }
        catch (Exception ex)
        {
            // Handle other errors
            if (_updateValidationMessageStore != null && _updateAdminEditContext != null)
            {
                _updateValidationMessageStore.Add(
                    _updateAdminEditContext.Field(nameof(_updateAdminModel.Email)),
                    $"Error: {ex.Message}");
                _updateAdminEditContext.NotifyValidationStateChanged();
            }
        }
        finally
        {
            StateHasChanged();
        }
    }

