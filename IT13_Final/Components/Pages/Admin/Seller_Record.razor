    private async Task SaveUpdateSellerAsync()
    {
        if (!_UpdateSellerUserId.HasValue)
        {
            return;
        }
        
        // Clear any previous validation messages
        _updateValidationMessageStore?.Clear();
        
        // Validate required fields manually since we're using native inputs
        bool hasErrors = false;
        
        if (string.IsNullOrWhiteSpace(_UpdateSellerModel.FirstName))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.FirstName)), "First Name is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_UpdateSellerModel.LastName))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.LastName)), "Last Name is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_UpdateSellerModel.Email))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Email)), "Email is required.");
            hasErrors = true;
        }
        else if (!System.Text.RegularExpressions.Regex.IsMatch(_UpdateSellerModel.Email, @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Email)), "Invalid email format.");
            hasErrors = true;
        }
        
        if (!_UpdateSellerModel.Birthday.HasValue)
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Birthday)), "Birthday is required.");
            hasErrors = true;
        }
        
        // Validate seller age requirement (must be at least 24 years old)
        if (!_UpdateSellerModel.Age.HasValue || _UpdateSellerModel.Age.Value < 24)
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Age)), "Seller users must be at least 24 years old.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_UpdateSellerModel.Sex))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Sex)), "Sex is required.");
            hasErrors = true;
        }
        
        if (string.IsNullOrWhiteSpace(_UpdateSellerModel.Contact))
        {
            _updateValidationMessageStore?.Add(_UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Contact)), "Contact Number is required.");
            hasErrors = true;
        }

        // No minimum age requirement for sellers
        
        if (hasErrors)
        {
            _UpdateSellerEditContext?.NotifyValidationStateChanged();
            StateHasChanged();
            return;
        }
        
        // Build admin name for confirmation
        var adminName = $"{_UpdateSellerModel.FirstName} {_UpdateSellerModel.LastName}".Trim();
        if (string.IsNullOrWhiteSpace(adminName))
        {
            adminName = _UpdateSellerModel.Email;
        }
        
        // Show confirmation dialog
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to update {adminName}?");
        
        if (!confirmed)
        {
            return; // User cancelled
        }
        
        // All validation passed - proceed with update

        try
        {
            // Update the admin user
            var success = await UserService.UpdateSellerAsync(
                _UpdateSellerUserId.Value,
                _UpdateSellerModel.Email,
                _UpdateSellerModel.FirstName,
                string.IsNullOrWhiteSpace(_UpdateSellerModel.MiddleName) ? null : _UpdateSellerModel.MiddleName,
                _UpdateSellerModel.LastName,
                string.IsNullOrWhiteSpace(_UpdateSellerModel.Contact) ? null : _UpdateSellerModel.Contact,
                _UpdateSellerModel.Birthday,
                _UpdateSellerModel.Age,
                string.IsNullOrWhiteSpace(_UpdateSellerModel.Sex) ? null : _UpdateSellerModel.Sex
            );

            if (success)
            {
                // Save/update address if provided
                if (!string.IsNullOrWhiteSpace(_UpdateSellerAddressModel.Street) ||
                    !string.IsNullOrWhiteSpace(_UpdateSellerAddressModel.City) ||
                    !string.IsNullOrWhiteSpace(_UpdateSellerAddressModel.Province) ||
                    !string.IsNullOrWhiteSpace(_UpdateSellerAddressModel.Zip))
                {
                    await AddressService.SaveAddressAsync(_UpdateSellerUserId.Value, _UpdateSellerAddressModel);
                }

                // Refresh list
                await LoadsellerUsersAsync();
                
                // Show success message
                successMessageText = "Seller updated successfully!";
                showSuccessMessage = true;
                
                // Close modal immediately
                CloseUpdateSellerModal();
                
                // Set timer to hide success message after 5 seconds
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (IT13_Final.Services.Data.EmailAlreadyExistsException)
        {
            // Add email validation error directly to the Email field
            if (_updateValidationMessageStore != null && _UpdateSellerEditContext != null)
            {
                _updateValidationMessageStore.Add(
                    _UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Email)),
                    "Email address already exists.");
                _UpdateSellerEditContext.NotifyValidationStateChanged();
            }
        }
        catch (Exception ex)
        {
            // Handle other errors
            if (_updateValidationMessageStore != null && _UpdateSellerEditContext != null)
            {
                _updateValidationMessageStore.Add(
                    _UpdateSellerEditContext.Field(nameof(_UpdateSellerModel.Email)),
                    $"Error: {ex.Message}");
                _UpdateSellerEditContext.NotifyValidationStateChanged();
            }
        }
        finally
        {
            StateHasChanged();
        }
    }

