    private async Task HandleEdit(int userId)
    {
        _UpdateSellerUserId = userId;
        
        try
        {
            var userDetails = await UserService.GetUserDetailsAsync(userId);
            if (userDetails == null)
            {
                return;
            }

            // Load personal info to get first/middle/last name separately
            var personalInfo = await UserService.GetPersonalInfoAsync(userId);
            
            // Populate user information
            _UpdateSellerModel.FirstName = personalInfo?.FirstName ?? string.Empty;
            _UpdateSellerModel.MiddleName = personalInfo?.MiddleName ?? string.Empty;
            _UpdateSellerModel.LastName = personalInfo?.LastName ?? string.Empty;
            _UpdateSellerModel.Email = userDetails.Email;
            _UpdateSellerModel.Birthday = userDetails.Birthday;
            _UpdateSellerModel.Age = userDetails.Age;
            _UpdateSellerModel.Sex = userDetails.Sex;
            _UpdateSellerModel.Contact = userDetails.Contact;
            
            // Set dummy password values to satisfy validation (password is not changed in update)
            _UpdateSellerModel.Password = "Dummy123";
            _UpdateSellerModel.ConfirmPassword = "Dummy123";

            // Load address information with ID for updates
            var existingAddress = await AddressService.GetAddressAsync(userId);
            if (existingAddress != null)
            {
                _UpdateSellerAddressModel.Id = existingAddress.Id;
                _UpdateSellerAddressModel.Street = existingAddress.Street;
                _UpdateSellerAddressModel.Province = existingAddress.Province;
                _UpdateSellerAddressModel.City = existingAddress.City;
                _UpdateSellerAddressModel.Zip = existingAddress.Zip;
            }
            else
            {
                // If no address exists, use data from userDetails (might be empty)
                _UpdateSellerAddressModel.Id = 0;
                _UpdateSellerAddressModel.Street = userDetails.Street ?? string.Empty;
                _UpdateSellerAddressModel.Province = userDetails.Province ?? string.Empty;
                _UpdateSellerAddressModel.City = userDetails.City ?? string.Empty;
                _UpdateSellerAddressModel.Zip = userDetails.Zip ?? string.Empty;
            }

            // Load provinces and cities
            _UpdateSellerProvinces = PhilippineAddressService.GetProvinces().ToList();
            _UpdateSellerProvinces.Sort();
            
            if (!string.IsNullOrEmpty(_UpdateSellerAddressModel.Province))
            {
                _UpdateSellerCities = PhilippineAddressService.GetCities(_UpdateSellerAddressModel.Province);
                _UpdateSellerCities.Sort();
            }
            else
