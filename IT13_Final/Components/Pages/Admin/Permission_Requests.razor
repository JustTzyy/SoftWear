@page "/admin/Permission_Requests"
@layout IT13_Final.Components.Layout.Admin.Admin
@inject IT13_Final.Services.Data.IUserService UserService
@inject IT13_Final.Services.Data.IAddressService AddressService
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@using System.Linq
@using System.Text.Json
@implements IDisposable

<h1 class="page-title">Permission Requests</h1>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

<div class="admin-records-container">
    <div class="search-actions-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search requests" value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>
    </div>

    <div class="table-container">
        <div class="table-header">Pending</div>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Request Type</th>
                    <th>Current Data</th>
                    <th>Requested Changes</th>
                    <th>Requested Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="6" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (permissionRequests.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="empty-cell">No pending permission requests</td>
                    </tr>
                }
                else
                {
                    @foreach (var request in permissionRequests)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(request.UserId)">
                            <td>
                                <div class="user-info">
                                    <div class="user-name">@request.UserName</div>
                                    <div class="user-email">@request.UserEmail</div>
                                </div>
                            </td>
                            <td>
                                <span class="request-type-badge">@GetRequestTypeDisplay(request.RequestType)</span>
                            </td>
                            <td>
                                <span class="data-preview">Click row to view</span>
                            </td>
                            <td>
                                <span class="data-preview">Click row to view</span>
                            </td>
                            <td>@request.RequestedDate.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn approve-btn" @onclick="() => HandleApprove(request.UserId)" title="Approve">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                </button>
                                <button class="action-btn reject-btn" @onclick="() => HandleReject(request.UserId)" title="Reject">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <line x1="18" y1="6" x2="6" y2="18"></line>
                                        <line x1="6" y1="6" x2="18" y2="18"></line>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Details Modal *@
@if (showDetailsModal && requestDetails != null)
{
    <div class="modal-overlay" @onclick="CloseDetailsModal">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>User Details</span>
                </div>
                <button class="modal-close" @onclick="CloseDetailsModal" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content">
                <div class="details-column">
                    <div class="details-section">
                        <div class="details-section-header">
                            <svg class="section-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                            </svg>
                            <span>Current Data</span>
                        </div>
                        <div class="details-list">
                            @if (requestDetails.RequestType == "personal_info" || requestDetails.RequestType == "combined")
                            {
                                <div class="detail-item">
                                    <span class="detail-label">First name</span>
                                    <span class="detail-value">@requestDetails.CurrentFirstName</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Middle name</span>
                                    <span class="detail-value">@(string.IsNullOrEmpty(requestDetails.CurrentMiddleName) ? "N/A" : requestDetails.CurrentMiddleName)</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Last name</span>
                                    <span class="detail-value">@requestDetails.CurrentLastName</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Contact number</span>
                                    <span class="detail-value">@(string.IsNullOrEmpty(requestDetails.CurrentContact) ? "N/A" : requestDetails.CurrentContact)</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Birthday</span>
                                    <span class="detail-value">@(requestDetails.CurrentBirthday?.ToString("M/d/yyyy") ?? "N/A")</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Age</span>
                                    <span class="detail-value">@(requestDetails.CurrentAge?.ToString() ?? "N/A")</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Sex</span>
                                    <span class="detail-value">@(string.IsNullOrEmpty(requestDetails.CurrentSex) ? "N/A" : requestDetails.CurrentSex)</span>
                                </div>
                            }
                            
                            @if (requestDetails.RequestType == "address" || requestDetails.RequestType == "combined")
                            {
                                <div class="detail-item">
                                    <span class="detail-label">Street address</span>
                                    <span class="detail-value">@(currentAddress?.Street ?? "N/A")</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">City</span>
                                    <span class="detail-value">@(currentAddress?.City ?? "N/A")</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Province</span>
                                    <span class="detail-value">@(currentAddress?.Province ?? "N/A")</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">Zip code</span>
                                    <span class="detail-value">@(currentAddress?.Zip ?? "N/A")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="details-column">
                    <div class="details-section">
                        <div class="details-section-header">
                            <svg class="section-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                                <polyline points="10 9 9 9 8 9"></polyline>
                            </svg>
                            <span>Requested Changes</span>
                        </div>
                        <div class="details-list">
                            @if (requestDetails.RequestType == "personal_info" || requestDetails.RequestType == "combined")
                            {
                                IT13_Final.Services.Data.PersonalInfoRequestData? requestedPersonalData = null;
                                
                                if (requestDetails.RequestType == "personal_info")
                                {
                                    requestedPersonalData = JsonSerializer.Deserialize<IT13_Final.Services.Data.PersonalInfoRequestData>(requestDetails.RequestDataJson);
                                }
                                else if (requestDetails.RequestType == "combined")
                                {
                                    var combined = JsonSerializer.Deserialize<IT13_Final.Services.Data.CombinedRequestData>(requestDetails.RequestDataJson);
                                    requestedPersonalData = combined?.PersonalInfo;
                                }
                                
                                @if (requestedPersonalData != null)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">First name</span>
                                        <span class="detail-value requested">@(requestedPersonalData.FirstName ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Middle name</span>
                                        <span class="detail-value requested">@(string.IsNullOrEmpty(requestedPersonalData.MiddleName) ? "N/A" : requestedPersonalData.MiddleName)</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Last name</span>
                                        <span class="detail-value requested">@(requestedPersonalData.LastName ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Contact number</span>
                                        <span class="detail-value requested">@(string.IsNullOrEmpty(requestedPersonalData.Contact) ? "N/A" : requestedPersonalData.Contact)</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Birthday</span>
                                        <span class="detail-value requested">@(requestedPersonalData.Birthday?.ToString("M/d/yyyy") ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Age</span>
                                        <span class="detail-value requested">@(requestedPersonalData.Age?.ToString() ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Sex</span>
                                        <span class="detail-value requested">@(string.IsNullOrEmpty(requestedPersonalData.Sex) ? "N/A" : requestedPersonalData.Sex)</span>
                                    </div>
                                }
                            }
                            
                            @if (requestDetails.RequestType == "address" || requestDetails.RequestType == "combined")
                            {
                                IT13_Final.Services.Data.AddressRequestData? requestedAddressData = null;
                                
                                if (requestDetails.RequestType == "address")
                                {
                                    requestedAddressData = JsonSerializer.Deserialize<IT13_Final.Services.Data.AddressRequestData>(requestDetails.RequestDataJson);
                                }
                                else if (requestDetails.RequestType == "combined")
                                {
                                    var combined = JsonSerializer.Deserialize<IT13_Final.Services.Data.CombinedRequestData>(requestDetails.RequestDataJson);
                                    requestedAddressData = combined?.Address;
                                }
                                
                                @if (requestedAddressData != null)
                                {
                                    <div class="detail-item">
                                        <span class="detail-label">Street address</span>
                                        <span class="detail-value requested">@(requestedAddressData.Street ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">City</span>
                                        <span class="detail-value requested">@(requestedAddressData.City ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Province</span>
                                        <span class="detail-value requested">@(requestedAddressData.Province ?? "N/A")</span>
                                    </div>
                                    <div class="detail-item">
                                        <span class="detail-label">Zip code</span>
                                        <span class="detail-value requested">@(requestedAddressData.Zip ?? "N/A")</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.PermissionRequestModel> permissionRequests = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;
    private bool showDetailsModal = false;
    private IT13_Final.Services.Data.PermissionRequestDetailsModel? requestDetails = null;
    private bool isLoadingDetails = false;
    private IT13_Final.Services.Data.AddressModel? currentAddress = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadPermissionRequestsAsync();
    }

    private async Task LoadPermissionRequestsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            totalCount = await UserService.GetPermissionRequestsCountAsync(searchTerm);
            permissionRequests = await UserService.GetPermissionRequestsAsync(searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            permissionRequests = new List<IT13_Final.Services.Data.PermissionRequestModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadPermissionRequestsAsync();
        }
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadPermissionRequestsAsync();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadPermissionRequestsAsync();
            }
        }
    }

    private string GetRequestTypeDisplay(string requestType)
    {
        return requestType switch
        {
            "personal_info" => "Personal Information",
            "address" => "Address",
            "combined" => "Personal Info & Address",
            _ => requestType
        };
    }

    private async Task HandleRowClick(int userId)
    {
        await HandleViewRequested(userId);
    }

    private async Task HandleViewRequested(int userId)
    {
        showDetailsModal = true;
        isLoadingDetails = true;
        currentAddress = null;
        StateHasChanged();

        try
        {
            requestDetails = await UserService.GetPermissionRequestDetailsAsync(userId);
            
            // Load current address if request type is address or combined
            if (requestDetails != null && (requestDetails.RequestType == "address" || requestDetails.RequestType == "combined"))
            {
                currentAddress = await AddressService.GetAddressAsync(userId);
            }
        }
        catch
        {
            requestDetails = null;
            currentAddress = null;
        }
        finally
        {
            isLoadingDetails = false;
            StateHasChanged();
        }
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        requestDetails = null;
        currentAddress = null;
        StateHasChanged();
    }

    private async Task HandleApprove(int userId)
    {
        var request = permissionRequests.FirstOrDefault(r => r.UserId == userId);
        var userName = request?.UserName ?? "this user";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to approve the permission request from {userName}?");
        
        if (!confirmed)
        {
            return;
        }
        
        try
        {
            var success = await UserService.ApprovePermissionRequestAsync(userId);
            
            if (success)
            {
                await LoadPermissionRequestsAsync();
                
                successMessageText = "Permission request approved successfully!";
                showSuccessMessage = true;
                
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

    private async Task HandleReject(int userId)
    {
        var request = permissionRequests.FirstOrDefault(r => r.UserId == userId);
        var userName = request?.UserName ?? "this user";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to reject the permission request from {userName}?");
        
        if (!confirmed)
        {
            return;
        }
        
        try
        {
            var success = await UserService.RejectPermissionRequestAsync(userId);
            
            if (success)
            {
                await LoadPermissionRequestsAsync();
                
                successMessageText = "Permission request rejected successfully!";
                showSuccessMessage = true;
                
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
        _successBannerTimer?.Dispose();
    }
}

