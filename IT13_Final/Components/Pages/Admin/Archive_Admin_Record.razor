@code {
    private List<IT13_Final.Services.Data.ArchivedAdminUserModel> archivedUsers = new();
    private List<IT13_Final.Services.Data.ArchivedAdminUserModel> allFilteredArchived = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;
    private bool showUserDetails = false;
    private IT13_Final.Services.Data.UserDetailsModel? userDetails = null;
    private bool isLoadingDetails = false;

    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || filterStartDate.HasValue || filterEndDate.HasValue;

    [Inject] private NavigationManager Nav { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedUsersAsync();
    }

    private async Task LoadArchivedUsersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all archived users matching search term first
            var allArchived = await UserService.GetArchivedAdminUsersAsync(searchTerm, 1, 10000);
            
            // Apply date filter client-side (filter by ArchivedDate)
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredArchived = allArchived.Where(u =>
                {
                    var archivedDate = u.ArchivedDate.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date && archivedDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return archivedDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredArchived = allArchived;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredArchived.Count;
            
            // Apply pagination to filtered results
            archivedUsers = allFilteredArchived
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            archivedUsers = new List<IT13_Final.Services.Data.ArchivedAdminUserModel>();
            allFilteredArchived = new List<IT13_Final.Services.Data.ArchivedAdminUserModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
    {
        currentPage = 1;
        await LoadArchivedUsersAsync();
    }

    // Debounce search to avoid too many queries
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadArchivedUsersAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadArchivedUsersAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadArchivedUsersAsync();
            }
        }
    }

    private void NavigateToRecords()
    {
        Nav.NavigateTo("/admin/Admin_Record");
    }

    private async Task HandleRowClick(int userId)
    {
        showUserDetails = true;
        isLoadingDetails = true;
        StateHasChanged();

        try
        {
            userDetails = await UserService.GetArchivedUserDetailsAsync(userId);
        }
        catch
        {
            userDetails = null;
        }
        finally
        {
            isLoadingDetails = false;
            StateHasChanged();
        }
    }

    private void CloseUserDetails()
    {
        showUserDetails = false;
        userDetails = null;
        StateHasChanged();
    }

    private async Task HandleRestore(int userId)
    {
        // Get the admin name for the confirmation dialog
        var admin = archivedUsers.FirstOrDefault(u => u.Id == userId);
        var adminName = admin?.Name ?? "this admin";
        
        // Show confirmation dialog
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore {adminName}?");
        
        if (!confirmed)
        {
            return; // User cancelled
        }
        
        try
        {
            var success = await UserService.RestoreAdminAsync(userId);
            
            if (success)
            {
                // Refresh the list to remove the restored admin
                await LoadArchivedUsersAsync();
                
                // Show success message
                successMessageText = "Admin restored successfully!";
                showSuccessMessage = true;
                
                // Set timer to hide success message after 5 seconds
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error - could show an error message here
        }
        
        StateHasChanged();
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
        _successBannerTimer?.Dispose();
    }

    // Date filter methods
    private void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterStartDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterStartDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterEndDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterEndDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                filterStartDate = null;
                filterEndDate = null;
                break;
            case "today":
                filterStartDate = now.Date;
                filterEndDate = now.Date;
                break;
            case "yesterday":
                filterStartDate = now.Date.AddDays(-1);
                filterEndDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                filterStartDate = now.Date.AddDays(-6);
                filterEndDate = now.Date;
                break;
            case "last30days":
                filterStartDate = now.Date.AddDays(-29);
                filterEndDate = now.Date;
                break;
            case "thismonth":
                filterStartDate = new DateTime(now.Year, now.Month, 1);
                filterEndDate = now.Date;
                break;
            case "thisyear":
                filterStartDate = new DateTime(now.Year, 1, 1);
                filterEndDate = now.Date;
                break;
        }
        _ = LoadArchivedUsersAsync();
    }

    private async Task ApplyDateFilter()
    {
        currentPage = 1;
        await LoadArchivedUsersAsync();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        filterStartDate = null;
        filterEndDate = null;
        currentPage = 1;
        await LoadArchivedUsersAsync();
    }

    private string GetDateRangeText()
    {
        if (filterStartDate.HasValue && filterEndDate.HasValue)
        {
            return $"{filterStartDate.Value:MM/dd/yyyy} - {filterEndDate.Value:MM/dd/yyyy}";
        }
        else if (filterStartDate.HasValue)
        {
            return $"From {filterStartDate.Value:MM/dd/yyyy}";
        }
        else if (filterEndDate.HasValue)
        {
            return $"Until {filterEndDate.Value:MM/dd/yyyy}";
        }
        return "All Time";
    }

    private async Task PrintArchivedAdminRecords()
    {
        var currentUserName = AuthState.CurrentUser?.FullName ?? "Administrator";
        
        var reportData = new
        {
            title = "Archived Admin Records Report",
            printedBy = currentUserName,
            printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
            dateRange = GetDateRangeText(),
            totalCount = allFilteredArchived.Count,
            records = allFilteredArchived.Select(u => new
            {
                id = u.Id,
                name = u.Name,
                email = u.Email,
                archivedDate = u.ArchivedDate.ToString("MMM dd, yyyy")
            }).ToList()
        };

        await JSRuntime.InvokeVoidAsync("printArchivedAdminRecords", reportData);
    }
}
