@page "/accounting/reports/sales"
@layout IT13_Final.Components.Layout.Accounting.Accounting
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.ISalesService SalesService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@using System.Linq
@using Microsoft.Data.SqlClient

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Sales Reports (All Cashiers)</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF" title="Print Report">
            @if (isGeneratingPDF)
            {
                <span>Generating...</span>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 9V2h12v7"></path>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
            }
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input type="text"
               id="accounting-sales-report-search-input"
               class="search-input"
               placeholder="Search by sale number..."
               @bind="searchTerm"
               @bind:event="oninput"
               @bind:after="HandleSearchInput"
               @onkeypress="HandleSearchKeyPress" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="HandleClearSearch" title="Clear">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date"
               class="date-input"
               value="@(startDate?.ToString("yyyy-MM-dd"))"
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@(endDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
               @onchange="HandleFromDateChange" />
        <span class="date-separator">to</span>
        <input type="date"
               class="date-input"
               value="@(endDate?.ToString("yyyy-MM-dd"))"
               min="@(startDate?.ToString("yyyy-MM-dd"))"
               max="@DateTime.Today.ToString("yyyy-MM-dd")"
               @onchange="HandleToDateChange" />
        <button class="filter-btn" @onclick="ApplyFilters">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Apply
        </button>
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }
    </div>
</div>

@* Summary Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Sales Summary</h3>
            <span class="card-subtitle">@GetDateRangeText()</span>
        </div>
    </div>
    
    <div class="card-body">
        <div class="summary-grid">
            <div class="summary-box">
                <div class="summary-label">Total Sales Amount</div>
                <div class="summary-value">₱@totalSalesAmount.ToString("N2")</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Total Transactions</div>
                <div class="summary-value">@totalCount</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">VAT (12%)</div>
                <div class="summary-value">₱@vatAmount.ToString("N2")</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Admin Fee (2%)</div>
                <div class="summary-value">₱@adminFeeAmount.ToString("N2")</div>
            </div>
        </div>
    </div>
</div>

@* Sales List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Sales Transactions</h3>
            <span class="card-subtitle">@totalCount sales found</span>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Sale Number</th>
                    <th>Amount</th>
                    <th>Payment Method</th>
                    <th>Cashier</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading sales...</td>
                    </tr>
                }
                else if (sales.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No sales found for this filter.</td>
                    </tr>
                }
                else
                {
                    @foreach (var sale in sales)
                    {
                        var cleanAmount = sale.Amount.ToString("N2");
                        <tr>
                            <td>@sale.SaleNumber</td>
                            <td style="text-align: right; font-weight: 600;">₱@cleanAmount</td>
                            <td>@sale.PaymentMethod</td>
                            <td>@sale.CashierName</td>
                            <td>
                                <div class="timestamp-info">
                                    <div class="timestamp-date">@sale.Timestamps.ToString("MMM dd, yyyy")</div>
                                    <div class="timestamp-time">@sale.Timestamps.ToString("HH:mm:ss")</div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@code {
    private List<IT13_Final.Services.Data.SaleReportModel> sales = new();
    private List<IT13_Final.Services.Data.SaleReportModel> allSalesForPrint = new();

    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private const bool onlyApprovedDays = true; // Default to only show approved daily sales verification

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private bool isGeneratingPDF = false;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);

    private decimal totalSalesAmount = 0m;
    private decimal vatAmount = 0m;
    private decimal adminFeeAmount = 0m;

    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadSales();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "accounting-sales-report-search-input");
        }
    }

    private async Task LoadSales()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Accounting: show all sales across cashiers, so cashierUserId = 0 means no filter
            // Only show approved daily sales verification by default
            const int allCashiers = 0;
            const bool onlyApprovedDays = true;
            totalCount = await SalesService.GetSalesCountForReportsAsync(allCashiers, searchTerm, startDate, endDate, onlyApprovedDays);
            sales = await SalesService.GetSalesForReportsAsync(allCashiers, searchTerm, startDate, endDate, onlyApprovedDays, currentPage, pageSize);

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                sales = await SalesService.GetSalesForReportsAsync(allCashiers, searchTerm, startDate, endDate, onlyApprovedDays, currentPage, pageSize);
            }

            totalSalesAmount = sales.Sum(s => s.Amount);
            
            // Calculate VAT (12% on total sales)
            vatAmount = totalSalesAmount * 0.12m;
            
            // Calculate Admin Fee (2% per product) - need to query sales_items
            await CalculateAdminFee();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sales for accounting: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sales reports. Please try again.");
            sales = new List<IT13_Final.Services.Data.SaleReportModel>();
            totalCount = 0;
            totalSalesAmount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleFromDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty;
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var value = date.Date;
            if (endDate.HasValue && value > endDate.Value)
            {
                await JSRuntime.InvokeVoidAsync("alert", "From date cannot be later than To date.");
                return;
            }
            startDate = value;
        }
        else
        {
            startDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleToDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty;
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var value = date.Date;
            if (startDate.HasValue && value < startDate.Value)
            {
                await JSRuntime.InvokeVoidAsync("alert", "To date cannot be earlier than From date.");
                return;
            }
            endDate = value;
        }
        else
        {
            endDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "last7days":
                startDate = today.AddDays(-7);
                endDate = today;
                break;
            case "last30days":
                startDate = today.AddDays(-30);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
        }
        await ApplyFilters();
    }

    private string GetDateRangeText()
    {
        if (!startDate.HasValue && !endDate.HasValue)
            return "All Time";
        if (startDate.HasValue && endDate.HasValue)
            return $"{startDate.Value:MMM d} - {endDate.Value:MMM d, yyyy}";
        return "Custom Range";
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = string.Empty;
        startDate = null;
        endDate = null;
        await ApplyFilters();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadSales();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }

        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(LoadSales);
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadSales();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadSales();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadSales();
        }
    }

    private async Task CalculateAdminFee()
    {
        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT SUM(si.subtotal) as total_revenue
                FROM dbo.tbl_sales_items si
                INNER JOIN dbo.tbl_sales s ON si.sale_id = s.id
                WHERE s.archives IS NULL
                AND si.archives IS NULL
                AND s.status = 'Completed'";

            if (startDate.HasValue)
            {
                sql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                sql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                sql += " AND s.sale_number LIKE @SearchTerm";
            }

            // Filter by approved daily sales verification
            if (onlyApprovedDays)
            {
                sql += @"
                    AND EXISTS (
                        SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                        WHERE dsv.cashier_user_id = s.user_id
                        AND CAST(dsv.sale_date AS DATE) = CAST(s.timestamps AS DATE)
                        AND dsv.status = 'Approved'
                        AND dsv.archived_at IS NULL)";
            }

            using var cmd = new SqlCommand(sql, conn);
            if (startDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                cmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }

            var result = await cmd.ExecuteScalarAsync();
            var totalRevenue = result != null && result != DBNull.Value ? Convert.ToDecimal(result) : 0m;
            adminFeeAmount = totalRevenue * 0.02m;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error calculating admin fee: {ex.Message}");
            adminFeeAmount = 0m;
        }
    }

    private async Task PrintReport()
    {
        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            const int allCashiers = 0;
            const bool onlyApprovedDays = true;
            allSalesForPrint = await SalesService.GetSalesForReportsAsync(
                allCashiers,
                searchTerm,
                startDate,
                endDate,
                onlyApprovedDays,
                1,
                10000);

            // Calculate totals for all sales
            var printTotalSales = allSalesForPrint.Sum(s => s.Amount);
            var printVat = printTotalSales * 0.12m;
            
            // Calculate admin fee for all sales
            var printAdminFee = 0m;
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = @"
                    SELECT SUM(si.subtotal) as total_revenue
                    FROM dbo.tbl_sales_items si
                    INNER JOIN dbo.tbl_sales s ON si.sale_id = s.id
                    WHERE s.archives IS NULL
                    AND si.archives IS NULL
                    AND s.status = 'Completed'";

                if (startDate.HasValue)
                {
                    sql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
                }

                if (endDate.HasValue)
                {
                    sql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
                }

                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    sql += " AND s.sale_number LIKE @SearchTerm";
                }

                // Filter by approved daily sales verification
                if (onlyApprovedDays)
                {
                    sql += @"
                        AND EXISTS (
                            SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                            WHERE dsv.cashier_user_id = s.user_id
                            AND CAST(dsv.sale_date AS DATE) = CAST(s.timestamps AS DATE)
                            AND dsv.status = 'Approved'
                            AND dsv.archived_at IS NULL)";
                }

                using var cmd = new SqlCommand(sql, conn);
                if (startDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                }
                if (endDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                }
                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    cmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
                }

                var result = await cmd.ExecuteScalarAsync();
                var totalRevenue = result != null && result != DBNull.Value ? Convert.ToDecimal(result) : 0m;
                printAdminFee = totalRevenue * 0.02m;
            }
            catch { }

            var reportData = new
            {
                title = "Sales Report (All Cashiers)",
                printedBy = AuthState.CurrentUser?.FullName ?? "Accounting",
                printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
                dateRange = GetDateRangeText(),
                
                kpi = new
                {
                    totalSales = printTotalSales.ToString("N2"),
                    totalTransactions = allSalesForPrint.Count.ToString(),
                    vat = printVat.ToString("N2"),
                    adminFee = printAdminFee.ToString("N2")
                },
                
                sales = allSalesForPrint.Select(sale => new
                {
                    saleNumber = sale.SaleNumber,
                    amount = sale.Amount.ToString("N2"),
                    paymentMethod = sale.PaymentMethod,
                    date = sale.Timestamps.ToString("MMM dd, yyyy"),
                    time = sale.Timestamps.ToString("HH:mm:ss"),
                    cashierName = sale.CashierName
                }).ToList()
            };

            await JSRuntime.InvokeVoidAsync("printSalesReports", reportData);

            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Accounting_Sales_Report",
                        $"Printed accounting sales report - {allSalesForPrint.Count} sales from {GetDateRangeText()}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating accounting sales report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}


