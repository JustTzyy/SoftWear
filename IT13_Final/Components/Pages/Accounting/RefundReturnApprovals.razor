@page "/accounting/approvals/refund-return"
@layout IT13_Final.Components.Layout.Accounting.Accounting
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.IReturnsService ReturnsService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@using Microsoft.Data.SqlClient
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Refund Return Approvals</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF" title="Print Report">
            @if (isGeneratingPDF)
            {
                <span>Generating...</span>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 9V2h12v7"></path>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
            }
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input type="text" 
               id="returns-approval-search-input"
               class="search-input" 
               placeholder="Search by return number or sale number..." 
               value="@searchTerm" 
               @oninput="HandleSearchInput" 
               @onkeypress="HandleSearchKeyPress" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="HandleClearSearch" title="Clear search">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date"
               class="date-input"
               value="@(startDate?.ToString("yyyy-MM-dd"))"
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleFromDateChange" />
        <span class="date-separator">to</span>
        <input type="date"
               class="date-input"
               value="@(endDate?.ToString("yyyy-MM-dd"))"
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleToDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
</div>

@* Summary Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Returns Summary</h3>
            <span class="card-subtitle">@totalCount total pending returns</span>
        </div>
    </div>
    
    <div class="card-body">
        <div class="summary-grid">
            <div class="summary-box">
                <div class="summary-label">Total Pending</div>
                <div class="summary-value">@totalCount</div>
            </div>
        </div>
    </div>
</div>

@* Returns List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Pending Returns</h3>
            <span class="card-subtitle">@totalCount returns found</span>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Return Number</th>
                    <th>Sale Number</th>
                    <th>Cashier</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="6" class="loading-cell">Loading pending returns...</td>
                    </tr>
                }
                else if (pendingReturns.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="empty-cell">No pending returns found for this filter.</td>
                    </tr>
                }
                else
                {
                    @foreach (var returnItem in pendingReturns)
                    {
                        <tr class="clickable-row" @onclick="() => ShowReturnDetails(returnItem.Id)">
                            <td class="return-number">@returnItem.ReturnNumber</td>
                            <td class="sale-number">@returnItem.SaleNumber</td>
                            <td>@returnItem.CashierName</td>
                            <td>
                                <div class="timestamp-info">
                                    <div class="timestamp-date">@returnItem.Timestamps.ToString("MMM dd, yyyy")</div>
                                    <div class="timestamp-time">@returnItem.Timestamps.ToString("HH:mm:ss")</div>
                                </div>
                            </td>
                            <td>
                                <span class="status-text status-text-pending">@returnItem.Status</span>
                            </td>
                            <td class="actions-cell" @onclick:stopPropagation="true">
                                <button class="action-btn approve-btn" @onclick='() => HandleApproveReturn(returnItem.Id)' title="Approve Return" disabled="@isProcessing">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <polyline points="20 6 9 17 4 12"></polyline>
                                    </svg>
                                </button>
                                <button class="action-btn cancel-btn" @onclick='() => HandleCancelReturn(returnItem.Id)' title="Cancel Return" disabled="@isProcessing">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M18 6 6 18"></path>
                                        <path d="m6 6 12 12"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Return Details Modal *@
@if (showReturnDetailsModal && selectedReturn != null)
{
    <div class="modal-overlay" @onclick="CloseReturnDetailsModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Return Details - @selectedReturn.ReturnNumber</h2>
                <button class="modal-close-btn" @onclick="CloseReturnDetailsModal" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="po-info">
                    <div class="info-row">
                        <span class="info-label">Return Number:</span>
                        <span class="info-value">@selectedReturn.ReturnNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Sale Number:</span>
                        <span class="info-value">@selectedReturn.SaleNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="info-value">
                            <span class="status-text status-text-pending">@selectedReturn.Status</span>
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date:</span>
                        <span class="info-value">@selectedReturn.Timestamps.ToString("MMM dd, yyyy HH:mm:ss")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Cashier:</span>
                        <span class="info-value">@selectedReturn.CashierName</span>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(selectedReturn.Reason))
                    {
                        <div class="info-row">
                            <span class="info-label">Reason:</span>
                            <span class="info-value">@selectedReturn.Reason</span>
                        </div>
                    }
                    @if (returnItems != null && returnItems.Count > 0)
                    {
                        <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                            <h4 style="margin-bottom: 16px; font-size: 16px; font-weight: 700; color: #1f2937;">Items</h4>
                            <div class="items-list">
                                @foreach (var item in returnItems)
                                {
                                    <div class="item-card">
                                        <div class="item-info">
                                            <div class="item-name">@item.ProductName - @item.VariantName</div>
                                            @if (!string.IsNullOrEmpty(item.SizeName))
                                            {
                                                <div class="item-attr">Size: @item.SizeName</div>
                                            }
                                            @if (!string.IsNullOrEmpty(item.ColorName))
                                            {
                                                <div class="item-attr">
                                                    Color: 
                                                    @if (!string.IsNullOrEmpty(item.ColorHexValue))
                                                    {
                                                        <span class="color-dot-small" style="background-color: @item.ColorHexValue;"></span>
                                                    }
                                                    @item.ColorName
                                                </div>
                                            }
                                            <div class="item-price">Quantity: @item.Quantity | Condition: @item.Condition</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                @if (selectedReturn.Status == "Pending")
                {
                    <button class="cancel-btn" @onclick="CloseReturnDetailsModal">Close</button>
                    <button class="save-admin-btn cancel-btn-style" @onclick='() => HandleCancelReturn(selectedReturn.Id)' disabled="@isProcessing">Cancel Return</button>
                    <button class="save-admin-btn" @onclick='() => HandleApproveReturn(selectedReturn.Id)' disabled="@isProcessing">Approve Return</button>
                }
                else
                {
                    <button class="cancel-btn" @onclick="CloseReturnDetailsModal">Close</button>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ReturnReportModel> pendingReturns = new();
    private List<IT13_Final.Services.Data.ReturnReportItemModel> returnItems = new();
    private IT13_Final.Services.Data.ReturnReportModel? selectedReturn;
    private bool isLoading = false;
    private bool isProcessing = false;
    private bool isGeneratingPDF = false;
    private bool showReturnDetailsModal = false;
    private string searchTerm = string.Empty;
    private List<IT13_Final.Services.Data.ReturnReportModel> allReturnsForPrint = new();
    private string selectedDateRange = string.Empty;
    private DateTime? startDate = null;
    private DateTime? endDate = null;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private int sellerUserId = 0;
    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadSellerUserId();
        await LoadPendingReturns();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "returns-approval-search-input");
            }
            catch { }
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadPendingReturns()
    {
        if (sellerUserId <= 0)
        {
            await LoadSellerUserId();
            if (sellerUserId <= 0)
            {
                isLoading = false;
                StateHasChanged();
                return;
            }
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            totalCount = await ReturnsService.GetPendingReturnsCountForAccountingAsync(
                sellerUserId,
                searchTerm,
                startDate,
                endDate
            );

            pendingReturns = await ReturnsService.GetPendingReturnsForAccountingAsync(
                sellerUserId,
                searchTerm,
                startDate,
                endDate,
                currentPage,
                pageSize
            );
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading returns: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ShowReturnDetails(int returnId)
    {
        if (sellerUserId <= 0)
        {
            await LoadSellerUserId();
            if (sellerUserId <= 0) return;
        }

        try
        {
            selectedReturn = await ReturnsService.GetReturnDetailsForAccountingAsync(returnId, sellerUserId);
            if (selectedReturn != null)
            {
                returnItems = await ReturnsService.GetReturnItemsForReportAsync(returnId);
                showReturnDetailsModal = true;
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading return details: {ex.Message}");
        }
    }

    private void CloseReturnDetailsModal()
    {
        showReturnDetailsModal = false;
        selectedReturn = null;
        returnItems.Clear();
        StateHasChanged();
    }

    private async Task HandleApproveReturn(int returnId)
    {
        if (AuthState.CurrentUser == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to approve this return? This will update inventory and sales records.");
        if (!confirmed) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            var success = await ReturnsService.UpdateReturnStatusAsync(returnId, "Approved", AuthState.CurrentUser.Id);

            if (success)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "approve",
                        "Returns",
                        $"Approved return: {pendingReturns.FirstOrDefault(r => r.Id == returnId)?.ReturnNumber ?? returnId.ToString()}"
                    );
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", "Return approved successfully! Inventory and sales records have been updated.");
                await LoadPendingReturns();
                CloseReturnDetailsModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to approve return. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error approving return: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task HandleCancelReturn(int returnId)
    {
        if (AuthState.CurrentUser == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to cancel this return request?");
        if (!confirmed) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            var success = await ReturnsService.UpdateReturnStatusAsync(returnId, "Cancelled", AuthState.CurrentUser.Id);

            if (success)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "cancel",
                        "Returns",
                        $"Cancelled return: {pendingReturns.FirstOrDefault(r => r.Id == returnId)?.ReturnNumber ?? returnId.ToString()}"
                    );
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", "Return cancelled successfully.");
                await LoadPendingReturns();
                CloseReturnDetailsModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to cancel return. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error cancelling return: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }

        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                currentPage = 1;
                await LoadPendingReturns();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadPendingReturns();
        }
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadPendingReturns();
        StateHasChanged();
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;
        
        switch (selectedDateRange)
        {
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "last7days":
                startDate = today.AddDays(-7);
                endDate = today;
                break;
            case "last30days":
                startDate = today.AddDays(-30);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
            default:
                // Custom - clear dates
                startDate = null;
                endDate = null;
                break;
        }
        
        try
        {
            if (AuthState.CurrentUser != null && !string.IsNullOrEmpty(selectedDateRange))
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "filter",
                    "Returns",
                    $"Changed date range filter to: {selectedDateRange}"
                );
            }
        }
        catch { }
        
        await ApplyFilters();
    }

    private void HandleFromDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            // Ensure fromDate is not after toDate
            if (endDate.HasValue && dateValue > endDate.Value)
            {
                // Don't allow fromDate to be set after toDate
                return;
            }
            startDate = dateValue;
        }
        else
        {
            startDate = null;
        }
    }

    private void HandleToDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            // Ensure toDate is not before fromDate
            if (startDate.HasValue && dateValue < startDate.Value)
            {
                // Don't allow toDate to be set before fromDate
                return;
            }
            endDate = dateValue;
        }
        else
        {
            endDate = null;
        }
    }

    private async Task ApplyDateFilter()
    {
        await ApplyFilters();
    }

    private async Task ClearDateFilter()
    {
        startDate = null;
        endDate = null;
        selectedDateRange = string.Empty;
        currentPage = 1;
        
        try
        {
            if (AuthState.CurrentUser != null)
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "filter",
                    "Returns",
                    "Cleared date filters"
                );
            }
        }
        catch { }
        
        await LoadPendingReturns();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadPendingReturns();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadPendingReturns();
        }
    }

    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            if (sellerUserId > 0)
            {
                // Get all pending returns for print (no pagination)
                allReturnsForPrint = await ReturnsService.GetPendingReturnsForAccountingAsync(
                    sellerUserId,
                    searchTerm,
                    startDate,
                    endDate,
                    1,
                    10000
                );

                await JSRuntime.InvokeVoidAsync("generateAndPrintReturnsApprovalsReport",
                    allReturnsForPrint.Select(r => new {
                        returnNumber = r.ReturnNumber,
                        saleNumber = r.SaleNumber,
                        cashierName = r.CashierName,
                        status = r.Status,
                        timestamps = r.Timestamps.ToString("MMM dd, yyyy"),
                        timeCreated = r.Timestamps.ToString("HH:mm:ss"),
                        reason = r.Reason ?? "N/A"
                    }).ToArray(),
                    AuthState.CurrentUser?.FullName ?? "Accounting",
                    startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                    endDate?.ToString("MMM dd, yyyy") ?? "Today"
                );
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}

