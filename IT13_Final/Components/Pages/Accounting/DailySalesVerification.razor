@page "/accounting/financial/daily-sales"
@layout IT13_Final.Components.Layout.Accounting.Accounting
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.IDailySalesVerificationService DailySalesVerificationService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@using Microsoft.Data.SqlClient
@using System.Linq
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Daily Sales Verification</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF" title="Print Report">
            @if (isGeneratingPDF)
            {
                <span>Generating...</span>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 9V2h12v7"></path>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
            }
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.35-4.35"></path>
        </svg>
        <input type="text" id="daily-sales-search-input" class="search-input" placeholder="Search by cashier name..." @bind="searchTerm" @bind:event="oninput" @bind:after="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="HandleClearSearch" title="Clear">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date" 
               class="date-input" 
               value="@(startDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@(endDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" 
               @onchange="HandleFromDateChange" />
        <span class="date-separator">to</span>
        <input type="date" 
               class="date-input" 
               value="@(endDate?.ToString("yyyy-MM-dd"))" 
               min="@(startDate?.ToString("yyyy-MM-dd"))" 
               max="@DateTime.Today.ToString("yyyy-MM-dd")" 
               @onchange="HandleToDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }
    </div>
</div>

@* Summary Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Daily Sales Summary</h3>
            <span class="card-subtitle">@totalCount total reports</span>
        </div>
    </div>
    
    <div class="card-body">
        <div class="summary-grid">
            <div class="summary-box">
                <div class="summary-label">Total Reports</div>
                <div class="summary-value">@totalCount</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Total Sales</div>
                <div class="summary-value">₱@FormatCompactNumber(totalSales)</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Total Transactions</div>
                <div class="summary-value">@totalTransactions.ToString("N0")</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Pending</div>
                <div class="summary-value">@pendingCount</div>
            </div>
        </div>
    </div>
</div>

@* Daily Sales List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Daily Sales Reports</h3>
            <span class="card-subtitle">@totalCount reports found</span>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
                <thead>
                    <tr>
                        <th>Cashier</th>
                        <th>Total Sales</th>
                        <th>Returns</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (isLoading)
                    {
                        <tr>
                            <td colspan="4" class="loading-cell">Loading daily sales reports...</td>
                        </tr>
                    }
                    else if (pendingDailySales.Count == 0)
                    {
                        <tr>
                            <td colspan="4" class="empty-cell">No daily sales reports found for this filter.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var report in pendingDailySales)
                        {
                            <tr class="clickable-row" @onclick="async () => await ShowDailySalesDetails(report.CashierUserId, report.SaleDate)">
                                <td>@report.CashierName</td>
                                <td style="text-align: right; font-weight: 600;">₱@report.TotalSales.ToString("N2")</td>
                                <td style="text-align: right;">
                                    @if (report.ReturnCount > 0)
                                    {
                                        <span style="color: #dc3545;">@report.ReturnCount (₱@report.TotalReturns.ToString("N2"))</span>
                                    }
                                    else
                                    {
                                        <span>0</span>
                                    }
                                </td>
                                <td>
                                    <span style="color: @(report.Status == "Verified" ? "#065F46" : report.Status == "Rejected" ? "#991B1B" : "#D97706"); font-weight: 600;">@report.Status</span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Daily Sales Details Modal *@
@if (showDetailsModal && selectedDailySales != null)
{
    <div class="modal-overlay" @onclick="CloseDetailsModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Daily Sales Report Details - @selectedDailySales.CashierName</h2>
                <button class="modal-close-btn" @onclick="CloseDetailsModal" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="po-info">
                    <div class="info-row">
                        <span class="info-label">Cashier:</span>
                        <span class="info-value">@selectedDailySales.CashierName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date:</span>
                        <span class="info-value">@selectedDailySales.SaleDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="info-value">
                            <span style="color: @(selectedDailySales.Status == "Verified" ? "#065F46" : selectedDailySales.Status == "Rejected" ? "#991B1B" : "#D97706"); font-weight: 600;">@selectedDailySales.Status</span>
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Total Sales:</span>
                        <span class="info-value">₱@selectedDailySales.TotalSales.ToString("N2")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Total Transactions:</span>
                        <span class="info-value">@selectedDailySales.TotalTransactions</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Cash:</span>
                        <span class="info-value">₱@selectedDailySales.CashAmount.ToString("N2")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">GCash:</span>
                        <span class="info-value">₱@selectedDailySales.GCashAmount.ToString("N2")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Returns:</span>
                        <span class="info-value">
                            @if (selectedDailySales.ReturnCount > 0)
                            {
                                <span style="color: #dc3545;">@selectedDailySales.ReturnCount (₱@selectedDailySales.TotalReturns.ToString("N2"))</span>
                            }
                            else
                            {
                                <span>0</span>
                            }
                        </span>
                    </div>

                    @if (selectedDailySales.PaymentBreakdown != null && selectedDailySales.PaymentBreakdown.Count > 0)
                    {
                        <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                            <h4 style="margin-bottom: 16px; font-size: 16px; font-weight: 700; color: #1f2937;">Payment Method Breakdown</h4>
                            <table class="po-items-table">
                                <thead>
                                    <tr>
                                        <th>Payment Method</th>
                                        <th>Count</th>
                                        <th>Total Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in selectedDailySales.PaymentBreakdown)
                                    {
                                        <tr>
                                            <td>@payment.PaymentMethod</td>
                                            <td style="text-align: right;">@payment.Count</td>
                                            <td style="text-align: right;">₱@payment.TotalAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (selectedDailySales.Sales != null && selectedDailySales.Sales.Count > 0)
                    {
                        <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                            <h4 style="margin-bottom: 16px; font-size: 16px; font-weight: 700; color: #1f2937;">Sales Transactions</h4>
                            <table class="po-items-table">
                                <thead>
                                    <tr>
                                        <th>Sale Number</th>
                                        <th>Amount</th>
                                        <th>Payment Method</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sale in selectedDailySales.Sales)
                                    {
                                        <tr>
                                            <td>@sale.SaleNumber</td>
                                            <td style="text-align: right;">₱@sale.Amount.ToString("N2")</td>
                                            <td>@sale.PaymentMethod</td>
                                            <td>@sale.Timestamps.ToString("HH:mm:ss")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @if (selectedDailySales.Returns != null && selectedDailySales.Returns.Count > 0)
                    {
                        <div style="margin-top: 24px; padding-top: 24px; border-top: 1px solid #e5e7eb;">
                            <h4 style="margin-bottom: 16px; font-size: 16px; font-weight: 700; color: #1f2937;">Returns</h4>
                            <table class="po-items-table">
                                <thead>
                                    <tr>
                                        <th>Return Number</th>
                                        <th>Sale Number</th>
                                        <th>Reason</th>
                                        <th>Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var returnItem in selectedDailySales.Returns)
                                    {
                                        <tr>
                                            <td>@returnItem.ReturnNumber</td>
                                            <td>@returnItem.SaleNumber</td>
                                            <td>@(string.IsNullOrEmpty(returnItem.Reason) ? "N/A" : returnItem.Reason)</td>
                                            <td>@returnItem.Timestamps.ToString("HH:mm:ss")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                @if (selectedDailySales.Status == "Pending")
                {
                    <button class="cancel-btn" @onclick="CloseDetailsModal">Close</button>
                    <button class="save-admin-btn cancel-btn-style" @onclick='() => HandleRejectDailySales(selectedDailySales.CashierUserId, selectedDailySales.SaleDate)' disabled="@isProcessing">Reject</button>
                    <button class="save-admin-btn" @onclick='() => HandleApproveDailySales(selectedDailySales.CashierUserId, selectedDailySales.SaleDate)' disabled="@isProcessing">Approve</button>
                }
                else
                {
                    <button class="cancel-btn" @onclick="CloseDetailsModal">Close</button>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.DailySalesVerificationModel> pendingDailySales = new();
    private IT13_Final.Services.Data.DailySalesVerificationDetailsModel? selectedDailySales;
    private bool isLoading = false;
    private bool isProcessing = false;
    private bool isGeneratingPDF = false;
    private bool showDetailsModal = false;
    private string searchTerm = string.Empty;
    private string selectedDateRange = string.Empty;
    private DateTime? startDate = null;
    private DateTime? endDate = null;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private int sellerUserId = 0;
    private System.Threading.Timer? _searchTimer;

    // KPI values
    private decimal totalSales = 0;
    private int totalTransactions = 0;
    private int pendingCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadSellerUserId();
        await LoadPendingDailySales();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "daily-sales-search-input");
            }
            catch { }
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadPendingDailySales()
    {
        if (sellerUserId <= 0)
        {
            await LoadSellerUserId();
            if (sellerUserId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("console.error", "Seller User ID not found. Please ensure your accounting user is properly linked to a seller.");
                isLoading = false;
                StateHasChanged();
                return;
            }
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Debug: Log sellerUserId
            await JSRuntime.InvokeVoidAsync("console.log", $"Loading daily sales - SellerUserId: {sellerUserId}, SearchTerm: '{searchTerm}', StartDate: {startDate?.ToString() ?? "null"}, EndDate: {endDate?.ToString() ?? "null"}");

            if (sellerUserId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("console.error", "ERROR: SellerUserId is 0 or invalid! Cannot load data.");
                await JSRuntime.InvokeVoidAsync("alert", "Error: Your accounting account is not properly linked to a seller. Please contact your administrator.");
                return;
            }

            totalCount = await DailySalesVerificationService.GetPendingDailySalesCountForAccountingAsync(
                sellerUserId,
                searchTerm,
                startDate,
                endDate
            );

            await JSRuntime.InvokeVoidAsync("console.log", $"Total count: {totalCount}");

            if (totalCount == 0)
            {
                await JSRuntime.InvokeVoidAsync("console.warn", "No daily sales found. Possible reasons:");
                await JSRuntime.InvokeVoidAsync("console.warn", "1. No sales with status='Completed' exist");
                await JSRuntime.InvokeVoidAsync("console.warn", "2. Cashiers don't have user_id matching seller");
                await JSRuntime.InvokeVoidAsync("console.warn", "3. Date filters are excluding all data");
            }

            pendingDailySales = await DailySalesVerificationService.GetPendingDailySalesForAccountingAsync(
                sellerUserId,
                searchTerm,
                startDate,
                endDate,
                currentPage,
                pageSize
            );

            // Calculate KPIs
            totalSales = pendingDailySales.Sum(r => r.TotalSales);
            totalTransactions = pendingDailySales.Sum(r => r.TotalTransactions);
            pendingCount = pendingDailySales.Count(r => r.Status == "Pending");

            await JSRuntime.InvokeVoidAsync("console.log", $"Loaded {pendingDailySales.Count} daily sales reports");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading daily sales: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("console.error", $"Stack trace: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ShowDailySalesDetails(int cashierUserId, DateTime saleDate)
    {
        try
        {
            if (sellerUserId <= 0)
            {
                await LoadSellerUserId();
                if (sellerUserId <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Seller ID not found. Cannot load daily sales details.");
                    return;
                }
            }

            selectedDailySales = await DailySalesVerificationService.GetDailySalesDetailsForAccountingAsync(
                cashierUserId,
                saleDate,
                sellerUserId
            );

            if (selectedDailySales != null)
            {
                showDetailsModal = true;
                StateHasChanged();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Daily sales details not found or you do not have permission to view it.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading daily sales details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading daily sales details: {ex.Message}");
        }
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedDailySales = null;
        StateHasChanged();
    }

    private async Task HandleApproveDailySales(int cashierUserId, DateTime saleDate)
    {
        if (AuthState.CurrentUser == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to approve this daily sales report?");
        if (!confirmed) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            if (sellerUserId <= 0)
            {
                await LoadSellerUserId();
                if (sellerUserId <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Seller ID not found.");
                    return;
                }
            }

            var success = await DailySalesVerificationService.ApproveDailySalesAsync(
                cashierUserId,
                saleDate,
                AuthState.CurrentUser.Id,
                sellerUserId
            );

            if (success)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "approve",
                        "DailySalesVerification",
                        $"Approved daily sales report for cashier ID {cashierUserId} on {saleDate:yyyy-MM-dd}"
                    );
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", "Daily sales report approved successfully!");
                await LoadPendingDailySales();
                CloseDetailsModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to approve daily sales report. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error approving daily sales report: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private async Task HandleRejectDailySales(int cashierUserId, DateTime saleDate)
    {
        if (AuthState.CurrentUser == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to reject this daily sales report?");
        if (!confirmed) return;

        isProcessing = true;
        StateHasChanged();

        try
        {
            if (sellerUserId <= 0)
            {
                await LoadSellerUserId();
                if (sellerUserId <= 0)
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Seller ID not found.");
                    return;
                }
            }

            var success = await DailySalesVerificationService.RejectDailySalesAsync(
                cashierUserId,
                saleDate,
                AuthState.CurrentUser.Id,
                sellerUserId
            );

            if (success)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "reject",
                        "DailySalesVerification",
                        $"Rejected daily sales report for cashier ID {cashierUserId} on {saleDate:yyyy-MM-dd}"
                    );
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", "Daily sales report rejected.");
                await LoadPendingDailySales();
                CloseDetailsModal();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to reject daily sales report. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error rejecting daily sales report: {ex.Message}");
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }

        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                currentPage = 1;
                await LoadPendingDailySales();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadPendingDailySales();
        }
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadPendingDailySales();
        StateHasChanged();
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;

        switch (selectedDateRange)
        {
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "last7days":
                startDate = today.AddDays(-7);
                endDate = today;
                break;
            case "last30days":
                startDate = today.AddDays(-30);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
            default:
                startDate = null;
                endDate = null;
                break;
        }

        try
        {
            if (AuthState.CurrentUser != null && !string.IsNullOrEmpty(selectedDateRange))
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "filter",
                    "DailySalesVerification",
                    $"Changed date range filter to: {selectedDateRange}"
                );
            }
        }
        catch { }

        await ApplyFilters();
    }

    private void HandleFromDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty;
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            if (endDate.HasValue && dateValue > endDate.Value)
            {
                return;
            }
            startDate = dateValue;
        }
        else
        {
            startDate = null;
        }
    }

    private void HandleToDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty;
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            if (startDate.HasValue && dateValue < startDate.Value)
            {
                return;
            }
            endDate = dateValue;
        }
        else
        {
            endDate = null;
        }
    }

