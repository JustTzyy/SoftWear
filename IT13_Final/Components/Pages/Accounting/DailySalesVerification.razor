    private string GetDateRangeText()
    {
        if (!startDate.HasValue && !endDate.HasValue)
            return "All Time";
        if (startDate.HasValue && endDate.HasValue)
            return $"{startDate.Value:MMM d} - {endDate.Value:MMM d, yyyy}";
        return "Custom Range";
    }

    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            if (AuthState.CurrentUser != null)
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "print",
                    "DailySalesVerification",
                    "Printed daily sales verification report"
                );
            }

            // Get all reports for print (no pagination)
            var allReportsForPrint = await DailySalesVerificationService.GetPendingDailySalesForAccountingAsync(
                sellerUserId,
                searchTerm,
                startDate,
                endDate,
                1,
                10000
            );

            // Calculate KPIs for all reports
            var printTotalSales = allReportsForPrint.Sum(r => r.TotalSales);
            var printTotalTransactions = allReportsForPrint.Sum(r => r.TotalTransactions);
            var printPendingCount = allReportsForPrint.Count(r => r.Status == "Pending");

            var reportData = new
            {
                title = "Daily Sales Verification Report",
                printedBy = AuthState.CurrentUser?.FullName ?? "Accounting",
                printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
                dateRange = GetDateRangeText(),
                
                kpi = new
                {
                    totalReports = allReportsForPrint.Count.ToString(),
                    totalSales = printTotalSales.ToString("N2"),
                    totalTransactions = printTotalTransactions.ToString("N0"),
                    pendingCount = printPendingCount.ToString()
                },
                
                reports = allReportsForPrint.Select(r => new
                {
                    cashierName = r.CashierName,
                    date = r.SaleDate.ToString("MMM dd, yyyy"),
                    totalSales = r.TotalSales.ToString("N2"),
                    transactions = r.TotalTransactions.ToString(),
                    cash = r.CashAmount.ToString("N2"),
                    gcash = r.GCashAmount.ToString("N2"),
                    returns = r.ReturnCount.ToString(),
                    totalReturns = r.TotalReturns.ToString("N2"),
                    status = r.Status,
                    verifiedBy = r.VerifiedByName ?? "",
                    verifiedAt = r.VerifiedAt?.ToString("MMM dd, yyyy HH:mm") ?? ""
                }).ToList()
            };

            await JSRuntime.InvokeVoidAsync("printDailySalesVerification", reportData);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

