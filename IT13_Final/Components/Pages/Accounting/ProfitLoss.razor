@page "/accounting/reports/profit-loss"
@layout IT13_Final.Components.Layout.Accounting.Accounting
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.IIncomeBreakdownService IncomeBreakdownService
@inject IT13_Final.Services.Data.IExpenseService ExpenseService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@using Microsoft.Data.SqlClient
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Profit & Loss Statement</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF" title="Print Statement">
            @if (isGeneratingPDF)
            {
                <span>Generating...</span>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 9V2h12v7"></path>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
            }
        </button>
    </div>
</div>

@* Date Filters *@
<div class="dashboard-filters">
    <div class="date-filters" style="margin-left: auto;">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date" 
               class="date-input" 
               value="@(startDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleFromDateChange" />
        <span class="date-separator">to</span>
        <input type="date" 
               class="date-input" 
               value="@(endDate?.ToString("yyyy-MM-dd"))" 
               min="@(startDate?.ToString("yyyy-MM-dd") ?? DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd"))"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleToDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearAllFilters" title="Clear Filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        }
    </div>
</div>

@if (isLoading)
{
    <div class="content-card">
        <div class="card-body">
            <div class="loading-cell">Loading profit &amp; loss data...</div>
        </div>
    </div>
}
else
{
    @* Summary Card *@
    <div class="content-card">
        <div class="card-header">
            <div class="card-title-section">
                <h3 class="card-title">Financial Summary</h3>
                <span class="card-subtitle">@GetDateRangeText()</span>
            </div>
        </div>
        
        <div class="card-body">
            <div class="summary-grid">
                <div class="summary-box">
                    <div class="summary-label">Gross Sales</div>
                    <div class="summary-value">₱@grossSales.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">Returns</div>
                    <div class="summary-value" style="color: #dc3545;">₱@returns.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">Net Sales</div>
                    <div class="summary-value">₱@netSales.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">Total Expenses</div>
                    <div class="summary-value" style="color: #dc3545;">₱@totalExpenses.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">Net Profit / (Loss)</div>
                    <div class="summary-value" style="color: @(netProfit >= 0 ? "#28a745" : "#dc3545");">₱@netProfit.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">VAT (12%)</div>
                    <div class="summary-value">₱@vatAmount.ToString("N2")</div>
                </div>
                <div class="summary-box">
                    <div class="summary-label">Admin Fee (2%)</div>
                    <div class="summary-value">₱@adminFeeAmount.ToString("N2")</div>
                </div>
            </div>
        </div>
    </div>

    @* Profit & Loss Statement Card *@
    <div class="content-card">
        <div class="card-header">
            <div class="card-title-section">
                <h3 class="card-title">Profit & Loss Statement</h3>
                <span class="card-subtitle">@GetDateRangeText()</span>
            </div>
        </div>
        
        <div class="card-body">
            <div class="profit-loss-columns">
                <div class="profit-loss-column">
                    <h3 class="section-header">Income</h3>
                    <ul class="simple-list">
                        <li>
                            <span>Gross Sales</span>
                            <span class="amount-value">₱@grossSales.ToString("N2")</span>
                        </li>
                        <li>
                            <span>Less: Returns</span>
                            <span class="amount-value" style="color: #dc3545;">₱@returns.ToString("N2")</span>
                        </li>
                        <li class="total-row">
                            <span>Net Sales</span>
                            <span class="amount-value">₱@netSales.ToString("N2")</span>
                        </li>
                    </ul>
                </div>

                <div class="profit-loss-column">
                    <h3 class="section-header">Expenses (by Type)</h3>
                    <ul class="simple-list">
                        @if (expenseBreakdown.Count == 0)
                        {
                            <li>
                                <span>No expenses for this range.</span>
                                <span>₱0.00</span>
                            </li>
                        }
                        else
                        {
                            @foreach (var row in filteredExpenseBreakdown)
                            {
                                <li>
                                    <span>@row.Type</span>
                                    <span class="amount-value" style="color: #dc3545;">₱@row.Total.ToString("N2")</span>
                                </li>
                            }
                            <li class="total-row">
                                <span>Total Expenses</span>
                                <span class="amount-value" style="color: #dc3545;">₱@totalExpenses.ToString("N2")</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            
            <div class="net-profit-section">
                <div class="net-profit-box @(netProfit >= 0 ? "profit" : "loss")">
                    <span class="net-profit-label">Net Profit / (Loss)</span>
                    <span class="net-profit-value">₱@netProfit.ToString("N2")</span>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private class ExpenseRow
    {
        public string Type { get; set; } = string.Empty;
        public decimal Total { get; set; }
    }

    private bool isLoading = false;
    private bool isGeneratingPDF = false;
    private string searchTerm = string.Empty;

    private int sellerUserId = 0;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private bool onlyApprovedDays = true; // Default to only show approved daily sales verification

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;
    private System.Threading.Timer? _searchTimer;

    private decimal grossSales;
    private decimal returns;
    private decimal netSales;
    private decimal totalExpenses;
    private decimal supplierPaymentsTotal;
    private decimal netProfit;
    private decimal vatAmount = 0m;
    private decimal adminFeeAmount = 0m;

    private List<ExpenseRow> expenseBreakdown = new();
    private List<ExpenseRow> filteredExpenseBreakdown => expenseBreakdown
        .Where(e => string.IsNullOrWhiteSpace(searchTerm) || 
                    e.Type.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await LoadSellerUserId();
        await LoadData();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "profit-loss-search-input");
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadData()
    {
        if (sellerUserId <= 0)
        {
            await LoadSellerUserId();
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Income side
            var income = await IncomeBreakdownService.GetIncomeBreakdownAsync(
                sellerUserId,
                startDate,
                endDate,
                onlyApprovedDays
            );

            grossSales = income.TotalGrossSales;
            returns = income.TotalReturns;
            // Gross Profit = Gross Sales - Returns
            var grossProfit = grossSales - returns;
            netSales = income.NetIncome; // This is already Gross Sales - Returns

            // Calculate VAT (12% on gross sales)
            vatAmount = grossSales * 0.12m;

            // Calculate Admin Fee (2% per product)
            await CalculateAdminFee();

            // Expenses side: regular expenses
            var allExpenses = await ExpenseService.GetExpensesAsync(
                sellerUserId,
                searchTerm: null,
                expenseType: null,
                startDate,
                endDate,
                page: 1,
                pageSize: 10000
            );

            var regularExpensesTotal = allExpenses.Sum(e => e.Amount);

            expenseBreakdown = allExpenses
                .GroupBy(e => e.ExpenseType)
                .Select(g => new ExpenseRow
                {
                    Type = g.Key,
                    Total = g.Sum(x => x.Amount)
                })
                .OrderByDescending(r => r.Total)
                .ToList();

            // Supplier payments as additional expense line
            supplierPaymentsTotal = 0m;
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = @"
                    SELECT COALESCE(SUM(sp.amount_paid), 0)
                    FROM dbo.tbl_supplier_payments sp
                    WHERE sp.archived_at IS NULL
                    AND sp.seller_user_id = @SellerUserId";

                if (startDate.HasValue)
                {
                    sql += " AND sp.payment_date >= @StartDate";
                }
                if (endDate.HasValue)
                {
                    sql += " AND sp.payment_date <= @EndDate";
                }

                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
                if (startDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                }
                if (endDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                }

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    supplierPaymentsTotal = Convert.ToDecimal(result);
                }
            }
            catch
            {
                supplierPaymentsTotal = 0m;
            }

            if (supplierPaymentsTotal > 0)
            {
                expenseBreakdown.Add(new ExpenseRow
                {
                    Type = "Supplier Payments",
                    Total = supplierPaymentsTotal
                });

                expenseBreakdown = expenseBreakdown
                    .OrderByDescending(r => r.Total)
                    .ToList();
            }

            totalExpenses = regularExpensesTotal + supplierPaymentsTotal;

            // Net Profit = Gross Profit (Gross Sales - Returns) - Total Expenses
            netProfit = grossProfit - totalExpenses;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading Profit & Loss data: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading Profit & Loss: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CalculateAdminFee()
    {
        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT SUM(si.subtotal) as total_revenue
                FROM dbo.tbl_sales_items si
                INNER JOIN dbo.tbl_sales s ON si.sale_id = s.id
                INNER JOIN dbo.tbl_users u ON s.user_id = u.id
                WHERE s.archives IS NULL
                AND si.archives IS NULL
                AND s.status = 'Completed'
                AND u.archived_at IS NULL";

            if (sellerUserId > 0)
            {
                sql += " AND u.user_id = @SellerUserId";
            }

            if (startDate.HasValue)
            {
                sql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                sql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            if (onlyApprovedDays)
            {
                sql += @"
                    AND EXISTS (
                        SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                        WHERE dsv.cashier_user_id = s.user_id
                        AND dsv.sale_date = CAST(s.timestamps AS DATE)
                        AND dsv.status = 'Approved'
                        AND dsv.archived_at IS NULL";
                if (sellerUserId > 0)
                {
                    sql += " AND dsv.seller_user_id = @SellerUserId";
                }
                sql += ")";
            }

            using var cmd = new SqlCommand(sql, conn);
            if (sellerUserId > 0)
            {
                cmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
            }
            if (startDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var result = await cmd.ExecuteScalarAsync();
            var totalRevenue = result != null && result != DBNull.Value ? Convert.ToDecimal(result) : 0m;
            adminFeeAmount = totalRevenue * 0.02m;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error calculating admin fee: {ex.Message}");
            adminFeeAmount = 0m;
        }
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "last7days":
                startDate = today.AddDays(-6);
                endDate = today;
                break;
            case "last30days":
                startDate = today.AddDays(-29);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
        }
        await LoadData();
        StateHasChanged();
    }

    private async Task HandleFromDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString()?.Trim();
        if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
        }
        else if (DateTime.TryParseExact(value, "MM/dd/yyyy", null, System.Globalization.DateTimeStyles.None, out var exactDate))
        {
            startDate = exactDate.Date;
        }
        else if (DateTime.TryParseExact(value, "M/d/yyyy", null, System.Globalization.DateTimeStyles.None, out var shortDate))
        {
            startDate = shortDate.Date;
        }
        else if (DateTime.TryParse(value, out var date))
        {
            startDate = date.Date;
        }
        else
        {
            return;
        }
        
        selectedDateRange = "";
        await LoadData();
        StateHasChanged();
    }

    private async Task HandleToDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString()?.Trim();
        if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
        }
        else if (DateTime.TryParseExact(value, "MM/dd/yyyy", null, System.Globalization.DateTimeStyles.None, out var exactDate))
        {
            endDate = exactDate.Date;
        }
        else if (DateTime.TryParseExact(value, "M/d/yyyy", null, System.Globalization.DateTimeStyles.None, out var shortDate))
        {
            endDate = shortDate.Date;
        }
        else if (DateTime.TryParse(value, out var date))
        {
            endDate = date.Date;
        }
        else
        {
            return;
        }
        
        selectedDateRange = "";
        await LoadData();
        StateHasChanged();
    }

    private string GetDateRangeText()
    {
        if (!startDate.HasValue && !endDate.HasValue)
            return "All Time";
        if (startDate.HasValue && endDate.HasValue)
            return $"{startDate.Value:MMM d} - {endDate.Value:MMM d, yyyy}";
        return "Custom Range";
    }

    private async Task ClearFilters()
    {
        startDate = null;
        endDate = null;
        selectedDateRange = string.Empty;
        onlyApprovedDays = true; // Keep default to only show approved daily sales verification
        await LoadData();
    }

    private async Task ClearAllFilters()
    {
        searchTerm = string.Empty;
        startDate = null;
        endDate = null;
        selectedDateRange = string.Empty;
        onlyApprovedDays = true;
        await LoadData();
        StateHasChanged();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        StateHasChanged();
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        StateHasChanged();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            StateHasChanged();
        }
    }

    private async Task HandleApprovedDaysChanged()
    {
        await LoadData();
    }

    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var reportData = new
            {
                title = "Profit & Loss Statement",
                printedBy = AuthState.CurrentUser?.FullName ?? "Accounting",
                printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
                dateRange = GetDateRangeText(),
                
                summary = new
                {
                    grossSales = grossSales.ToString("N2"),
                    returns = returns.ToString("N2"),
                    netSales = netSales.ToString("N2"),
                    totalExpenses = totalExpenses.ToString("N2"),
                    netProfit = netProfit.ToString("N2"),
                    vat = vatAmount.ToString("N2"),
                    adminFee = adminFeeAmount.ToString("N2")
                },
                
                income = new
                {
                    grossSales = grossSales.ToString("N2"),
                    returns = returns.ToString("N2"),
                    netSales = netSales.ToString("N2")
                },
                
                expenses = expenseBreakdown.Select(e => new
                {
                    type = e.Type,
                    amount = e.Total.ToString("N2")
                }).ToArray()
            };

            await JSRuntime.InvokeVoidAsync("printProfitLoss", reportData);

            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Profit_Loss_Statement",
                        $"Printed Profit & Loss Statement from {GetDateRangeText()}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing Profit & Loss: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}


