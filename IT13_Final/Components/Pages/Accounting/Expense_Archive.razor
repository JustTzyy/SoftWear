                </div>
            </div>

            <div class="modal-footer">
                <button class="close-btn" @onclick="CloseExpenseDetails">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                    <span>Close</span>
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ArchivedExpenseModel> archivedExpenses = new();
    private List<IT13_Final.Services.Data.ArchivedExpenseModel> allFilteredArchived = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private bool isProcessing = false;
    private int sellerUserId = 0;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;
    private bool showExpenseDetails = false;
    private IT13_Final.Services.Data.ArchivedExpenseModel? expenseDetails = null;

    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || filterStartDate.HasValue || filterEndDate.HasValue;

    protected override async Task OnInitializedAsync()
    {
        await LoadSellerUserId();
        await LoadArchivedExpensesAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "expense-archive-search-input");
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadArchivedExpensesAsync()
    {
        if (sellerUserId <= 0)
        {
            await LoadSellerUserId();
            if (sellerUserId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("console.error", "Seller User ID not found.");
                isLoading = false;
                StateHasChanged();
                return;
            }
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all archived expenses matching search term first
            var allArchived = await ExpenseService.GetArchivedExpensesAsync(
                sellerUserId,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
                1,
                10000
            );
            
            // Apply date filter client-side (filter by ArchivedAt)
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredArchived = allArchived.Where(e =>
                {
                    var archivedDate = e.ArchivedAt.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date && archivedDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return archivedDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredArchived = allArchived;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredArchived.Count;
            
            // Apply pagination to filtered results
            archivedExpenses = allFilteredArchived
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading archived expenses: {ex.Message}");
            archivedExpenses = new List<IT13_Final.Services.Data.ArchivedExpenseModel>();
            allFilteredArchived = new List<IT13_Final.Services.Data.ArchivedExpenseModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshData()
    {
        currentPage = 1;
        await LoadArchivedExpensesAsync();
    }

    // Debounce search to avoid too many queries
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadArchivedExpensesAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadArchivedExpensesAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadArchivedExpensesAsync();
            }
        }
    }

    private void NavigateToExpenses()
    {
        Nav.NavigateTo("/accounting/financial/expenses");
    }

    private async Task HandleRowClick(int expenseId)
    {
        showExpenseDetails = true;
        StateHasChanged();

        try
        {
            expenseDetails = archivedExpenses.FirstOrDefault(e => e.Id == expenseId);
        }
        catch
        {
            expenseDetails = null;
        }
        
        StateHasChanged();
    }

    private void CloseExpenseDetails()
    {
        showExpenseDetails = false;
        expenseDetails = null;
        StateHasChanged();
    }

    private async Task HandleRestore(int expenseId)
    {
        // Get the expense for the confirmation dialog
        var expense = archivedExpenses.FirstOrDefault(e => e.Id == expenseId);
        var expenseType = expense?.ExpenseType ?? "this expense";
        
        // Show confirmation dialog
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore {expenseType}?");
        
        if (!confirmed)
        {
            return; // User cancelled
        }
        
        isProcessing = true;
        StateHasChanged();
        
        try
        {
            var success = await ExpenseService.RestoreExpenseAsync(expenseId, sellerUserId);
            
            if (success)
            {
                // Refresh the list to remove the restored expense
                await LoadArchivedExpensesAsync();
                
                // Show success message
                successMessageText = "Expense restored successfully!";
                showSuccessMessage = true;
                
                // Set timer to hide success message after 5 seconds
                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error - could show an error message here
        }
        finally
        {
            isProcessing = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
        _successBannerTimer?.Dispose();
    }

    // Date filter methods
    private void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterStartDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterStartDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterEndDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterEndDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                filterStartDate = null;
                filterEndDate = null;
                break;
            case "today":
                filterStartDate = now.Date;
                filterEndDate = now.Date;
                break;
            case "yesterday":
                filterStartDate = now.Date.AddDays(-1);
                filterEndDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                filterStartDate = now.Date.AddDays(-6);
                filterEndDate = now.Date;
                break;
            case "last30days":
                filterStartDate = now.Date.AddDays(-29);
                filterEndDate = now.Date;
                break;
            case "thismonth":
                filterStartDate = new DateTime(now.Year, now.Month, 1);
                filterEndDate = now.Date;
                break;
            case "thisyear":
                filterStartDate = new DateTime(now.Year, 1, 1);
                filterEndDate = now.Date;
                break;
        }
        _ = LoadArchivedExpensesAsync();
    }

    private async Task ApplyDateFilter()
    {
        currentPage = 1;
        await LoadArchivedExpensesAsync();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        filterStartDate = null;
        filterEndDate = null;
        currentPage = 1;
        await LoadArchivedExpensesAsync();
    }

    private string GetDateRangeText()
    {
        if (filterStartDate.HasValue && filterEndDate.HasValue)
        {
            return $"{filterStartDate.Value:MM/dd/yyyy} - {filterEndDate.Value:MM/dd/yyyy}";
        }
        else if (filterStartDate.HasValue)
        {
            return $"From {filterStartDate.Value:MM/dd/yyyy}";
        }
        else if (filterEndDate.HasValue)
        {
            return $"Until {filterEndDate.Value:MM/dd/yyyy}";
        }
        return "All Time";
    }

    private async Task PrintArchivedExpenses()
    {
        var currentUserName = AuthState.CurrentUser?.FullName ?? "Accountant";
        
        var reportData = new
        {
            title = "Archived Expense Records Report",
            printedBy = currentUserName,
            printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
            dateRange = GetDateRangeText(),
            totalCount = allFilteredArchived.Count,
            records = allFilteredArchived.Select(e => new
            {
                id = e.Id,
                expenseType = e.ExpenseType,
                amount = e.Amount.ToString("N2"),
                expenseDate = e.ExpenseDate.ToString("MMM dd, yyyy"),
                archivedDate = e.ArchivedAt.ToString("MMM dd, yyyy"),
                createdBy = e.CreatedByName,
                description = e.Description ?? "-"
            }).ToList()
        };

        await JSRuntime.InvokeVoidAsync("printArchivedExpenses", reportData);
    }
}
