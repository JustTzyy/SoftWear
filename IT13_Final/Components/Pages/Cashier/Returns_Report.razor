@code {
    private List<IT13_Final.Services.Data.ReturnReportModel> returns = new();
    private List<IT13_Final.Services.Data.ReturnReportModel> allReturnsForPrint = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;
    private bool isLoading = false;
    private bool isGeneratingPDF = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private System.Threading.Timer? _searchTimer;
    private bool showReturnDetailsModal = false;
    private IT13_Final.Services.Data.ReturnReportModel? selectedReturn = null;
    private List<IT13_Final.Services.Data.ReturnReportItemModel> returnItems = new();

    // Summary statistics
    private decimal totalReturnsAmount = 0m;
    private int pendingReturnsCount = 0;
    private int completedReturnsCount = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadReturns();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "returns-report-search-input");
        }
    }

    private async Task LoadReturns()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                totalCount = await ReturnsService.GetReturnsCountForReportsAsync(cashierUserId, searchTerm, startDate, endDate);
                returns = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                    returns = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);
                }

                // Calculate summary statistics
                await CalculateSummaryStatistics();
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading returns: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load returns reports. Please try again.");
            returns = new List<IT13_Final.Services.Data.ReturnReportModel>();
            totalCount = 0;
            totalReturnsAmount = 0m;
            pendingReturnsCount = 0;
            completedReturnsCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CalculateSummaryStatistics()
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId <= 0)
            {
                totalReturnsAmount = 0m;
                pendingReturnsCount = 0;
                completedReturnsCount = 0;
                return;
            }

            // Get all returns for summary (matching filters)
            var allReturns = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, 1, 10000);

            totalReturnsAmount = 0m;
            pendingReturnsCount = 0;
            completedReturnsCount = 0;

            // Query database to get sale amounts for returns
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            var returnIds = allReturns.Select(r => r.Id).ToList();
            if (returnIds.Count > 0)
            {
                var returnIdParams = new List<string>();
                for (int i = 0; i < returnIds.Count; i++)
                {
                    returnIdParams.Add($"@returnId{i}");
                }
                var returnIdsInClause = string.Join(",", returnIdParams);

                var sql = $@"
                    SELECT r.id, r.status, s.amount
                    FROM dbo.tbl_returns r
                    INNER JOIN dbo.tbl_sales s ON r.sale_id = s.id
                    WHERE r.id IN ({returnIdsInClause})
                    AND r.archives IS NULL";

                using var cmd = new Microsoft.Data.SqlClient.SqlCommand(sql, conn);
                for (int i = 0; i < returnIds.Count; i++)
                {
                    cmd.Parameters.AddWithValue($"@returnId{i}", returnIds[i]);
                }

                using var reader = await cmd.ExecuteReaderAsync();
                while (await reader.ReadAsync())
                {
                    var status = reader.GetString(1);
                    var amount = reader.GetDecimal(2);

                    totalReturnsAmount += amount;

                    if (status.Equals("Pending", StringComparison.OrdinalIgnoreCase))
                    {
                        pendingReturnsCount++;
                    }
                    else if (status.Equals("Completed", StringComparison.OrdinalIgnoreCase))
                    {
                        completedReturnsCount++;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error calculating summary statistics: {ex.Message}");
            totalReturnsAmount = 0m;
            pendingReturnsCount = 0;
            completedReturnsCount = 0;
        }
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            startDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            endDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        startDate = null;
        endDate = null;
        currentPage = 1;
        await LoadReturns();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadReturns();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }

        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(LoadReturns);
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadReturns();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadReturns();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadReturns();
        }
    }

    private async Task HandleReturnClick(int returnId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedReturn = await ReturnsService.GetReturnForReportAsync(returnId, cashierUserId);
            if (selectedReturn == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Return not found or you don't have permission to access it.");
                return;
            }

            returnItems = await ReturnsService.GetReturnItemsForReportAsync(returnId);
            showReturnDetailsModal = true;
            
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "view",
                        "Returns_Report",
                        $"Viewed return details: {selectedReturn.ReturnNumber}"
                    );
                }
            }
            catch { }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading return details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load return details. Please try again.");
        }
    }

    private void CloseReturnDetailsModal()
    {
        showReturnDetailsModal = false;
        selectedReturn = null;
        returnItems.Clear();
        StateHasChanged();
    }

    private async Task HandlePrintReturn(int returnId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var returnModel = await ReturnsService.GetReturnForReportAsync(returnId, cashierUserId);
            if (returnModel == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Return not found or you don't have permission to access it.");
                return;
            }

            var items = await ReturnsService.GetReturnItemsForReportAsync(returnId);
            if (items == null || items.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No items found for this return.");
                return;
            }

            var receiptData = new
            {
                returnNumber = returnModel.ReturnNumber,
                saleNumber = returnModel.SaleNumber,
                dateTime = returnModel.Timestamps.ToString("MMM dd, yyyy HH:mm:ss"),
                cashierName = returnModel.CashierName,
                reason = returnModel.Reason ?? "",
                status = returnModel.Status,
                items = items.Select(item => new
                {
                    productName = item.ProductName,
                    variantName = item.VariantName,
                    sizeName = item.SizeName ?? "",
                    colorName = item.ColorName ?? "",
                    quantity = item.Quantity,
                    condition = item.Condition
                }).ToArray()
            };

            await JSRuntime.InvokeVoidAsync("printReturnReceipt", receiptData);
            
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Returns_Report",
                        $"Printed return receipt: {returnModel.ReturnNumber}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing return: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to print return receipt. Please try again.");
        }
    }

    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                allReturnsForPrint = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, 1, 10000);
                
                var reportData = new
                {
                    title = "Returns Reports",
                    printedBy = AuthState.CurrentUser?.FullName ?? "Cashier",
                    printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
                    dateRange = GetDateRangeText(),
                    totalCount = allReturnsForPrint.Count,
                    totalReturnsAmount = totalReturnsAmount.ToString("N2"),
                    pendingReturnsCount = pendingReturnsCount,
                    completedReturnsCount = completedReturnsCount,
                    records = allReturnsForPrint.Select(r => new
                    {
                        returnNumber = r.ReturnNumber,
                        saleNumber = r.SaleNumber,
                        status = r.Status,
                        cashierName = r.CashierName,
                        date = r.Timestamps.ToString("MMM dd, yyyy"),
                        time = r.Timestamps.ToString("HH:mm:ss"),
                        reason = r.Reason ?? string.Empty
                    }).ToList()
                };

                await JSRuntime.InvokeVoidAsync("generateAndPrintReturnsReport", reportData);
                
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "print",
                            "Returns_Report",
                            $"Printed returns report - {allReturnsForPrint.Count} returns from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                        );
                    }
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    private string GetDateRangeText()
    {
        if (startDate.HasValue && endDate.HasValue)
        {
            return $"{startDate.Value:MM/dd/yyyy} - {endDate.Value:MM/dd/yyyy}";
        }
        else if (startDate.HasValue)
        {
            return $"From {startDate.Value:MM/dd/yyyy}";
        }
        else if (endDate.HasValue)
        {
            return $"Until {endDate.Value:MM/dd/yyyy}";
        }
        return "All Time";
    }

