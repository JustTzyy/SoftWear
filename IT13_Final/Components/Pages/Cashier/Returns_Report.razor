@page "/cashier/returns_report"
@layout IT13_Final.Components.Layout.Cashier.Cashier
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.IReturnsService ReturnsService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@implements IDisposable
@using System.Linq

<h1 class="page-title">Returns Reports</h1>

<div class="activity-log-container">
    <div class="search-filters-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search by return number or sale number..." value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>

        <button class="print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF">
            @if (isGeneratingPDF)
            {
                <span>Generating PDF...</span>
            }
            else
            {
                <svg class="print-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 6 2 18 2 18 9"></polyline>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
                <span>Print Report</span>
            }
        </button>
    </div>

    <div class="filters-section">
        <div class="filter-content">
            <div class="date-filters">
                <div class="date-range-dropdown">
                    <label>Quick Range</label>
                    <select class="date-range-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange">
                        <option value="">Custom</option>
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <option value="lastweek">Last Week</option>
                        <option value="thismonth">This Month</option>
                        <option value="thisyear">This Year</option>
                    </select>
                </div>
                <div class="date-filter">
                    <label>From</label>
                    <input type="date" class="date-input" value="@(startDate?.ToString("yyyy-MM-dd"))" max="@(endDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" @onchange="HandleFromDateChange" />
                </div>
                <div class="date-filter">
                    <label>To</label>
                    <input type="date" class="date-input" value="@(endDate?.ToString("yyyy-MM-dd"))" min="@(startDate?.ToString("yyyy-MM-dd"))" max="@DateTime.Today.ToString("yyyy-MM-dd")" @onchange="HandleToDateChange" />
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="activity-table">
            <thead>
                <tr>
                    <th>Return Number</th>
                    <th>Sale Number</th>
                    <th>Status</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (returns.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No returns found</td>
                    </tr>
                }
                else
                {
                    @foreach (var returnItem in returns)
                    {
                        <tr class="clickable-row" @onclick="() => HandleReturnClick(returnItem.Id)">
                            <td class="return-number">@returnItem.ReturnNumber</td>
                            <td class="sale-number">@returnItem.SaleNumber</td>
                            <td>
                                <span class="status-badge status-@returnItem.Status.ToLower()">@returnItem.Status</span>
                            </td>
                            <td>
                                <div class="timestamp-info">
                                    <div class="timestamp-date">@returnItem.Timestamps.ToString("MMM dd, yyyy")</div>
                                    <div class="timestamp-time">@returnItem.Timestamps.ToString("HH:mm:ss")</div>
                                </div>
                            </td>
                            <td @onclick:stopPropagation="true">
                                <button class="print-row-btn" @onclick="() => HandlePrintReturn(returnItem.Id)" title="Print Return Receipt">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                                        <rect x="6" y="14" width="12" height="8"></rect>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i; // Capture loop variable for lambda
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@if (showReturnDetailsModal && selectedReturn != null)
{
    <div class="modal-overlay" @onclick="CloseReturnDetailsModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Return Details - @selectedReturn.ReturnNumber</h3>
                <button class="modal-close" @onclick="CloseReturnDetailsModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="sale-info">
                    <div class="info-row">
                        <span class="info-label">Return Number:</span>
                        <span class="info-value">@selectedReturn.ReturnNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Sale Number:</span>
                        <span class="info-value">@selectedReturn.SaleNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date:</span>
                        <span class="info-value">@selectedReturn.Timestamps.ToString("MMM dd, yyyy HH:mm:ss")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Cashier:</span>
                        <span class="info-value">@selectedReturn.CashierName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Status:</span>
                        <span class="info-value">
                            <span class="status-badge status-@selectedReturn.Status.ToLower()">@selectedReturn.Status</span>
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(selectedReturn.Reason))
                    {
                        <div class="info-row">
                            <span class="info-label">Reason:</span>
                            <span class="info-value">@selectedReturn.Reason</span>
                        </div>
                    }
                </div>

                <div class="items-section">
                    <h4>Returned Items</h4>
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Size</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Condition</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in returnItems)
                            {
                                <tr>
                                    <td>@item.ProductName - @item.VariantName</td>
                                    <td>@(item.SizeName ?? "N/A")</td>
                                    <td>@(item.ColorName ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        <span class="condition-badge condition-@item.Condition.ToLower()">@item.Condition</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-print" @onclick="() => HandlePrintReturn(selectedReturn.Id)">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                        <rect x="6" y="14" width="12" height="8"></rect>
                    </svg>
                    Print Receipt
                </button>
                <button class="btn-close" @onclick="CloseReturnDetailsModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ReturnReportModel> returns = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private System.Threading.Timer? _searchTimer;
    private bool showReturnDetailsModal = false;
    private IT13_Final.Services.Data.ReturnReportModel? selectedReturn = null;
    private List<IT13_Final.Services.Data.ReturnReportItemModel> returnItems = new();
    private List<IT13_Final.Services.Data.ReturnReportModel> allReturnsForPrint = new();
    private bool isGeneratingPDF = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadReturns();
    }

    private async Task LoadReturns()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                totalCount = await ReturnsService.GetReturnsCountForReportsAsync(cashierUserId, searchTerm, startDate, endDate);
                returns = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                    returns = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading returns: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load returns. Please try again.");
            returns = new List<IT13_Final.Services.Data.ReturnReportModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleFromDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            startDate = date.Date;
            // If endDate is before startDate, reset endDate
            if (endDate.HasValue && endDate.Value < startDate.Value)
            {
                endDate = null;
            }
        }
        else
        {
            startDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleToDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            // Ensure toDate is not before fromDate
            if (startDate.HasValue && dateValue < startDate.Value)
            {
                // Don't allow toDate to be set before fromDate
                return;
            }
            endDate = dateValue;
        }
        else
        {
            endDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;
        
        switch (selectedDateRange)
        {
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "lastweek":
                startDate = today.AddDays(-7);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
            default:
                // Custom - don't change dates
                break;
        }
        
        try
        {
            if (AuthState.CurrentUser != null && !string.IsNullOrEmpty(selectedDateRange))
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "filter",
                    "Returns_Report",
                    $"Changed date range filter to: {selectedDateRange}"
                );
            }
        }
        catch { }
        
        await ApplyFilters();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadReturns();
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                try
                {
                    if (AuthState.CurrentUser != null && !string.IsNullOrWhiteSpace(searchTerm))
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "search",
                            "Returns_Report",
                            $"Searched returns report: {searchTerm}"
                        );
                    }
                }
                catch { }
                await LoadReturns();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadReturns();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadReturns();
            }
        }
    }

    private async Task HandleReturnClick(int returnId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedReturn = await ReturnsService.GetReturnForReportAsync(returnId, cashierUserId);
            if (selectedReturn == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Return not found or you don't have permission to access it.");
                return;
            }

            returnItems = await ReturnsService.GetReturnItemsForReportAsync(returnId);
            showReturnDetailsModal = true;
            
            // Log view action
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "view",
                        "Returns_Report",
                        $"Viewed return details: {selectedReturn.ReturnNumber}"
                    );
                }
            }
            catch { }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading return details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load return details. Please try again.");
        }
    }

    private void CloseReturnDetailsModal()
    {
        showReturnDetailsModal = false;
        selectedReturn = null;
        returnItems.Clear();
        StateHasChanged();
    }

    private async Task HandlePrintReturn(int returnId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var returnModel = await ReturnsService.GetReturnForReportAsync(returnId, cashierUserId);
            if (returnModel == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Return not found or you don't have permission to access it.");
                return;
            }

            var items = await ReturnsService.GetReturnItemsForReportAsync(returnId);
            if (items == null || items.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No items found for this return.");
                return;
            }

            // Prepare return receipt data
            var receiptData = new
            {
                returnNumber = returnModel.ReturnNumber,
                saleNumber = returnModel.SaleNumber,
                dateTime = returnModel.Timestamps.ToString("MMM dd, yyyy HH:mm:ss"),
                cashierName = returnModel.CashierName,
                reason = returnModel.Reason ?? "",
                status = returnModel.Status,
                items = items.Select(item => new
                {
                    productName = item.ProductName,
                    variantName = item.VariantName,
                    sizeName = item.SizeName ?? "",
                    colorName = item.ColorName ?? "",
                    quantity = item.Quantity,
                    condition = item.Condition
                }).ToArray()
            };

            // Call JavaScript print function for returns
            await JSRuntime.InvokeVoidAsync("printReturnReceipt", receiptData);
            
            // Log print action
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Returns_Report",
                        $"Printed return receipt: {returnModel.ReturnNumber}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing return: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to print return receipt. Please try again.");
        }
    }

    private async Task PrintReport()
    {
        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            // Fetch all returns without pagination
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                allReturnsForPrint = await ReturnsService.GetReturnsForReportsAsync(cashierUserId, searchTerm, startDate, endDate, 1, 10000);
                
                // Generate PDF and print
                await JSRuntime.InvokeVoidAsync("generateAndPrintReturnsReport", 
                    allReturnsForPrint.Select(returnItem => new {
                        returnNumber = returnItem.ReturnNumber,
                        saleNumber = returnItem.SaleNumber,
                        status = returnItem.Status,
                        date = returnItem.Timestamps.ToString("MMM dd, yyyy"),
                        time = returnItem.Timestamps.ToString("HH:mm:ss"),
                        cashierName = returnItem.CashierName,
                        reason = returnItem.Reason ?? ""
                    }).ToArray(),
                    AuthState.CurrentUser?.FullName ?? "Cashier",
                    startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                    endDate?.ToString("MMM dd, yyyy") ?? "Today"
                );
                
                // Log print report action
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "print",
                            "Returns_Report",
                            $"Printed returns report - {allReturnsForPrint.Count} returns from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                        );
                    }
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            // Fallback to regular print if PDF generation fails
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}

