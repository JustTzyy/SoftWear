@page "/cashier/sales_report"
@layout IT13_Final.Components.Layout.Cashier.Cashier
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.ISalesService SalesService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@implements IDisposable
@using System.Linq

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Sales Reports</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF" title="Print Report">
            @if (isGeneratingPDF)
            {
                <span>Generating...</span>
            }
            else
            {
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M6 9V2h12v7"></path>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
            }
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input type="text" 
               id="sales-report-search-input"
               class="search-input" 
               placeholder="Search by sale number..." 
               @bind="searchTerm" 
               @bind:event="oninput" 
               @bind:after="HandleSearchInput"
               @onkeypress="HandleSearchKeyPress" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="HandleClearSearch" title="Clear search">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date"
               class="date-input"
               value="@(startDate?.ToString("yyyy-MM-dd"))"
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleStartDateChange" />
        <span class="date-separator">to</span>
        <input type="date"
               class="date-input"
               value="@(endDate?.ToString("yyyy-MM-dd"))"
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleEndDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
</div>

@* Summary Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Sales Summary</h3>
            <span class="card-subtitle">@totalCount total transactions</span>
        </div>
    </div>
    
    <div class="card-body">
        <div class="summary-grid">
            <div class="summary-box">
                <div class="summary-label">Total Sales Amount</div>
                <div class="summary-value">₱@FormatCompactNumber(totalSalesAmount)</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Total Transactions</div>
                <div class="summary-value">@totalCount</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">VAT (12%)</div>
                <div class="summary-value">₱@FormatCompactNumber(vatAmount)</div>
            </div>
            <div class="summary-box">
                <div class="summary-label">Admin Fee (2%)</div>
                <div class="summary-value">₱@FormatCompactNumber(adminFeeAmount)</div>
            </div>
        </div>
    </div>
</div>

@* Sales List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Sales List</h3>
            <span class="card-subtitle">@totalCount sales found</span>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Sale Number</th>
                    <th>Amount</th>
                    <th>Payment Method</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading sales...</td>
                    </tr>
                }
                else if (sales.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No sales found for this filter.</td>
                    </tr>
                }
                else
                {
                    @foreach (var sale in sales)
                    {
                        <tr class="clickable-row" @onclick="() => HandleSaleClick(sale.Id)">
                            <td class="sale-number">@sale.SaleNumber</td>
                            <td>₱@sale.Amount.ToString("N2")</td>
                            <td>@sale.PaymentMethod</td>
                            <td>
                                <div class="timestamp-info">
                                    <div class="timestamp-date">@sale.Timestamps.ToString("MMM dd, yyyy")</div>
                                    <div class="timestamp-time">@sale.Timestamps.ToString("HH:mm:ss")</div>
                                </div>
                            </td>
                            <td class="actions-cell" @onclick:stopPropagation="true">
                                <button class="action-btn print-row-btn" @onclick="() => HandlePrintSale(sale.Id)" title="Print Receipt">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M6 9V2h12v7"></path>
                                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                                        <rect x="6" y="14" width="12" height="8"></rect>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)" title="Previous page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6"></path>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)" title="Next page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6"></path>
                </svg>
            </button>
        </div>
    }
</div>

@if (showSaleDetailsModal && selectedSale != null)
{
    <div class="modal-overlay" @onclick="CloseSaleDetailsModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Sale Details - @selectedSale.SaleNumber</h2>
                <button class="modal-close-btn" @onclick="CloseSaleDetailsModal" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="sale-info">
                    <div class="info-row">
                        <span class="info-label">Sale Number:</span>
                        <span class="info-value">@selectedSale.SaleNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date:</span>
                        <span class="info-value">@selectedSale.Timestamps.ToString("MMM dd, yyyy HH:mm:ss")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Cashier:</span>
                        <span class="info-value">@selectedSale.CashierName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Payment Method:</span>
                        <span class="info-value">@selectedSale.PaymentMethod</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Amount Paid:</span>
                        <span class="info-value">₱@selectedSale.AmountPaid.ToString("N2")</span>
                    </div>
                    @if (selectedSale.PaymentMethod == "Cash" && selectedSale.ChangeGiven > 0)
                    {
                        <div class="info-row">
                            <span class="info-label">Change Given:</span>
                            <span class="info-value">₱@selectedSale.ChangeGiven.ToString("N2")</span>
                        </div>
                    }
                    @if (selectedSale.PaymentMethod == "GCash" && !string.IsNullOrEmpty(selectedSale.ReferenceNumber))
                    {
                        <div class="info-row">
                            <span class="info-label">Reference Number:</span>
                            <span class="info-value">@selectedSale.ReferenceNumber</span>
                        </div>
                    }
                    <div class="info-row">
                        <span class="info-label">Total Amount:</span>
                        <span class="info-value">₱@selectedSale.Amount.ToString("N2")</span>
                    </div>
                </div>

                <div class="items-section">
                    <h4>Items</h4>
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Size</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in saleItems)
                            {
                                <tr>
                                    <td>@item.ProductName - @item.VariantName</td>
                                    <td>@(item.SizeName ?? "N/A")</td>
                                    <td>@(item.ColorName ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>₱@item.Price.ToString("N2")</td>
                                    <td>₱@item.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="save-admin-btn" @onclick="() => HandlePrintSale(selectedSale.Id)">
                    <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                        <rect x="6" y="14" width="12" height="8"></rect>
                    </svg>
                    <span>Print Receipt</span>
                </button>
                <button class="cancel-btn" @onclick="CloseSaleDetailsModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.SaleReportModel> sales = new();
    private List<IT13_Final.Services.Data.SaleReportModel> allSalesForPrint = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;
    private bool isLoading = false;
    private bool isGeneratingPDF = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private System.Threading.Timer? _searchTimer;
    private bool showSaleDetailsModal = false;
    private IT13_Final.Services.Data.SaleReportModel? selectedSale = null;
    private List<IT13_Final.Services.Data.SaleReportItemModel> saleItems = new();

    private decimal totalSalesAmount = 0m;
    private decimal vatAmount = 0m;
    private decimal adminFeeAmount = 0m;

    protected override async Task OnInitializedAsync()
    {
        await LoadSales();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "sales-report-search-input");
        }
    }

    private async Task LoadSales()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                totalCount = await SalesService.GetSalesCountForReportsAsync(cashierUserId, searchTerm, startDate, endDate, false);
                sales = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, false, currentPage, pageSize);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                    sales = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, false, currentPage, pageSize);
                }

                // Get total sales amount for all matching records (not just current page)
                totalSalesAmount = await SalesService.GetTotalSalesAmountAsync(cashierUserId, searchTerm, startDate, endDate, false);
                
                // Calculate VAT (12% on total sales)
                vatAmount = totalSalesAmount * 0.12m;
                
                // Calculate Admin Fee (2% on total sales)
                adminFeeAmount = totalSalesAmount * 0.02m;
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sales: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sales reports. Please try again.");
            sales = new List<IT13_Final.Services.Data.SaleReportModel>();
            totalCount = 0;
            totalSalesAmount = 0;
            vatAmount = 0;
            adminFeeAmount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            startDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            endDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        startDate = null;
        endDate = null;
        currentPage = 1;
        await LoadSales();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadSales();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }

        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(LoadSales);
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadSales();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadSales();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadSales();
        }
    }

    private async Task HandleSaleClick(int saleId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedSale = await SalesService.GetSaleForReportAsync(saleId, cashierUserId);
            if (selectedSale == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sale not found or you don't have permission to access it.");
                return;
            }

            saleItems = await SalesService.GetSaleItemsForReportAsync(saleId);
            showSaleDetailsModal = true;
            
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "view",
                        "Sales_Report",
                        $"Viewed sale details: {selectedSale.SaleNumber}"
                    );
                }
            }
            catch { }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sale details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sale details. Please try again.");
        }
    }

    private void CloseSaleDetailsModal()
    {
        showSaleDetailsModal = false;
        selectedSale = null;
        saleItems.Clear();
        StateHasChanged();
    }

    private async Task HandlePrintSale(int saleId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var sale = await SalesService.GetSaleForReportAsync(saleId, cashierUserId);
            if (sale == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sale not found or you don't have permission to access it.");
                return;
            }

            var items = await SalesService.GetSaleItemsForReportAsync(saleId);
            if (items == null || items.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No items found for this sale.");
                return;
            }

            var receiptData = new
            {
                saleNumber = sale.SaleNumber,
                dateTime = sale.Timestamps.ToString("MMM dd, yyyy HH:mm:ss"),
                cashierName = sale.CashierName,
                items = items.Select(item => new
                {
                    productName = item.ProductName,
                    variantName = item.VariantName,
                    sizeName = item.SizeName ?? "",
                    colorName = item.ColorName ?? "",
                    quantity = item.Quantity,
                    subtotal = item.Subtotal
                }).ToArray(),
                totalAmount = sale.Amount,
                paymentMethod = sale.PaymentMethod,
                amountPaid = sale.AmountPaid,
                changeGiven = sale.ChangeGiven,
                referenceNumber = sale.ReferenceNumber
            };

            await JSRuntime.InvokeVoidAsync("printReceipt", receiptData);
            
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Sales_Report",
                        $"Printed receipt for sale: {sale.SaleNumber}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing sale: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to print receipt. Please try again.");
        }
    }

    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                allSalesForPrint = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, false, 1, 10000);
                
                await JSRuntime.InvokeVoidAsync("generateAndPrintSalesReport", 
                    allSalesForPrint.Select(sale => new {
                        saleNumber = sale.SaleNumber,
                        amount = sale.Amount,
                        paymentMethod = sale.PaymentMethod,
                        date = sale.Timestamps.ToString("MMM dd, yyyy"),
                        time = sale.Timestamps.ToString("HH:mm:ss"),
                        cashierName = sale.CashierName
                    }).ToArray(),
                    AuthState.CurrentUser?.FullName ?? "Cashier",
                    startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                    endDate?.ToString("MMM dd, yyyy") ?? "Today"
                );
                
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "print",
                            "Sales_Report",
                            $"Printed sales report - {allSalesForPrint.Count} sales from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                        );
                    }
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }

    private string FormatCompactNumber(decimal value)
    {
        var absValue = Math.Abs(value);
        var isNegative = value < 0;
        string result;
        if (absValue >= 1_000_000_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000_000_000m) + "T";
        else if (absValue >= 1_000_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000_000m) + "B";
        else if (absValue >= 1_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000m) + "M";
        else if (absValue >= 10_000m) result = FormatWithMaxDigits(absValue / 1_000m) + "K";
        else result = absValue.ToString("N2");
        return isNegative ? $"{result} (Debt)" : result;
    }

    private string FormatWithMaxDigits(decimal num)
    {
        if (num >= 1000) return num.ToString("N0");
        if (num >= 100) return num.ToString("F1");
        if (num >= 10) return num.ToString("F2");
        return num.ToString("F3");
    }
}
