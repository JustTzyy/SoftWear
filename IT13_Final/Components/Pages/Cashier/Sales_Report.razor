@page "/cashier/sales_report"
@layout IT13_Final.Components.Layout.Cashier.Cashier
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IT13_Final.Services.Data.ISalesService SalesService
@inject IT13_Final.Services.Audit.IHistoryService HistoryService
@inject IJSRuntime JSRuntime
@implements IDisposable
@using System.Linq

<h1 class="page-title">Sales Reports</h1>

<div class="activity-log-container">
    <div class="search-filters-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search by sale number..." value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>

        <button class="print-btn" @onclick="PrintReport" disabled="@isGeneratingPDF">
            @if (isGeneratingPDF)
            {
                <span>Generating PDF...</span>
            }
            else
            {
                <svg class="print-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="6 9 6 2 18 2 18 9"></polyline>
                    <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                    <rect x="6" y="14" width="12" height="8"></rect>
                </svg>
                <span>Print Report</span>
            }
        </button>
    </div>

    <div class="filters-section">
        <div class="filter-content">
            <div class="date-filters">
                <div class="date-range-dropdown">
                    <label>Quick Range</label>
                    <select class="date-range-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange">
                        <option value="">Custom</option>
                        <option value="today">Today</option>
                        <option value="yesterday">Yesterday</option>
                        <option value="lastweek">Last Week</option>
                        <option value="thismonth">This Month</option>
                        <option value="thisyear">This Year</option>
                    </select>
                </div>
                <div class="date-filter">
                    <label>From</label>
                    <input type="date" class="date-input" value="@(startDate?.ToString("yyyy-MM-dd"))" max="@(endDate?.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" @onchange="HandleFromDateChange" />
                </div>
                <div class="date-filter">
                    <label>To</label>
                    <input type="date" class="date-input" value="@(endDate?.ToString("yyyy-MM-dd"))" min="@(startDate?.ToString("yyyy-MM-dd"))" max="@DateTime.Today.ToString("yyyy-MM-dd")" @onchange="HandleToDateChange" />
                </div>
            </div>
        </div>
    </div>

    <div class="table-container">
        <table class="activity-table">
            <thead>
                <tr>
                    <th>Sale Number</th>
                    <th>Amount</th>
                    <th>Payment Method</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (sales.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No sales found</td>
                    </tr>
                }
                else
                {
                    @foreach (var sale in sales)
                    {
                        <tr class="clickable-row" @onclick="() => HandleSaleClick(sale.Id)">
                            <td class="sale-number">@sale.SaleNumber</td>
                            <td>₱@sale.Amount.ToString("N2")</td>
                            <td>@sale.PaymentMethod</td>
                            <td>
                                <div class="timestamp-info">
                                    <div class="timestamp-date">@sale.Timestamps.ToString("MMM dd, yyyy")</div>
                                    <div class="timestamp-time">@sale.Timestamps.ToString("HH:mm:ss")</div>
                                </div>
                            </td>
                            <td @onclick:stopPropagation="true">
                                <button class="print-row-btn" @onclick="() => HandlePrintSale(sale.Id)" title="Print Receipt">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                                        <rect x="6" y="14" width="12" height="8"></rect>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i; // Capture loop variable for lambda
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@if (showSaleDetailsModal && selectedSale != null)
{
    <div class="modal-overlay" @onclick="CloseSaleDetailsModal">
        <div class="modal-content" @onclick:stopPropagation>
            <div class="modal-header">
                <h3>Sale Details - @selectedSale.SaleNumber</h3>
                <button class="modal-close" @onclick="CloseSaleDetailsModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>
            <div class="modal-body">
                <div class="sale-info">
                    <div class="info-row">
                        <span class="info-label">Sale Number:</span>
                        <span class="info-value">@selectedSale.SaleNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date:</span>
                        <span class="info-value">@selectedSale.Timestamps.ToString("MMM dd, yyyy HH:mm:ss")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Cashier:</span>
                        <span class="info-value">@selectedSale.CashierName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Payment Method:</span>
                        <span class="info-value">@selectedSale.PaymentMethod</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Amount Paid:</span>
                        <span class="info-value">₱@selectedSale.AmountPaid.ToString("N2")</span>
                    </div>
                    @if (selectedSale.PaymentMethod == "Cash" && selectedSale.ChangeGiven > 0)
                    {
                        <div class="info-row">
                            <span class="info-label">Change Given:</span>
                            <span class="info-value">₱@selectedSale.ChangeGiven.ToString("N2")</span>
                        </div>
                    }
                    @if (selectedSale.PaymentMethod == "GCash" && !string.IsNullOrEmpty(selectedSale.ReferenceNumber))
                    {
                        <div class="info-row">
                            <span class="info-label">Reference Number:</span>
                            <span class="info-value">@selectedSale.ReferenceNumber</span>
                        </div>
                    }
                    <div class="info-row">
                        <span class="info-label">Total Amount:</span>
                        <span class="info-value">₱@selectedSale.Amount.ToString("N2")</span>
                    </div>
                </div>

                <div class="items-section">
                    <h4>Items</h4>
                    <table class="items-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Size</th>
                                <th>Color</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in saleItems)
                            {
                                <tr>
                                    <td>@item.ProductName - @item.VariantName</td>
                                    <td>@(item.SizeName ?? "N/A")</td>
                                    <td>@(item.ColorName ?? "N/A")</td>
                                    <td>@item.Quantity</td>
                                    <td>₱@item.Price.ToString("N2")</td>
                                    <td>₱@item.Subtotal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn-print" @onclick="() => HandlePrintSale(selectedSale.Id)">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 6 2 18 2 18 9"></polyline>
                        <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                        <rect x="6" y="14" width="12" height="8"></rect>
                    </svg>
                    Print Receipt
                </button>
                <button class="btn-close" @onclick="CloseSaleDetailsModal">Close</button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.SaleReportModel> sales = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private System.Threading.Timer? _searchTimer;
    private bool showSaleDetailsModal = false;
    private IT13_Final.Services.Data.SaleReportModel? selectedSale = null;
    private List<IT13_Final.Services.Data.SaleReportItemModel> saleItems = new();
    private List<IT13_Final.Services.Data.SaleReportModel> allSalesForPrint = new();
    private bool isGeneratingPDF = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSales();
    }

    private async Task LoadSales()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                totalCount = await SalesService.GetSalesCountForReportsAsync(cashierUserId, searchTerm, startDate, endDate);
                sales = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                    sales = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, currentPage, pageSize);
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sales: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sales. Please try again.");
            sales = new List<IT13_Final.Services.Data.SaleReportModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleFromDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            startDate = date.Date;
            // If endDate is before startDate, reset endDate
            if (endDate.HasValue && endDate.Value < startDate.Value)
            {
                endDate = null;
            }
        }
        else
        {
            startDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleToDateChange(ChangeEventArgs e)
    {
        selectedDateRange = string.Empty; // Reset dropdown when manually changing dates
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            var dateValue = date.Date;
            // Ensure toDate is not before fromDate
            if (startDate.HasValue && dateValue < startDate.Value)
            {
                // Don't allow toDate to be set before fromDate
                return;
            }
            endDate = dateValue;
        }
        else
        {
            endDate = null;
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var today = DateTime.Today;
        
        switch (selectedDateRange)
        {
            case "today":
                startDate = today;
                endDate = today;
                break;
            case "yesterday":
                startDate = today.AddDays(-1);
                endDate = today.AddDays(-1);
                break;
            case "lastweek":
                startDate = today.AddDays(-7);
                endDate = today;
                break;
            case "thismonth":
                startDate = new DateTime(today.Year, today.Month, 1);
                endDate = today;
                break;
            case "thisyear":
                startDate = new DateTime(today.Year, 1, 1);
                endDate = today;
                break;
            default:
                // Custom - don't change dates
                break;
        }
        
        try
        {
            if (AuthState.CurrentUser != null && !string.IsNullOrEmpty(selectedDateRange))
            {
                await HistoryService.LogAsync(
                    AuthState.CurrentUser.Id,
                    "filter",
                    "Sales_Report",
                    $"Changed date range filter to: {selectedDateRange}"
                );
            }
        }
        catch { }
        
        await ApplyFilters();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadSales();
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                try
                {
                    if (AuthState.CurrentUser != null && !string.IsNullOrWhiteSpace(searchTerm))
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "search",
                            "Sales_Report",
                            $"Searched sales report: {searchTerm}"
                        );
                    }
                }
                catch { }
                await LoadSales();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadSales();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadSales();
            }
        }
    }

    private async Task HandleSaleClick(int saleId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedSale = await SalesService.GetSaleForReportAsync(saleId, cashierUserId);
            if (selectedSale == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sale not found or you don't have permission to access it.");
                return;
            }

            saleItems = await SalesService.GetSaleItemsForReportAsync(saleId);
            showSaleDetailsModal = true;
            
            // Log view action
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "view",
                        "Sales_Report",
                        $"Viewed sale details: {selectedSale.SaleNumber}"
                    );
                }
            }
            catch { }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sale details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sale details. Please try again.");
        }
    }

    private void CloseSaleDetailsModal()
    {
        showSaleDetailsModal = false;
        selectedSale = null;
        saleItems.Clear();
        StateHasChanged();
    }

    private async Task HandlePrintSale(int saleId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var sale = await SalesService.GetSaleForReportAsync(saleId, cashierUserId);
            if (sale == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Sale not found or you don't have permission to access it.");
                return;
            }

            var items = await SalesService.GetSaleItemsForReportAsync(saleId);
            if (items == null || items.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No items found for this sale.");
                return;
            }

            // Prepare receipt data
            var receiptData = new
            {
                saleNumber = sale.SaleNumber,
                dateTime = sale.Timestamps.ToString("MMM dd, yyyy HH:mm:ss"),
                cashierName = sale.CashierName,
                items = items.Select(item => new
                {
                    productName = item.ProductName,
                    variantName = item.VariantName,
                    sizeName = item.SizeName ?? "",
                    colorName = item.ColorName ?? "",
                    quantity = item.Quantity,
                    subtotal = item.Subtotal
                }).ToArray(),
                totalAmount = sale.Amount,
                paymentMethod = sale.PaymentMethod,
                amountPaid = sale.AmountPaid,
                changeGiven = sale.ChangeGiven,
                referenceNumber = sale.ReferenceNumber
            };

            // Call JavaScript print function
            await JSRuntime.InvokeVoidAsync("printReceipt", receiptData);
            
            // Log print action
            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Sales_Report",
                        $"Printed receipt for sale: {sale.SaleNumber}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing sale: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to print receipt. Please try again.");
        }
    }

    private async Task PrintReport()
    {
        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            // Fetch all sales without pagination
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId > 0)
            {
                allSalesForPrint = await SalesService.GetSalesForReportsAsync(cashierUserId, searchTerm, startDate, endDate, 1, 10000);
                
                // Generate PDF and print
                await JSRuntime.InvokeVoidAsync("generateAndPrintSalesReport", 
                    allSalesForPrint.Select(sale => new {
                        saleNumber = sale.SaleNumber,
                        amount = sale.Amount,
                        paymentMethod = sale.PaymentMethod,
                        date = sale.Timestamps.ToString("MMM dd, yyyy"),
                        time = sale.Timestamps.ToString("HH:mm:ss"),
                        cashierName = sale.CashierName
                    }).ToArray(),
                    AuthState.CurrentUser?.FullName ?? "Cashier",
                    startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                    endDate?.ToString("MMM dd, yyyy") ?? "Today"
                );
                
                // Log print report action
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "print",
                            "Sales_Report",
                            $"Printed sales report - {allSalesForPrint.Count} sales from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                        );
                    }
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            // Fallback to regular print if PDF generation fails
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}

