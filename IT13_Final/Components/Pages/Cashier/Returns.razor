    private async Task HandleCreateReturnForSale(int saleId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("console.warn", "cashierUserId is 0, user not authenticated");
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedSaleForReturn = await ReturnsService.GetSaleDetailsAsync(saleId, cashierUserId);
            if (selectedSaleForReturn == null)
            {
                await JSRuntime.InvokeVoidAsync("console.warn", $"Sale {saleId} not found or user doesn't have permission");
                await JSRuntime.InvokeVoidAsync("alert", "Sale not found or you don't have permission to access it.");
                return;
            }

            var items = await ReturnsService.GetSaleItemsAsync(saleId);
            if (items == null || items.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("console.warn", $"No items found for sale {saleId}");
                await JSRuntime.InvokeVoidAsync("alert", "No items found for this sale.");
                return;
            }

            saleItemsForReturn = items.Select(item => new ReturnItemViewModel
            {
                SaleItemId = item.Id,
                VariantId = item.VariantId,
                SizeId = item.SizeId,
                ColorId = item.ColorId,
                ProductName = item.ProductName ?? string.Empty,
                VariantName = item.VariantName ?? string.Empty,
                SizeName = item.SizeName,
                ColorName = item.ColorName,
                ColorHexValue = item.ColorHexValue,
                Quantity = item.Quantity,
                Price = item.Price,
                Subtotal = item.Subtotal,
                ReturnQuantity = 0,
                ReturnCondition = "New"
            }).ToList();

            returnReason = string.Empty;
            showCreateReturnModal = true;
            showSaleDetailsModal = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sale for return: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("console.error", $"Stack trace: {ex.StackTrace}");
            if (ex.InnerException != null)
            {
                await JSRuntime.InvokeVoidAsync("console.error", $"Inner exception: {ex.InnerException.Message}");
            }
            await JSRuntime.InvokeVoidAsync("alert", $"Failed to load sale for return: {ex.Message}\n\nCheck the browser console for more details.");
        }
    }

    private void CloseCreateReturnModal()
    {
        showCreateReturnModal = false;
        selectedSaleForReturn = null;
        saleItemsForReturn.Clear();
        returnReason = string.Empty;
        StateHasChanged();
    }

    private void AdjustReturnQuantity(ReturnItemViewModel item, int change)
    {
        var newQty = item.ReturnQuantity + change;
        if (newQty >= 0 && newQty <= item.Quantity)
        {
            item.ReturnQuantity = newQty;
            StateHasChanged();
        }
    }

    private async Task ProcessReturn()
    {
        if (returnItems.Count == 0 || string.IsNullOrWhiteSpace(returnReason)) return;

        try
        {
            var returnModel = new IT13_Final.Services.Data.CreateReturnModel
            {
                SaleId = selectedSaleForReturn!.Id,
                Items = returnItems,
                Reason = returnReason.Trim(),
                CashierUserId = AuthState.CurrentUser?.Id ?? 0
            };

            var returnResult = await ReturnsService.CreateReturnAsync(returnModel);

            if (returnResult != null && returnResult.ReturnId.HasValue && returnResult.ReturnId.Value > 0)
            {
                // Log return creation to history
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "create",
                            "Returns",
                            $"Created return: {returnResult.ReturnNumber} for sale: {selectedSaleForReturn.SaleNumber} - Reason: {returnReason}"
                        );
                    }
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", $"Return processed successfully! Return Number: {returnResult.ReturnNumber}");
                
                CloseCreateReturnModal();
                await LoadSales();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("console.error", "CreateReturnAsync returned null or invalid result");
                await JSRuntime.InvokeVoidAsync("alert", "Failed to process return. Please check the console for details.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error processing return: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("console.error", $"Stack trace: {ex.StackTrace}");
            if (ex.InnerException != null)
            {
                await JSRuntime.InvokeVoidAsync("console.error", $"Inner exception: {ex.InnerException.Message}");
            }
            await JSRuntime.InvokeVoidAsync("alert", $"Error processing return: {ex.Message}\n\nCheck the browser console for more details.");
        }
    }

