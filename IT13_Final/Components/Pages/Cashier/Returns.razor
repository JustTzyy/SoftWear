    private async Task HandleCancelReturn(int returnId)
    {
        try
        {
            var cashierUserId = AuthState.CurrentUser?.Id ?? 0;
            if (cashierUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to cancel this return?");
            if (!confirmed)
            {
                return;
            }

            var result = await ReturnsService.UpdateReturnStatusAsync(returnId, "Cancelled", cashierUserId);
            if (result)
            {
                // Log cancel action to history
                try
                {
                    if (AuthState.CurrentUser != null)
                    {
                        var returnModel = await ReturnsService.GetReturnForReportAsync(returnId, cashierUserId);
                        await HistoryService.LogAsync(
                            AuthState.CurrentUser.Id,
                            "cancel",
                            "Returns",
                            $"Cancelled return: {returnModel?.ReturnNumber ?? returnId.ToString()}"
                        );
                    }
                }
                catch { }

                await JSRuntime.InvokeVoidAsync("alert", "Return cancelled successfully!");
                await LoadPendingReturns();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to cancel return. Please try again.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error cancelling return: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error cancelling return: {ex.Message}");
        }
    }

