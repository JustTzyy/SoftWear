@code {
    private List<IT13_Final.Services.Data.PurchaseOrderModel> purchaseOrders = new();
    private List<IT13_Final.Services.Data.PurchaseOrderModel> allPOsForPrint = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private bool isGeneratingPDF = false;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);

    private decimal totalAmount = 0m;

    private System.Threading.Timer? _searchTimer;
    private bool showPODetailsModal = false;
    private IT13_Final.Services.Data.PurchaseOrderDetailsModel? selectedPO = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadPurchaseOrders();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "po-completed-report-search-input");
            }
            catch (Exception)
            {
                // JavaScript function might not be available yet, ignore
            }
        }
    }

    private async Task LoadPurchaseOrders()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var stockClerkUserId = AuthState.CurrentUser?.Id ?? 0;
            if (stockClerkUserId > 0)
            {
                totalCount = await PurchaseOrderService.GetCompletedPurchaseOrdersCountAsync(stockClerkUserId, searchTerm, startDate, endDate);
                purchaseOrders = await PurchaseOrderService.GetCompletedPurchaseOrdersAsync(stockClerkUserId, searchTerm, startDate, endDate, currentPage, pageSize);

                if (currentPage > totalPages && totalPages > 0)
                {
                    currentPage = totalPages;
                    await LoadPurchaseOrders();
                    return;
                }

                // Calculate summary statistics
                totalAmount = purchaseOrders.Sum(po => po.TotalAmount);
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading purchase orders: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load purchase orders. Please try again.");
            purchaseOrders = new List<IT13_Final.Services.Data.PurchaseOrderModel>();
            totalCount = 0;
            totalAmount = 0m;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            startDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            endDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        startDate = null;
        endDate = null;
        currentPage = 1;
        await LoadPurchaseOrders();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadPurchaseOrders();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadPurchaseOrders());
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadPurchaseOrders();
        StateHasChanged();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadPurchaseOrders();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadPurchaseOrders();
            }
        }
    }

    private async Task HandlePOClick(int poId)
    {
        try
        {
            var stockClerkUserId = AuthState.CurrentUser?.Id ?? 0;
            if (stockClerkUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            selectedPO = await PurchaseOrderService.GetPurchaseOrderDetailsAsync(poId, stockClerkUserId);
            if (selectedPO == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Purchase order not found or you don't have permission to access it.");
                return;
            }

            showPODetailsModal = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading purchase order details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load purchase order details. Please try again.");
        }
    }

    private void ClosePODetailsModal()
    {
        showPODetailsModal = false;
        selectedPO = null;
        StateHasChanged();
    }

    private async Task HandlePrintPO(int poId)
    {
        try
        {
            var stockClerkUserId = AuthState.CurrentUser?.Id ?? 0;
            if (stockClerkUserId == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "User not authenticated. Please log in again.");
                return;
            }

            var po = await PurchaseOrderService.GetPurchaseOrderDetailsAsync(poId, stockClerkUserId);
            if (po == null)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Purchase order not found or you don't have permission to access it.");
                return;
            }

            var receiptData = new
            {
                id = po.Id,
                poNumber = po.PONumber,
                supplierName = po.SupplierName,
                supplierEmail = po.SupplierEmail ?? "",
                supplierContactNumber = po.SupplierContactNumber ?? "",
                status = po.Status,
                totalAmount = po.TotalAmount,
                expectedDeliveryDate = po.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "",
                notes = po.Notes ?? "",
                createdAt = po.CreatedAt.ToString("MMM dd, yyyy HH:mm:ss"),
                updatedAt = po.UpdatedAt?.ToString("MMM dd, yyyy HH:mm:ss") ?? "",
                createdByName = po.CreatedByName,
                updatedByName = po.UpdatedByName ?? "",
                items = po.Items.Select(i => new {
                    productName = i.ProductName,
                    variantName = i.VariantName,
                    sizeName = i.SizeName ?? "",
                    colorName = i.ColorName ?? "",
                    colorHex = i.ColorHexValue ?? "",
                    quantity = i.Quantity,
                    unitPrice = i.UnitPrice,
                    totalPrice = i.TotalPrice
                }).ToArray()
            };

            await JSRuntime.InvokeVoidAsync("printPOCompletedReceipt", receiptData);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error printing purchase order: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to print purchase order details. Please try again.");
        }
    }

    private async Task PrintReport()
    {
        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var stockClerkUserId = AuthState.CurrentUser?.Id ?? 0;
            if (stockClerkUserId > 0)
            {
                allPOsForPrint = await PurchaseOrderService.GetCompletedPurchaseOrdersAsync(stockClerkUserId, searchTerm, startDate, endDate, 1, 10000);
                
                await JSRuntime.InvokeVoidAsync("generateAndPrintPOCompletedReport", 
                    allPOsForPrint.Select(po => new {
                        poNumber = po.PONumber,
                        supplierName = po.SupplierName,
                        totalAmount = po.TotalAmount,
                        expectedDeliveryDate = po.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "N/A",
                        stockClerkName = po.CreatedByName ?? "N/A",
                        dateCompleted = po.CreatedAt.ToString("MMM dd, yyyy"),
                        timeCompleted = po.CreatedAt.ToString("HH:mm:ss")
                    }).ToArray(),
                    AuthState.CurrentUser?.FullName ?? "Stock Clerk",
                    startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                    endDate?.ToString("MMM dd, yyyy") ?? "Today"
                );
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
