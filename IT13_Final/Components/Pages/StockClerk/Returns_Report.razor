    private async Task PrintReport()
    {
        if (sellerUserId <= 0) return;

        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
            if (!confirmed) return;

            isGeneratingPDF = true;
            StateHasChanged();

            var cashierUserIds = await GetCashierUserIdsAsync();
            if (cashierUserIds.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No returns data to print.");
                return;
            }

            var userIdParams = new List<string>();
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                userIdParams.Add($"@cashierId{i}");
            }
            var cashierIdsInClause = string.Join(",", userIdParams);

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var returnsSql = $@"
                SELECT r.id, r.return_number, s.sale_number, r.status, r.timestamps, r.reason,
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as cashier_name
                FROM dbo.tbl_returns r
                INNER JOIN dbo.tbl_sales s ON r.sale_id = s.id
                INNER JOIN dbo.tbl_users u ON r.user_id = u.id
                WHERE r.archives IS NULL
                AND r.user_id IN ({cashierIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                returnsSql += " AND (r.return_number LIKE @SearchTerm OR s.sale_number LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                returnsSql += " AND CAST(r.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                returnsSql += " AND CAST(r.timestamps AS DATE) <= @EndDate";
            }

            returnsSql += " ORDER BY r.timestamps DESC";

            using var cmd = new SqlCommand(returnsSql, conn);
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                cmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                cmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            allReturnsForPrint = new List<IT13_Final.Services.Data.ReturnReportModel>();
            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                allReturnsForPrint.Add(new IT13_Final.Services.Data.ReturnReportModel
                {
                    Id = reader.GetInt32(0),
                    ReturnNumber = reader.GetString(1),
                    SaleNumber = reader.GetString(2),
                    Status = reader.IsDBNull(3) ? "Pending" : reader.GetString(3),
                    Timestamps = reader.GetDateTime(4),
                    Reason = reader.IsDBNull(5) ? null : reader.GetString(5),
                    CashierName = reader.IsDBNull(6) ? string.Empty : reader.GetString(6)
                });
            }

            await JSRuntime.InvokeVoidAsync("generateReturnsReportPDF",
                allReturnsForPrint.Select(r => new
                {
                    returnNumber = r.ReturnNumber,
                    saleNumber = r.SaleNumber,
                    status = r.Status,
                    cashierName = r.CashierName,
                    date = r.Timestamps.ToString("MMM dd, yyyy"),
                    time = r.Timestamps.ToString("HH:mm:ss")
                }).ToArray(),
                totalCount.ToString(),
                pendingReturnsCount.ToString(),
                completedReturnsCount.ToString(),
                AuthState.CurrentUser?.FullName ?? "Stock Clerk",
                startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                endDate?.ToString("MMM dd, yyyy") ?? "Today"
            );

            if (AuthState.CurrentUser != null)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Reports",
                        "Printed returns report"
                    );
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating PDF: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

