@page "/stockclerk/Supplier"
@layout IT13_Final.Components.Layout.StockClerk.StockClerk
@inject IT13_Final.Services.Data.ISupplierService SupplierService
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@using Microsoft.Data.SqlClient
@implements IDisposable

<h1 class="page-title">Supplier Records</h1>

<div class="colors-container">
    <div class="search-actions-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search suppliers" value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>
    </div>

    <div class="table-container">
        <div class="table-header">List</div>
        <table class="suppliers-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Date Created</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="4" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (suppliers.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="empty-cell">No suppliers found</td>
                    </tr>
                }
                else
                {
                    @foreach (var supplier in suppliers)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(supplier.Id)">
                            <td>@supplier.Id</td>
                            <td class="supplier-name">@supplier.CompanyName</td>
                            <td>@(string.IsNullOrEmpty(supplier.Email) ? "N/A" : supplier.Email)</td>
                            <td>@supplier.DateCreated.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Supplier Details Modal *@
@if (showSupplierDetails && supplierDetails != null)
{
    <div class="modal-overlay" @onclick="CloseSupplierDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <span>Supplier Details</span>
                </div>
                <button class="modal-close" @onclick="CloseSupplierDetails" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content">
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">COMPANY NAME:</span>
                        <span class="detail-value">@supplierDetails.CompanyName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CONTACT PERSON:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactPerson) ? "N/A" : supplierDetails.ContactPerson)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">EMAIL:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Email) ? "N/A" : supplierDetails.Email)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CONTACT NUMBER:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactNumber) ? "N/A" : supplierDetails.ContactNumber)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(supplierDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@supplierDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STREET ADDRESS:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Street) ? "N/A" : supplierDetails.Street)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CITY:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.City) ? "N/A" : supplierDetails.City)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">PROVINCE:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Province) ? "N/A" : supplierDetails.Province)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">ZIP CODE:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Zip) ? "N/A" : supplierDetails.Zip)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@supplierDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = false;
    private string searchTerm = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private List<IT13_Final.Services.Data.SupplierModel> suppliers = new();
    private int sellerUserId = 0;

    private bool showSupplierDetails = false;
    private IT13_Final.Services.Data.SupplierDetailsModel? supplierDetails = null;

    protected override async Task OnInitializedAsync()
    {
        await LoadSellerUserId();
        if (sellerUserId > 0)
        {
            await LoadSuppliersAsync();
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadSuppliersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            if (sellerUserId > 0)
            {
                totalCount = await SupplierService.GetSuppliersCountAsync(sellerUserId, searchTerm);
                suppliers = await SupplierService.GetSuppliersAsync(sellerUserId, searchTerm, currentPage, pageSize);
            }
        }
        catch (Exception)
        {
            suppliers = new List<IT13_Final.Services.Data.SupplierModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private System.Threading.Timer? _searchTimer;
    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadSuppliersAsync());
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _searchTimer?.Dispose();
            currentPage = 1;
            await LoadSuppliersAsync();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadSuppliersAsync();
        }
    }

    private async Task HandleRowClick(int supplierId)
    {
        try
        {
            if (sellerUserId > 0)
            {
                supplierDetails = await SupplierService.GetSupplierDetailsAsync(supplierId, sellerUserId);
                if (supplierDetails != null)
                {
                    showSupplierDetails = true;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading supplier details: {ex.Message}");
        }
    }

    private void CloseSupplierDetails()
    {
        showSupplierDetails = false;
        supplierDetails = null;
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}

