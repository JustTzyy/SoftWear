    private async Task PrintReport()
    {
        if (sellerUserId <= 0) return;

        try
        {
            var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
            if (!confirmed) return;

            isGeneratingPDF = true;
            StateHasChanged();

            var cashierUserIds = await GetCashierUserIdsAsync();
            if (cashierUserIds.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "No sales data to print.");
                return;
            }

            var userIdParams = new List<string>();
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                userIdParams.Add($"@cashierId{i}");
            }
            var cashierIdsInClause = string.Join(",", userIdParams);

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var salesSql = $@"
                SELECT s.id, s.sale_number, s.amount, s.payment_type, s.timestamps,
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as cashier_name
                FROM dbo.tbl_sales s
                INNER JOIN dbo.tbl_users u ON s.user_id = u.id
                WHERE s.archives IS NULL 
                AND s.status = 'Completed'
                AND s.user_id IN ({cashierIdsInClause})
                AND EXISTS (
                    SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                    WHERE dsv.cashier_user_id = s.user_id
                    AND dsv.sale_date = CAST(s.timestamps AS DATE)
                    AND dsv.status = 'Approved'
                    AND dsv.archived_at IS NULL
                    AND dsv.seller_user_id = @SellerUserId
                )";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                salesSql += " AND (s.sale_number LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                salesSql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                salesSql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            salesSql += " ORDER BY s.timestamps DESC";

            using var cmd = new SqlCommand(salesSql, conn);
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                cmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
            }
            cmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                cmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            allSalesForPrint = new List<IT13_Final.Services.Data.SaleReportModel>();
            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                allSalesForPrint.Add(new IT13_Final.Services.Data.SaleReportModel
                {
                    Id = reader.GetInt32(0),
                    SaleNumber = reader.GetString(1),
                    Amount = reader.GetDecimal(2),
                    PaymentMethod = reader.IsDBNull(3) ? string.Empty : reader.GetString(3),
                    Timestamps = reader.GetDateTime(4),
                    CashierName = reader.IsDBNull(5) ? string.Empty : reader.GetString(5)
                });
            }

            await JSRuntime.InvokeVoidAsync("generateSalesReportPDF",
                allSalesForPrint.Select(s => new
                {
                    saleNumber = s.SaleNumber,
                    amount = s.Amount.ToString("N2"),
                    paymentMethod = s.PaymentMethod,
                    cashierName = s.CashierName,
                    date = s.Timestamps.ToString("MMM dd, yyyy"),
                    time = s.Timestamps.ToString("HH:mm:ss")
                }).ToArray(),
                totalSalesAmount.ToString("N2"),
                vatAmount.ToString("N2"),
                totalCount.ToString(),
                AuthState.CurrentUser?.FullName ?? "Stock Clerk",
                startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                endDate?.ToString("MMM dd, yyyy") ?? "Today"
            );

            if (AuthState.CurrentUser != null)
            {
                try
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Reports",
                        "Printed sales report"
                    );
                }
                catch { }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating PDF: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

