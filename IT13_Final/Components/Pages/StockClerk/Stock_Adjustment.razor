                    </div>
                    <div class="detail-item">
                        <span class="detail-label">VARIANT:</span>
                        <span class="detail-value">@stockAdjustmentDetails.VariantName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">SIZE:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(stockAdjustmentDetails.SizeName) ? "N/A" : stockAdjustmentDetails.SizeName)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">COLOR:</span>
                        <span class="detail-value">
                            @if (!string.IsNullOrEmpty(stockAdjustmentDetails.ColorName))
                            {
                                <div style="display: flex; align-items: center; gap: 8px;">
                                    @if (!string.IsNullOrEmpty(stockAdjustmentDetails.ColorHexValue))
                                    {
                                        <span style="display: inline-block; width: 20px; height: 20px; border-radius: 4px; border: 1px solid #ddd; background-color: @stockAdjustmentDetails.ColorHexValue;"></span>
                                    }
                                    <span>@stockAdjustmentDetails.ColorName</span>
                                </div>
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">ADJUSTMENT TYPE:</span>
                        <span class="detail-value">
                            <span class="status-badge @GetAdjustmentTypeClass(stockAdjustmentDetails.AdjustmentType)">@stockAdjustmentDetails.AdjustmentType</span>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">QUANTITY ADJUSTED:</span>
                        <span class="detail-value">@stockAdjustmentDetails.QuantityAdjusted</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">REASON:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(stockAdjustmentDetails.Reason) ? "N/A" : stockAdjustmentDetails.Reason)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">ADJUSTED BY:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(stockAdjustmentDetails.UserName) ? "N/A" : stockAdjustmentDetails.UserName)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE & TIME:</span>
                        <span class="detail-value">@stockAdjustmentDetails.Timestamps.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = false;
    private string searchTerm = string.Empty;
    private string selectedAdjustmentType = string.Empty;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private List<IT13_Final.Services.Data.StockAdjustmentModel> stockAdjustments = new();
    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private int sellerUserId = 0;

    private bool showStockAdjustmentDetails = false;
    private IT13_Final.Services.Data.StockAdjustmentDetailsModel? stockAdjustmentDetails = null;

    private bool showAddStockAdjustmentModal = false;
    private AddStockAdjustmentModel _addStockAdjustmentModel = new();
    private EditContext? _addStockAdjustmentEditContext;
    private List<IT13_Final.Services.Data.VariantModel> availableVariants = new();
    private IT13_Final.Services.Data.VariantDetailsModel? selectedVariantDetails = null;

    public class AddStockAdjustmentModel
    {
        [Required(ErrorMessage = "Variant is required")]
        [Range(1, int.MaxValue, ErrorMessage = "Please select a variant")]
        public int VariantId { get; set; }

        public int? SizeId { get; set; }

        public int? ColorId { get; set; }

        [Required(ErrorMessage = "Adjustment type is required")]
        public string AdjustmentType { get; set; } = string.Empty;

        [Required(ErrorMessage = "Quantity is required")]
        [Range(1, int.MaxValue, ErrorMessage = "Quantity must be greater than 0")]
        public int QuantityAdjusted { get; set; }

        public string? Reason { get; set; }

        public string? CustomReason { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        _addStockAdjustmentEditContext = new EditContext(_addStockAdjustmentModel);
        await LoadSellerUserId();
        if (sellerUserId > 0)
        {
            await LoadVariantsAsync();
            await LoadStockAdjustmentsAsync();
        }
    }

    private async Task LoadSellerUserId()
    {
        if (AuthState.CurrentUser != null)
        {
            try
            {
                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var sql = "SELECT user_id FROM dbo.tbl_users WHERE id = @UserId AND archived_at IS NULL";
                using var cmd = new SqlCommand(sql, conn);
                cmd.Parameters.AddWithValue("@UserId", AuthState.CurrentUser.Id);

                var result = await cmd.ExecuteScalarAsync();
                if (result != null && result != DBNull.Value)
                {
                    sellerUserId = Convert.ToInt32(result);
                }
            }
            catch
            {
                sellerUserId = 0;
            }
        }
    }

    private async Task LoadVariantsAsync()
    {
        try
        {
            if (sellerUserId > 0)
            {
                availableVariants = await VariantService.GetVariantsAsync(sellerUserId, null, 1, 1000);
            }
        }
        catch (Exception)
        {
            availableVariants = new List<IT13_Final.Services.Data.VariantModel>();
        }
    }

    private async Task LoadStockAdjustmentsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            if (sellerUserId > 0)
            {
                totalCount = await StockAdjustmentService.GetStockAdjustmentsCountAsync(sellerUserId, searchTerm, string.IsNullOrEmpty(selectedAdjustmentType) ? null : selectedAdjustmentType);
                stockAdjustments = await StockAdjustmentService.GetStockAdjustmentsAsync(sellerUserId, searchTerm, string.IsNullOrEmpty(selectedAdjustmentType) ? null : selectedAdjustmentType, currentPage, pageSize);
            }
        }
        catch (Exception)
        {
            stockAdjustments = new List<IT13_Final.Services.Data.StockAdjustmentModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private System.Threading.Timer? _searchTimer;
    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadStockAdjustmentsAsync());
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _searchTimer?.Dispose();
            currentPage = 1;
            await LoadStockAdjustmentsAsync();
        }
    }

    private async Task OnAdjustmentTypeFilterChanged()
    {
        currentPage = 1;
        await LoadStockAdjustmentsAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadStockAdjustmentsAsync();
        }
    }

    private async Task HandleRowClick(int adjustmentId)
    {
        try
        {
            if (sellerUserId > 0)
            {
                stockAdjustmentDetails = await StockAdjustmentService.GetStockAdjustmentDetailsAsync(adjustmentId, sellerUserId);
                if (stockAdjustmentDetails != null)
                {
                    showStockAdjustmentDetails = true;
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading adjustment details: {ex.Message}");
        }
    }

    private void CloseStockAdjustmentDetails()
    {
        showStockAdjustmentDetails = false;
        stockAdjustmentDetails = null;
    }

    private void HandleAddStockAdjustment()
    {
        _addStockAdjustmentModel = new AddStockAdjustmentModel();
        _addStockAdjustmentEditContext = new EditContext(_addStockAdjustmentModel);
        selectedVariantDetails = null;
        showAddStockAdjustmentModal = true;
        StateHasChanged();
    }

    private void CloseAddStockAdjustmentModal()
    {
        showAddStockAdjustmentModal = false;
        _addStockAdjustmentModel = new AddStockAdjustmentModel();
        _addStockAdjustmentEditContext = new EditContext(_addStockAdjustmentModel);
        selectedVariantDetails = null;
    }

    private async Task OnVariantSelectedAsync()
    {
        if (_addStockAdjustmentModel.VariantId > 0 && sellerUserId > 0)
        {
            try
            {
                selectedVariantDetails = await VariantService.GetVariantDetailsAsync(_addStockAdjustmentModel.VariantId, sellerUserId);
                // Reset size and color when variant changes
                _addStockAdjustmentModel.SizeId = null;
                _addStockAdjustmentModel.ColorId = null;
            }
            catch (Exception ex)
            {
                selectedVariantDetails = null;
                await JSRuntime.InvokeVoidAsync("console.error", $"Error loading variant details: {ex.Message}");
            }
        }
        else
        {
            selectedVariantDetails = null;
            _addStockAdjustmentModel.SizeId = null;
            _addStockAdjustmentModel.ColorId = null;
        }
        await InvokeAsync(StateHasChanged);
    }

    private async Task SaveStockAdjustmentAsync()
    {
        try
        {
            if (sellerUserId > 0 && AuthState.CurrentUser != null)
            {
                // Use custom reason if "Other" is selected
                string finalReason = _addStockAdjustmentModel.Reason == "Other" 
                    ? _addStockAdjustmentModel.CustomReason 
                    : _addStockAdjustmentModel.Reason;

                var adjustmentId = await StockAdjustmentService.CreateStockAdjustmentAsync(
                    sellerUserId,
                    AuthState.CurrentUser.Id,
                    _addStockAdjustmentModel.VariantId,
                    _addStockAdjustmentModel.SizeId == 0 ? null : _addStockAdjustmentModel.SizeId,
                    _addStockAdjustmentModel.ColorId == 0 ? null : _addStockAdjustmentModel.ColorId,
                    _addStockAdjustmentModel.AdjustmentType,
                    _addStockAdjustmentModel.QuantityAdjusted,
                    finalReason
                );

                if (adjustmentId.HasValue)
                {
                    showSuccessMessage = true;
                    successMessageText = $"Stock adjustment ({_addStockAdjustmentModel.AdjustmentType}) created successfully!";
                    CloseAddStockAdjustmentModal();
                    await LoadStockAdjustmentsAsync();
                    
                    // Hide success message after 3 seconds
                    await Task.Delay(3000);
                    showSuccessMessage = false;
                    StateHasChanged();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Failed to create stock adjustment. Please try again.");
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error creating stock adjustment: {ex.Message}");
        }
    }

    private string GetAdjustmentTypeClass(string adjustmentType)
    {
        return adjustmentType.ToLower() switch
        {
            "increase" => "active",
            "decrease" => "inactive",
            _ => ""
        };
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
    }
}

