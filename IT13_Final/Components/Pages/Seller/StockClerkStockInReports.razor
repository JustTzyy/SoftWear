@code {
    private List<IT13_Final.Services.Data.StockInModel> stockIns = new();
    private List<IT13_Final.Services.Data.StockInModel> allStockInsForPrint = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private bool isGeneratingPDF = false;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);

    private int totalQuantityAdded = 0;
    private decimal totalCost = 0m;
    private decimal avgCostPerItem = 0m;

    private System.Threading.Timer? _searchTimer;
    private bool showStockInDetailsModal = false;
    private IT13_Final.Services.Data.StockInDetailsModel? selectedStockIn = null;
    private int sellerUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadStockIns();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "stock-in-report-search-input");
        }
    }

    private async Task<List<int>> GetStockClerkUserIdsAsync()
    {
        var clerkIds = new List<int>();
        
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        if (sellerUserId <= 0)
        {
            return clerkIds;
        }

        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT u.id
                FROM dbo.tbl_users u
                JOIN dbo.tbl_roles r ON r.id = u.role_id
                WHERE u.user_id = @SellerId
                AND LOWER(r.name) = 'stockclerk'
                AND u.archived_at IS NULL";

            using var cmd = new SqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("@SellerId", sellerUserId);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                // Safely handle Int32/Int64 conversion
                if (!reader.IsDBNull(0))
                {
                    clerkIds.Add(Convert.ToInt32(reader.GetValue(0)));
                }
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock clerk IDs: {ex.Message}");
        }

        return clerkIds;
    }

    private async Task LoadStockIns()
    {
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all stock clerk user IDs for this seller
            var clerkIds = await GetStockClerkUserIdsAsync();
            
            if (clerkIds.Count == 0)
            {
                stockIns = new List<IT13_Final.Services.Data.StockInModel>();
                totalCount = 0;
                totalQuantityAdded = 0;
                totalCost = 0m;
                avgCostPerItem = 0m;
                return;
            }

            // Build parameterized IN clause
            var userIdParams = new List<string>();
            for (int i = 0; i < clerkIds.Count; i++)
            {
                userIdParams.Add($"@clerkId{i}");
            }
            var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            // Build filters
            var filterSql = "";
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                filterSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm OR s.company_name LIKE @SearchTerm)";
            }
            if (startDate.HasValue)
            {
                filterSql += " AND CAST(si.timestamps AS DATE) >= @StartDate";
            }
            if (endDate.HasValue)
            {
                filterSql += " AND CAST(si.timestamps AS DATE) <= @EndDate";
            }

            // Get count
            var countSql = $@"
                SELECT COUNT(*)
                FROM dbo.tbl_stock_in si
                INNER JOIN dbo.tbl_variants v ON si.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                LEFT JOIN dbo.tbl_suppliers s ON si.supplier_id = s.id
                WHERE si.archives IS NULL
                AND si.user_id IN ({clerkIdsInClause})
                {filterSql}";

            using var countCmd = new SqlCommand(countSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                countCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var countResult = await countCmd.ExecuteScalarAsync();
            // COUNT() returns bigint (Int64), so we need to handle it properly
            if (countResult != null && countResult != DBNull.Value)
            {
                if (countResult is long longValue)
                {
                    totalCount = Convert.ToInt32(longValue);
                }
                else if (countResult is int intValue)
                {
                    totalCount = intValue;
                }
                else
                {
                    totalCount = Convert.ToInt32(countResult);
                }
            }
            else
            {
                totalCount = 0;
            }

            // Get summary stats
            var summarySql = $@"
                SELECT 
                    SUM(si.quantity_added) as total_quantity,
                    SUM(si.quantity_added * si.cost_price) as total_cost
                FROM dbo.tbl_stock_in si
                INNER JOIN dbo.tbl_variants v ON si.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                LEFT JOIN dbo.tbl_suppliers s ON si.supplier_id = s.id
                WHERE si.archives IS NULL
                AND si.user_id IN ({clerkIdsInClause})
                {filterSql}";

            using var summaryCmd = new SqlCommand(summarySql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                summaryCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                summaryCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                summaryCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                summaryCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            using (var summaryReader = await summaryCmd.ExecuteReaderAsync())
            {
                if (await summaryReader.ReadAsync())
                {
                    // SUM can return Int32 or Int64 depending on SQL Server version, so use GetValue and convert safely
                    if (!summaryReader.IsDBNull(0))
                    {
                        var qtyValue = summaryReader.GetValue(0);
                        totalQuantityAdded = Convert.ToInt32(qtyValue);
                    }
                    else
                    {
                        totalQuantityAdded = 0;
                    }
                    
                    totalCost = summaryReader.IsDBNull(1) ? 0m : summaryReader.GetDecimal(1);
                    avgCostPerItem = totalQuantityAdded > 0 ? totalCost / totalQuantityAdded : 0m;
                }
            } // Ensure summaryReader is fully disposed before next query

            // Get data with proper user name retrieval
            var offset = (currentPage - 1) * pageSize;
            var dataSql = $@"
                SELECT si.id, si.quantity_added, si.cost_price, si.timestamps, si.variant_id, 
                       v.name as variant_name, p.name as product_name, si.supplier_id, 
                       s.company_name as supplier_name, 
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as user_name
                FROM dbo.tbl_stock_in si
                INNER JOIN dbo.tbl_variants v ON si.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                INNER JOIN dbo.tbl_users u ON si.user_id = u.id
                LEFT JOIN dbo.tbl_suppliers s ON si.supplier_id = s.id
                WHERE si.archives IS NULL
                AND si.user_id IN ({clerkIdsInClause})
                {filterSql}
                ORDER BY si.timestamps DESC
                OFFSET @Offset ROWS FETCH NEXT @PageSize ROWS ONLY";

            using var dataCmd = new SqlCommand(dataSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                dataCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }
            dataCmd.Parameters.AddWithValue("@Offset", offset);
            dataCmd.Parameters.AddWithValue("@PageSize", pageSize);

            stockIns = new List<IT13_Final.Services.Data.StockInModel>();
            using var reader = await dataCmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                // Safely handle Int32/Int64 conversions
                int id = reader.IsDBNull(0) ? 0 : Convert.ToInt32(reader.GetValue(0));
                int quantityAdded = reader.IsDBNull(1) ? 0 : Convert.ToInt32(reader.GetValue(1));
                decimal costPrice = reader.IsDBNull(2) ? 0m : reader.GetDecimal(2);
                DateTime timestamps = reader.IsDBNull(3) ? DateTime.MinValue : reader.GetDateTime(3);
                int variantId = reader.IsDBNull(4) ? 0 : Convert.ToInt32(reader.GetValue(4));
                string variantName = reader.IsDBNull(5) ? string.Empty : reader.GetString(5);
                string productName = reader.IsDBNull(6) ? string.Empty : reader.GetString(6);
                int? supplierId = reader.IsDBNull(7) ? null : Convert.ToInt32(reader.GetValue(7));
                string? supplierName = reader.IsDBNull(8) ? null : reader.GetString(8);
                string userName = reader.IsDBNull(9) ? string.Empty : reader.GetString(9);
                
                stockIns.Add(new IT13_Final.Services.Data.StockInModel
                {
                    Id = id,
                    QuantityAdded = quantityAdded,
                    CostPrice = costPrice,
                    Timestamps = timestamps,
                    VariantId = variantId,
                    VariantName = variantName,
                    ProductName = productName,
                    SupplierId = supplierId,
                    SupplierName = supplierName,
                    UserName = userName
                });
            }

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                await LoadStockIns();
                return;
            }
        }
