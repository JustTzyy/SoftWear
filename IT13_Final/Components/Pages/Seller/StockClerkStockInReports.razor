    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            if (sellerUserId <= 0)
            {
                sellerUserId = AuthState.CurrentUser?.Id ?? 0;
            }

            var clerkIds = await GetStockClerkUserIdsAsync();
            if (clerkIds.Count == 0)
            {
                allStockInsForPrint = new List<IT13_Final.Services.Data.StockInModel>();
            }
            else
            {
                // Build parameterized IN clause
                var userIdParams = new List<string>();
                for (int i = 0; i < clerkIds.Count; i++)
                {
                    userIdParams.Add($"@clerkId{i}");
                }
                var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var filterSql = "";
                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    filterSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm OR s.company_name LIKE @SearchTerm)";
                }
                if (startDate.HasValue)
                {
                    filterSql += " AND CAST(si.timestamps AS DATE) >= @StartDate";
                }
                if (endDate.HasValue)
                {
                    filterSql += " AND CAST(si.timestamps AS DATE) <= @EndDate";
                }

                var dataSql = $@"
                    SELECT si.id, si.quantity_added, si.cost_price, si.timestamps, si.variant_id, 
                           v.name as variant_name, p.name as product_name, si.supplier_id, 
                           s.company_name as supplier_name, 
                           COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as user_name
                    FROM dbo.tbl_stock_in si
                    INNER JOIN dbo.tbl_variants v ON si.variant_id = v.id
                    INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                    INNER JOIN dbo.tbl_users u ON si.user_id = u.id
                    LEFT JOIN dbo.tbl_suppliers s ON si.supplier_id = s.id
                    WHERE si.archives IS NULL
                    AND si.user_id IN ({clerkIdsInClause})
                    {filterSql}
                    ORDER BY si.timestamps DESC";

                using var dataCmd = new SqlCommand(dataSql, conn);
                for (int i = 0; i < clerkIds.Count; i++)
                {
                    dataCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
                }
                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    dataCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
                }
                if (startDate.HasValue)
                {
                    dataCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                }
                if (endDate.HasValue)
                {
                    dataCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                }

                allStockInsForPrint = new List<IT13_Final.Services.Data.StockInModel>();
                using var reader = await dataCmd.ExecuteReaderAsync();
                while (await reader.ReadAsync())
                {
                    // Safely handle Int32/Int64 conversions
                    int id = reader.IsDBNull(0) ? 0 : Convert.ToInt32(reader.GetValue(0));
                    int quantityAdded = reader.IsDBNull(1) ? 0 : Convert.ToInt32(reader.GetValue(1));
                    decimal costPrice = reader.IsDBNull(2) ? 0m : reader.GetDecimal(2);
                    DateTime timestamps = reader.IsDBNull(3) ? DateTime.MinValue : reader.GetDateTime(3);
                    int variantId = reader.IsDBNull(4) ? 0 : Convert.ToInt32(reader.GetValue(4));
                    string variantName = reader.IsDBNull(5) ? string.Empty : reader.GetString(5);
                    string productName = reader.IsDBNull(6) ? string.Empty : reader.GetString(6);
                    int? supplierId = reader.IsDBNull(7) ? null : Convert.ToInt32(reader.GetValue(7));
                    string? supplierName = reader.IsDBNull(8) ? null : reader.GetString(8);
                    string userName = reader.IsDBNull(9) ? string.Empty : reader.GetString(9);
                    
                    allStockInsForPrint.Add(new IT13_Final.Services.Data.StockInModel
                    {
                        Id = id,
                        QuantityAdded = quantityAdded,
                        CostPrice = costPrice,
                        Timestamps = timestamps,
                        VariantId = variantId,
                        VariantName = variantName,
                        ProductName = productName,
                        SupplierId = supplierId,
                        SupplierName = supplierName,
                        UserName = userName
                    });
                }
            }

            await JSRuntime.InvokeVoidAsync("generateAndPrintStockInReport", 
                allStockInsForPrint.Select(si => new
                {
                    productName = si.ProductName,
                    variantName = si.VariantName,
                    quantity = si.QuantityAdded,
                    costPrice = si.CostPrice,
                    totalCost = si.QuantityAdded * si.CostPrice,
                    supplierName = si.SupplierName ?? "N/A",
                    stockClerkName = si.UserName ?? "N/A",
                    date = si.Timestamps.ToString("MMM dd, yyyy"),
                    time = si.Timestamps.ToString("HH:mm:ss")
                }).ToArray(),
                AuthState.CurrentUser?.FullName ?? "Seller",
                startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                endDate?.ToString("MMM dd, yyyy") ?? "Today"
            );

            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Seller_StockIn_Report",
                        $"Printed stock in report - {allStockInsForPrint.Count} records from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating stock in report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

