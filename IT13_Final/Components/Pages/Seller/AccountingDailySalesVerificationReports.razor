@code {
    private List<IT13_Final.Services.Data.DailySalesVerificationModel> verifications = new();
    private IT13_Final.Services.Data.DailySalesVerificationDetailsModel? selectedDailySales;
    private bool showDetailsModal = false;
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private string selectedStatus = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue || !string.IsNullOrEmpty(selectedStatus);
    private bool isLoading = false;
    private bool isGeneratingPDF = false;
    private bool hideConfidential = false;
    private int sellerUserId = 0;
    private System.Threading.Timer? _searchTimer;
    private decimal vatAmount = 0m;
    private decimal adminFeeAmount = 0m;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    
    // Summary values calculated from all records (not just current page)
    private decimal totalSalesSummary = 0m;
    private decimal totalCashSummary = 0m;
    private decimal totalGCashSummary = 0m;
    private decimal totalReturnsSummary = 0m;
    private int approvedCountSummary = 0;
    private int rejectedCountSummary = 0;
    private int pendingCountSummary = 0;

    private void ToggleConfidentialVisibility()
    {
        hideConfidential = !hideConfidential;
        StateHasChanged();
    }

    private string MaskValue(decimal value, string format = "N2")
    {
        return hideConfidential ? "•••••" : FormatCompactNumber(value);
    }

    private string MaskValue(int value)
    {
        return hideConfidential ? "•••" : value.ToString();
    }

    private string FormatCompactNumber(decimal value)
    {
        var absValue = Math.Abs(value);
        var isNegative = value < 0;
        string result;
        if (absValue >= 1_000_000_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000_000_000m) + "T";
        else if (absValue >= 1_000_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000_000m) + "B";
        else if (absValue >= 1_000_000m) result = FormatWithMaxDigits(absValue / 1_000_000m) + "M";
        else if (absValue >= 10_000m) result = FormatWithMaxDigits(absValue / 1_000m) + "K";
        else result = absValue.ToString("N2");
        return isNegative ? $"{result} (Debt)" : result;
    }

    private string FormatWithMaxDigits(decimal num)
    {
        if (num >= 1000) return num.ToString("N0");
        if (num >= 100) return num.ToString("F1");
        if (num >= 10) return num.ToString("F2");
        return num.ToString("F3");
    }

    private async Task ShowDailySalesDetails(int cashierUserId, DateTime saleDate)
    {
        try
        {
            if (sellerUserId <= 0)
            {
                sellerUserId = AuthState.CurrentUser?.Id ?? 0;
            }

            if (sellerUserId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("alert", "Seller ID not found. Cannot load daily sales details.");
                return;
            }

            selectedDailySales = await DailySalesVerificationService.GetDailySalesDetailsForAccountingAsync(
                cashierUserId,
                saleDate,
                sellerUserId
            );

            if (selectedDailySales != null)
            {
                showDetailsModal = true;
                StateHasChanged();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Daily sales details not found or you do not have permission to view it.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading daily sales details: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading daily sales details: {ex.Message}");
        }
    }

    private void CloseDetailsModal()
    {
        showDetailsModal = false;
        selectedDailySales = null;
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        // For seller reports, use the seller's own tbl_users.id
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadVerifications();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "verification-report-search-input");
        }
    }

    private async Task LoadVerifications()
    {
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
            if (sellerUserId <= 0)
            {
                await JSRuntime.InvokeVoidAsync("console.error", "Seller User ID not found.");
                isLoading = false;
                StateHasChanged();
                return;
            }
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get total count first
            totalCount = await DailySalesVerificationService.GetAllDailySalesVerificationsCountForReportAsync(
                sellerUserId,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(selectedStatus) ? null : selectedStatus
            );

            // Get paginated results
            verifications = await DailySalesVerificationService.GetAllDailySalesVerificationsForReportAsync(
                sellerUserId,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(selectedStatus) ? null : selectedStatus,
                currentPage,
                pageSize
            );

            // Get all records for summary calculations (not paginated)
            var allVerifications = await DailySalesVerificationService.GetAllDailySalesVerificationsForReportAsync(
                sellerUserId,
                string.IsNullOrWhiteSpace(searchTerm) ? null : searchTerm,
                startDate,
                endDate,
                string.IsNullOrWhiteSpace(selectedStatus) ? null : selectedStatus,
                1,
                10000
            );
            
            // Calculate summary values from all records
            totalSalesSummary = allVerifications.Sum(v => v.TotalSales);
            totalCashSummary = allVerifications.Sum(v => v.CashAmount);
            totalGCashSummary = allVerifications.Sum(v => v.GCashAmount);
            totalReturnsSummary = allVerifications.Sum(v => v.TotalReturns);
            approvedCountSummary = allVerifications.Count(v => v.Status == "Approved");
            rejectedCountSummary = allVerifications.Count(v => v.Status == "Rejected");
            pendingCountSummary = allVerifications.Count(v => v.Status == "Pending");
            
            // Calculate net sales (total sales - approved returns)
            // VAT and Admin Fee are calculated on net sales after returns
            var netSalesAmount = totalSalesSummary - totalReturnsSummary;
            
            // Calculate VAT (12% on net sales after returns)
            vatAmount = netSalesAmount * 0.12m;

            // Calculate Admin Fee (2% on net sales after returns)
            adminFeeAmount = netSalesAmount * 0.02m;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading verifications: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading verifications: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }


