@* Verifications List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Daily Sales Verifications</h3>
            <span class="card-subtitle">@totalCount verifications found</span>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>Cashier</th>
                    <th>Total Sales</th>
                    <th>Returns</th>
                    <th>Status</th>
                    <th>Verified By</th>
                    <th>Verified At</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="6" class="loading-cell">Loading daily sales verifications...</td>
                    </tr>
                }
                else if (verifications.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="empty-cell">No daily sales verifications found for this filter.</td>
                    </tr>
                }
                else
                {
                    @foreach (var verification in verifications)
                    {
                        <tr class="clickable-row" @onclick="async () => await ShowDailySalesDetails(verification.CashierUserId, verification.SaleDate)">
                            <td>@verification.CashierName</td>
                            <td style="text-align: right; font-weight: 600;" class="@(hideConfidential ? "masked" : "")">₱@MaskValue(verification.TotalSales)</td>
                            <td style="text-align: right;">
                                @if (verification.ReturnCount > 0)
                                {
                                    <span style="color: #dc3545;">@verification.ReturnCount (₱@verification.TotalReturns.ToString("N2"))</span>
                                }
                                else
                                {
                                    <span>0</span>
                                }
                            </td>
                            <td>
                                <span style="color: @(verification.Status == "Approved" ? "#065F46" : verification.Status == "Rejected" ? "#991B1B" : "#D97706"); font-weight: 600;">@verification.Status</span>
                            </td>
                            <td>@(verification.VerifiedByName ?? "-")</td>
                            <td>
                                @if (verification.VerifiedAt.HasValue)
                                {
                                    <div class="timestamp-info">
                                        <div class="timestamp-date">@verification.VerifiedAt.Value.ToString("MMM dd, yyyy")</div>
                                        <div class="timestamp-time">@verification.VerifiedAt.Value.ToString("HH:mm")</div>
                                    </div>
                                }
                                else
                                {
                                    <span>-</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div style="display:flex; justify-content:center; align-items:center; gap:8px; padding:20px; border-top:1px solid #e5e7eb; background:#f9fafb;">
            <button style="min-width:36px; height:36px; padding:0 12px; border:1px solid #e5e7eb; border-radius:8px; background:white; color:#374151; font-weight:600; font-size:14px; cursor:pointer; display:flex; align-items:center; justify-content:center;" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg style="width:16px; height:16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    @if (i == currentPage)
                    {
                        <button style="min-width:36px; height:36px; padding:0 12px; border:1px solid #5C7CFA; border-radius:8px; background:linear-gradient(135deg, #5C7CFA 0%, #4c6ef5 100%); color:white; font-weight:600; font-size:14px; cursor:pointer; display:flex; align-items:center; justify-content:center; box-shadow:0 2px 8px rgba(92,124,250,0.3);" @onclick="() => GoToPage(pageNum)">
                            @i
                        </button>
                    }
                    else
                    {
                        <button style="min-width:36px; height:36px; padding:0 12px; border:1px solid #e5e7eb; border-radius:8px; background:white; color:#374151; font-weight:600; font-size:14px; cursor:pointer; display:flex; align-items:center; justify-content:center;" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                    }
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span style="padding:0 8px; color:#9ca3af; font-weight:600;">...</span>
                }
            }

            <button style="min-width:36px; height:36px; padding:0 12px; border:1px solid #e5e7eb; border-radius:8px; background:white; color:#374151; font-weight:600; font-size:14px; cursor:pointer; display:flex; align-items:center; justify-content:center;" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg style="width:16px; height:16px;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

