@code {
    private List<IT13_Final.Services.Data.SupplierModel> suppliers = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);

    private bool showSupplierDetails = false;
    private IT13_Final.Services.Data.SupplierDetailsModel? supplierDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddSupplierModal = false;
    private AddSupplierModel _addSupplierModel = new();
    private EditContext? _addSupplierEditContext;
    private readonly IT13_Final.Services.Data.AddressModel _addSupplierAddressModel = new();
    private List<string> _provinces = new();
    private List<string> _addSupplierCities = new();

    private bool showUpdateSupplierModal = false;
    private UpdateSupplierModel _updateSupplierModel = new();
    private EditContext? _updateSupplierEditContext;
    private readonly IT13_Final.Services.Data.AddressModel _updateSupplierAddressModel = new();
    private List<string> _updateSupplierCities = new();
    private int? _updateSupplierId = null;

    protected override async Task OnInitializedAsync()
    {
        _addSupplierEditContext = new EditContext(_addSupplierModel);
        _updateSupplierEditContext = new EditContext(_updateSupplierModel);
        _provinces = PhilippineAddressService.GetProvinces();
        _provinces.Sort();
        await LoadSuppliersAsync();
    }

    private async Task LoadSuppliersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            totalCount = await SupplierService.GetSuppliersCountAsync(userId, searchTerm);
            suppliers = await SupplierService.GetSuppliersAsync(userId, searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            suppliers = new List<IT13_Final.Services.Data.SupplierModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadSuppliersAsync();
        }
    }

    private System.Threading.Timer? _searchTimer;
    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadSuppliersAsync();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadSuppliersAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Supplier_Record");
    }

    private void HandleAddSupplier()
    {
        _addSupplierModel = new AddSupplierModel();
        _addSupplierAddressModel.Id = 0;
        _addSupplierAddressModel.Street = string.Empty;
        _addSupplierAddressModel.City = string.Empty;
        _addSupplierAddressModel.Province = string.Empty;
        _addSupplierAddressModel.Zip = string.Empty;
        _addSupplierCities = new List<string>();
        _addSupplierEditContext = new EditContext(_addSupplierModel);
        showAddSupplierModal = true;
    }

    private void CloseAddSupplierModal()
    {
        showAddSupplierModal = false;
        _addSupplierModel = new AddSupplierModel();
        _addSupplierAddressModel.Id = 0;
        _addSupplierAddressModel.Street = string.Empty;
        _addSupplierAddressModel.City = string.Empty;
        _addSupplierAddressModel.Province = string.Empty;
        _addSupplierAddressModel.Zip = string.Empty;
        _addSupplierCities = new List<string>();
    }

    private async Task SaveSupplierAsync()
    {
        if (_addSupplierEditContext?.Validate() ?? false)
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var address = (!string.IsNullOrWhiteSpace(_addSupplierAddressModel.Street) || 
                          !string.IsNullOrWhiteSpace(_addSupplierAddressModel.City) || 
                          !string.IsNullOrWhiteSpace(_addSupplierAddressModel.Province) || 
                          !string.IsNullOrWhiteSpace(_addSupplierAddressModel.Zip)) 
                          ? _addSupplierAddressModel : null;

            var newSupplierId = await SupplierService.CreateSupplierAsync(
                userId,
                _addSupplierModel.CompanyName,
                string.IsNullOrWhiteSpace(_addSupplierModel.ContactPerson) ? null : _addSupplierModel.ContactPerson,
                string.IsNullOrWhiteSpace(_addSupplierModel.Email) ? null : _addSupplierModel.Email,
                string.IsNullOrWhiteSpace(_addSupplierModel.ContactNumber) ? null : _addSupplierModel.ContactNumber,
                "Active",
                address
            );

            if (newSupplierId.HasValue)
            {
                ShowSuccessMessage($"Supplier '{_addSupplierModel.CompanyName}' added successfully!");
                CloseAddSupplierModal();
                await LoadSuppliersAsync();
            }
        }
    }

    private async Task HandleEdit(int supplierId)
    {
        _updateSupplierId = supplierId;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var details = await SupplierService.GetSupplierDetailsAsync(supplierId, userId);
            if (details == null) return;

            _updateSupplierModel = new UpdateSupplierModel
            {
                CompanyName = details.CompanyName,
                ContactPerson = details.ContactPerson ?? string.Empty,
                Email = details.Email ?? string.Empty,
                ContactNumber = details.ContactNumber ?? string.Empty
            };

            _updateSupplierAddressModel.Street = details.Street;
            _updateSupplierAddressModel.City = details.City;
            _updateSupplierAddressModel.Province = details.Province;
            _updateSupplierAddressModel.Zip = details.Zip;

            // Load cities for the selected province
            if (!string.IsNullOrEmpty(_updateSupplierAddressModel.Province))
            {
                _updateSupplierCities = PhilippineAddressService.GetCities(_updateSupplierAddressModel.Province);
                _updateSupplierCities.Sort();
            }
            else
            {
                _updateSupplierCities = new List<string>();
            }

            _updateSupplierEditContext = new EditContext(_updateSupplierModel);
            showUpdateSupplierModal = true;
            StateHasChanged();
        }
        catch (Exception)
        {
            // Handle error
        }
    }

    private void CloseUpdateSupplierModal()
    {
        showUpdateSupplierModal = false;
        _updateSupplierModel = new UpdateSupplierModel();
        _updateSupplierAddressModel.Id = 0;
        _updateSupplierAddressModel.Street = string.Empty;
        _updateSupplierAddressModel.City = string.Empty;
        _updateSupplierAddressModel.Province = string.Empty;
        _updateSupplierAddressModel.Zip = string.Empty;
        _updateSupplierCities = new List<string>();
        _updateSupplierId = null;
    }

    private async Task SaveUpdateSupplierAsync()
    {
        if (!_updateSupplierId.HasValue) return;

        if (_updateSupplierEditContext?.Validate() ?? false)
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var address = (!string.IsNullOrWhiteSpace(_updateSupplierAddressModel.Street) || 
                          !string.IsNullOrWhiteSpace(_updateSupplierAddressModel.City) || 
                          !string.IsNullOrWhiteSpace(_updateSupplierAddressModel.Province) || 
                          !string.IsNullOrWhiteSpace(_updateSupplierAddressModel.Zip)) 
                          ? _updateSupplierAddressModel : null;

            var success = await SupplierService.UpdateSupplierAsync(
                _updateSupplierId.Value,
                userId,
                _updateSupplierModel.CompanyName,
                string.IsNullOrWhiteSpace(_updateSupplierModel.ContactPerson) ? null : _updateSupplierModel.ContactPerson,
                string.IsNullOrWhiteSpace(_updateSupplierModel.Email) ? null : _updateSupplierModel.Email,
                string.IsNullOrWhiteSpace(_updateSupplierModel.ContactNumber) ? null : _updateSupplierModel.ContactNumber,
                "Active",
                address
            );

            if (success)
            {
                ShowSuccessMessage($"Supplier '{_updateSupplierModel.CompanyName}' updated successfully!");
                CloseUpdateSupplierModal();
                await LoadSuppliersAsync();
            }
        }
    }

    private async Task HandleDelete(int supplierId)
    {
        var supplier = suppliers.FirstOrDefault(s => s.Id == supplierId);
        var supplierName = supplier?.CompanyName ?? "this supplier";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to archive {supplierName}?");
        if (!confirmed) return;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await SupplierService.ArchiveSupplierAsync(supplierId, userId);
            
            if (success)
            {
                ShowSuccessMessage("Supplier archived successfully!");
                await LoadSuppliersAsync();
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

