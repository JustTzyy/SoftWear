@code {
    private List<IT13_Final.Services.Data.SupplierModel> suppliers = new();
    private List<IT13_Final.Services.Data.SupplierModel> allFilteredSuppliers = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);

    private bool showSupplierDetails = false;
    private IT13_Final.Services.Data.SupplierDetailsModel? supplierDetails = null;

    private bool showSuccessMessage = false;
    
    // Date filtering
    private string selectedDateRange = "";
    private DateTime? filterStartDate = null;
    private DateTime? filterEndDate = null;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || filterStartDate.HasValue || filterEndDate.HasValue;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddSupplierModal = false;
    private AddSupplierModel _addSupplierModel = new();
    private EditContext? _addSupplierEditContext;
    private readonly IT13_Final.Services.Data.AddressModel _addSupplierAddressModel = new();
    private List<string> _provinces = new();
    private List<string> _addSupplierCities = new();

    private bool showUpdateSupplierModal = false;
    private UpdateSupplierModel _updateSupplierModel = new();
    private EditContext? _updateSupplierEditContext;
    private readonly IT13_Final.Services.Data.AddressModel _updateSupplierAddressModel = new();
    private List<string> _updateSupplierCities = new();
    private int? _updateSupplierId = null;

    protected override async Task OnInitializedAsync()
    {
        _addSupplierEditContext = new EditContext(_addSupplierModel);
        _updateSupplierEditContext = new EditContext(_updateSupplierModel);
        _provinces = PhilippineAddressService.GetProvinces();
        _provinces.Sort();
        await LoadSuppliersAsync();
    }

    private async Task LoadSuppliersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            // Get all suppliers matching search term first
            var allSuppliers = await SupplierService.GetSuppliersAsync(userId, searchTerm, null, null, 1, 10000);
            
            // Apply date filter client-side
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredSuppliers = allSuppliers.Where(s =>
                {
                    var createdDate = s.DateCreated.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date && createdDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return createdDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredSuppliers = allSuppliers;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredSuppliers.Count;
            
            // Apply pagination to filtered results
            suppliers = allFilteredSuppliers
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            suppliers = new List<IT13_Final.Services.Data.SupplierModel>();
            allFilteredSuppliers = new List<IT13_Final.Services.Data.SupplierModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Debounce search to avoid too many queries
    private System.Threading.Timer? _searchTimer;
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
