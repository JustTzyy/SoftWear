        if (filterStartDate.HasValue)
            return $"From {filterStartDate.Value:MMM dd, yyyy}";
        if (filterEndDate.HasValue)
            return $"Until {filterEndDate.Value:MMM dd, yyyy}";
        return "All Time";
    }

