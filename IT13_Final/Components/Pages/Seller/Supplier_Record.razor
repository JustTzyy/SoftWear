    private void FilterAddContactPersonInput(ChangeEventArgs e)
    {
        var val = e.Value?.ToString() ?? string.Empty;
        var filtered = new string(val.Where(c => char.IsLetter(c) || c == ' ' || c == '\'' || c == '-' || c == '.').ToArray());
        
        // Auto-capitalize: first letter uppercase, rest lowercase unless after space
        if (!string.IsNullOrEmpty(filtered))
        {
            var chars = filtered.ToCharArray();
            bool capitalizeNext = true;
            
            for (int i = 0; i < chars.Length; i++)
            {
                if (char.IsLetter(chars[i]))
                {
                    if (capitalizeNext)
                    {
                        chars[i] = char.ToUpper(chars[i]);
                        capitalizeNext = false;
                    }
                    else
                    {
                        chars[i] = char.ToLower(chars[i]);
                    }
                }
                else if (chars[i] == ' ')
                {
                    capitalizeNext = true;
                }
            }
            
            filtered = new string(chars);
        }
        
        _addSupplierModel.ContactPerson = filtered;
        
        // Notify EditContext of field change
        if (_addSupplierEditContext != null)
        {
            _addSupplierEditContext.NotifyFieldChanged(_addSupplierEditContext.Field(nameof(_addSupplierModel.ContactPerson)));
        }
        
        StateHasChanged();
    }

