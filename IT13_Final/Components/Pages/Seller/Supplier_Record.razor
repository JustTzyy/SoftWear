                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content">
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">COMPANY NAME:</span>
                        <span class="detail-value">@supplierDetails.CompanyName</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CONTACT PERSON:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactPerson) ? "N/A" : supplierDetails.ContactPerson)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">EMAIL:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Email) ? "N/A" : supplierDetails.Email)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CONTACT NUMBER:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactNumber) ? "N/A" : supplierDetails.ContactNumber)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(supplierDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@supplierDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STREET ADDRESS:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Street) ? "N/A" : supplierDetails.Street)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">CITY:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.City) ? "N/A" : supplierDetails.City)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">PROVINCE:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Province) ? "N/A" : supplierDetails.Province)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">ZIP CODE:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Zip) ? "N/A" : supplierDetails.Zip)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@supplierDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* Add Supplier Modal *@
@if (showAddSupplierModal)
{
    <div class="modal-overlay" @onclick="CloseAddSupplierModal">
        <div class="add-supplier-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Supplier</h2>
                <button class="modal-close-btn" @onclick="CloseAddSupplierModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addSupplierEditContext" OnValidSubmit="SaveSupplierAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Company Name <span class="required">*</span></label>
                            <InputText class="form-input" @bind-Value="_addSupplierModel.CompanyName" placeholder="Enter company name" />
                            <ValidationMessage For="@(() => _addSupplierModel.CompanyName)" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Contact Person</label>
                            <InputText class="form-input" @bind-Value="_addSupplierModel.ContactPerson" placeholder="Enter contact person name" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Email</label>
                            <InputText class="form-input" type="email" @bind-Value="_addSupplierModel.Email" placeholder="Enter email address" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Contact Number</label>
                            <InputText class="form-input" @bind-Value="_addSupplierModel.ContactNumber" placeholder="Enter contact number" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Street Address</label>
                            <InputText class="form-input" @bind-Value="_addSupplierAddressModel.Street" placeholder="Enter street address" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Province</label>
                            <InputSelect class="form-input" @bind-Value="_addSupplierAddressModel.Province" @bind-Value:after="OnAddProvinceChanged">
                                <option value="">Select Province</option>
                                @foreach (var province in _provinces)
                                {
                                    <option value="@province">@province</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="form-field">
                            <label class="field-label">City</label>
                            <InputSelect class="form-input" @bind-Value="_addSupplierAddressModel.City" @bind-Value:after="OnAddCityChanged">
                                <option value="">Select City</option>
                                @foreach (var city in _addSupplierCities)
                                {
                                    <option value="@city">@city</option>
                                }
                            </InputSelect>
                        </div>
                        <div class="form-field">
                            <label class="field-label">Zip Code</label>
                            <InputText class="form-input" @bind-Value="_addSupplierAddressModel.Zip" placeholder="Auto-filled" readonly />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddSupplierModal">Cancel</button>
                        <button type="submit" class="save-supplier-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Supplier</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

