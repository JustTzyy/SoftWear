@page "/seller/Category"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.ICategoryService CategoryService
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

<h1 class="page-title">Category Records</h1>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

<div class="categories-container">
    <div class="search-actions-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search categories" value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>

        <div class="action-buttons">
            <button class="archive-btn" @onclick="NavigateToArchive">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
                <span>Archive</span>
            </button>
            <button class="add-category-btn" @onclick="HandleAddCategory">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                <span>Add Category</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-header">List</div>
        <table class="categories-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (Categorys.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No Categorys found</td>
                    </tr>
                }
                else
                {
                    @foreach (var Category in Categorys)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(Category.Id)">
                            <td>@Category.Id</td>
                            <td class="category-name">@Category.Name</td>
                            <td class="description-cell">@(string.IsNullOrEmpty(Category.Description) ? "N/A" : Category.Description)</td>
                            <td>@Category.DateCreated.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn edit-btn" @onclick="() => HandleEdit(Category.Id)" title="Edit">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn delete-btn" @onclick="() => HandleDelete(Category.Id)" title="Delete">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Category Details Modal *@
@if (showCategoryDetails && categoryDetails != null)
{
    <div class="modal-overlay" @onclick="CloseCategoryDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                    <span>Category Details</span>
                </div>
                <button class="modal-close" @onclick="CloseCategoryDetails" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content-category">
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">Category NAME:</span>
                        <span class="detail-value">@categoryDetails.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DESCRIPTION:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(categoryDetails.Description) ? "N/A" : categoryDetails.Description)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(categoryDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@categoryDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@categoryDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* Add Category Modal *@
@if (showAddCategoryModal)
{
    <div class="modal-overlay" @onclick="CloseAddCategoryModal">
        <div class="add-category-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Category</h2>
                <button class="modal-close-btn" @onclick="CloseAddCategoryModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addCategoryEditContext" OnValidSubmit="SaveCategoryAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Category Name</label>
                            <InputText class="form-input" @bind-Value="_addCategoryModel.Name" placeholder="e.g., T-shirts, Pants, Accessories" />
                            <ValidationMessage For="@(() => _addCategoryModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_addCategoryModel.Description" placeholder="Enter Category description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddCategoryModal">Cancel</button>
                        <button type="submit" class="save-category-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Category</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@* Update Category Modal *@
@if (showUpdateCategoryModal)
{
    <div class="modal-overlay" @onclick="CloseUpdateCategoryModal">
        <div class="update-category-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Update Category</h2>
                <button class="modal-close-btn" @onclick="CloseUpdateCategoryModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_updateCategoryEditContext" OnValidSubmit="SaveUpdateCategoryAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Category Name</label>
                            <InputText class="form-input" @bind-Value="_updateCategoryModel.Name" placeholder="e.g., T-shirts, Pants, Accessories" />
                            <ValidationMessage For="@(() => _updateCategoryModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_updateCategoryModel.Description" placeholder="Enter Category description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseUpdateCategoryModal">Cancel</button>
                        <button type="submit" class="save-category-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Update Category</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.CategoryModel> Categorys = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);

    private bool showCategoryDetails = false;
    private IT13_Final.Services.Data.CategoryDetailsModel? categoryDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddCategoryModal = false;
    private AddCategoryModel _addCategoryModel = new();
    private EditContext? _addCategoryEditContext;

    private bool showUpdateCategoryModal = false;
    private UpdateCategoryModel _updateCategoryModel = new();
    private EditContext? _updateCategoryEditContext;
    private int _updateCategoryId;

    protected override async Task OnInitializedAsync()
    {
        _addCategoryEditContext = new EditContext(_addCategoryModel);
        _updateCategoryEditContext = new EditContext(_updateCategoryModel);
        await LoadCategorysAsync();
    }

    private async Task LoadCategorysAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            totalCount = await CategoryService.GetCategoriesCountAsync(searchTerm);
            Categorys = await CategoryService.GetCategoriesAsync(searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            Categorys = new List<IT13_Final.Services.Data.CategoryModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadCategorysAsync();
        }
    }

    private System.Threading.Timer? _searchTimer;
    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadCategorysAsync();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadCategorysAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Category_Record");
    }

    private void HandleAddCategory()
    {
        _addCategoryModel = new AddCategoryModel();
        _addCategoryEditContext = new EditContext(_addCategoryModel);
        showAddCategoryModal = true;
    }

    private void CloseAddCategoryModal()
    {
        showAddCategoryModal = false;
    }

    private async Task SaveCategoryAsync()
    {
        if (_addCategoryEditContext?.Validate() ?? false)
        {
            var newCategoryId = await CategoryService.CreateCategoryAsync(
                _addCategoryModel.Name,
                _addCategoryModel.Description
            );

            if (newCategoryId.HasValue)
            {
                ShowSuccessMessage($"Category '{_addCategoryModel.Name}' added successfully!");
                CloseAddCategoryModal();
                await LoadCategorysAsync();
            }
        }
    }

    private async Task HandleEdit(int CategoryId)
    {
        var CategoryToUpdate = await CategoryService.GetCategoryDetailsAsync(CategoryId);
        if (CategoryToUpdate != null)
        {
            _updateCategoryId = CategoryId;
            _updateCategoryModel = new UpdateCategoryModel
            {
                Name = CategoryToUpdate.Name,
                Description = CategoryToUpdate.Description
            };
            _updateCategoryEditContext = new EditContext(_updateCategoryModel);
            showUpdateCategoryModal = true;
        }
    }

    private void CloseUpdateCategoryModal()
    {
        showUpdateCategoryModal = false;
    }

    private async Task SaveUpdateCategoryAsync()
    {
        if (_updateCategoryEditContext?.Validate() ?? false)
        {
            var success = await CategoryService.UpdateCategoryAsync(
                _updateCategoryId,
                _updateCategoryModel.Name,
                _updateCategoryModel.Description
            );

            if (success)
            {
                ShowSuccessMessage($"Category '{_updateCategoryModel.Name}' updated successfully!");
                CloseUpdateCategoryModal();
                await LoadCategorysAsync();
            }
        }
    }

    private async Task HandleDelete(int CategoryId)
    {
        var Category = Categorys.FirstOrDefault(s => s.Id == CategoryId);
        var CategoryName = Category?.Name ?? "this Category";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to archive {CategoryName}?");
        if (!confirmed) return;
        
        var success = await CategoryService.ArchiveCategoryAsync(CategoryId);
        if (success)
        {
            ShowSuccessMessage($"Category '{CategoryName}' archived successfully!");
            await LoadCategorysAsync();
        }
    }

    private async Task HandleRowClick(int CategoryId)
    {
        categoryDetails = await CategoryService.GetCategoryDetailsAsync(CategoryId);
        if (categoryDetails != null)
        {
            showCategoryDetails = true;
        }
    }

    private void CloseCategoryDetails()
    {
        showCategoryDetails = false;
        categoryDetails = null;
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        StateHasChanged();

        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessMessage = false;
                StateHasChanged();
            });
        }, null, 3000, Timeout.Infinite);
    }

    public void Dispose()
    {
        _successBannerTimer?.Dispose();
        _searchTimer?.Dispose();
    }

    private class AddCategoryModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Category name is required")]
        [System.ComponentModel.DataAnnotations.StringLength(100, ErrorMessage = "Category name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string Description { get; set; } = string.Empty;
    }

    private class UpdateCategoryModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Category name is required")]
        [System.ComponentModel.DataAnnotations.StringLength(100, ErrorMessage = "Category name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string Description { get; set; } = string.Empty;
    }
}

