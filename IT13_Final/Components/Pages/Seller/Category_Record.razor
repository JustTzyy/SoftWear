@page "/seller/Category"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.ICategoryService CategoryService
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Category Records</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintCategoryRecords" title="Print records">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 9V2h12v7"></path>
                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                <rect x="6" y="14" width="12" height="8"></rect>
            </svg>
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input type="text" class="search-input" placeholder="Search by name or description..." @bind="searchTerm" @bind:event="oninput" @bind:after="OnSearchInput" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="ClearSearch" title="Clear search">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date" 
               class="date-input" 
               value="@(filterStartDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleStartDateChange" />
        <span class="date-separator">to</span>
        <input type="date" 
               class="date-input" 
               value="@(filterEndDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleEndDateChange" />
        <button class="filter-btn" @onclick="ApplyDateFilter">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
            </svg>
            Apply
        </button>
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
</div>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

@* Category List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Category List</h3>
            <span class="card-subtitle">@totalCount total categories</span>
        </div>
        <div class="card-actions">
            <button class="card-action-btn secondary" @onclick="NavigateToArchive">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="20" height="5" x="2" y="3" rx="1"></rect>
                    <path d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8"></path>
                    <path d="M10 12h4"></path>
                </svg>
                <span>Archive</span>
            </button>
            <button class="card-action-btn primary" @onclick="HandleAddCategory">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                <span>Add Category</span>
            </button>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (Categorys.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No Categorys found</td>
                    </tr>
                }
                else
                {
                    @foreach (var Category in Categorys)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(Category.Id)">
                            <td>@Category.Id</td>
                            <td class="category-name">@Category.Name</td>
                            <td class="description-cell">@(string.IsNullOrEmpty(Category.Description) ? "N/A" : Category.Description)</td>
                            <td>@Category.DateCreated.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn edit-btn" @onclick="() => HandleEdit(Category.Id)" title="Edit category">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                                        <path d="m15 5 4 4"></path>
                                    </svg>
                                </button>
                                <button class="action-btn delete-btn" @onclick="() => HandleDelete(Category.Id)" title="Archive">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect width="20" height="5" x="2" y="3" rx="1"></rect>
                                        <path d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8"></path>
                                        <path d="M10 12h4"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)" title="Previous page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6"></path>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)" title="Next page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6"></path>
                </svg>
            </button>
        </div>
    }
</div>

@* Category Details Modal *@
@if (showCategoryDetails && categoryDetails != null)
{
    <div class="modal-overlay" @onclick="CloseCategoryDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                    <span>Category Details</span>
                </div>
                <button class="modal-close" @onclick="CloseCategoryDetails" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content-category">
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">Category NAME:</span>
                        <span class="detail-value">@categoryDetails.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DESCRIPTION:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(categoryDetails.Description) ? "N/A" : categoryDetails.Description)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(categoryDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@categoryDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@categoryDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* Add Category Modal *@
@if (showAddCategoryModal)
{
    <div class="modal-overlay" @onclick="CloseAddCategoryModal">
        <div class="add-category-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Category</h2>
                <button class="modal-close-btn" @onclick="CloseAddCategoryModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addCategoryEditContext" OnValidSubmit="SaveCategoryAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Category Name <span class="required-asterisk">*</span></label>
                            <InputText class="form-input" @bind-Value="_addCategoryModel.Name" @oninput="FilterAddCategoryNameInput" placeholder="e.g., T-shirts, Pants, Accessories" />
                            <ValidationMessage For="@(() => _addCategoryModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_addCategoryModel.Description" placeholder="Enter Category description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddCategoryModal">Cancel</button>
                        <button type="submit" class="save-category-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Category</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@* Update Category Modal *@
@if (showUpdateCategoryModal)
{
    <div class="modal-overlay" @onclick="CloseUpdateCategoryModal">
        <div class="update-category-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Update Category</h2>
                <button class="modal-close-btn" @onclick="CloseUpdateCategoryModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_updateCategoryEditContext" OnValidSubmit="SaveUpdateCategoryAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Category Name <span class="required-asterisk">*</span></label>
                            <InputText class="form-input" @bind-Value="_updateCategoryModel.Name" @oninput="FilterUpdateCategoryNameInput" placeholder="e.g., T-shirts, Pants, Accessories" />
                            <ValidationMessage For="@(() => _updateCategoryModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_updateCategoryModel.Description" placeholder="Enter Category description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseUpdateCategoryModal">Cancel</button>
                        <button type="submit" class="save-category-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Update Category</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.CategoryModel> Categorys = new();
    private List<IT13_Final.Services.Data.CategoryModel> allFilteredCategorys = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    
    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    
    private bool HasActiveDateFilters => filterStartDate.HasValue || filterEndDate.HasValue || !string.IsNullOrEmpty(selectedDateRange);

    private bool showCategoryDetails = false;
    private IT13_Final.Services.Data.CategoryDetailsModel? categoryDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddCategoryModal = false;
    private AddCategoryModel _addCategoryModel = new();
    private EditContext? _addCategoryEditContext;

    private bool showUpdateCategoryModal = false;
    private UpdateCategoryModel _updateCategoryModel = new();
    private EditContext? _updateCategoryEditContext;
    private int _updateCategoryId;

    protected override async Task OnInitializedAsync()
    {
        _addCategoryEditContext = new EditContext(_addCategoryModel);
        _updateCategoryEditContext = new EditContext(_updateCategoryModel);
        await LoadCategorysAsync();
    }

    private async Task LoadCategorysAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            
            // Get all categories matching search term first
            var allCategorys = await CategoryService.GetCategoriesAsync(userId, searchTerm, 1, 10000);
            
            // Apply date filter client-side
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredCategorys = allCategorys.Where(c =>
                {
                    var createdDate = c.DateCreated.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date && createdDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return createdDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredCategorys = allCategorys;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredCategorys.Count;
            
            // Apply pagination to filtered results
            Categorys = allFilteredCategorys
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            Categorys = new List<IT13_Final.Services.Data.CategoryModel>();
            allFilteredCategorys = new List<IT13_Final.Services.Data.CategoryModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Debounce search to avoid too many queries
    private System.Threading.Timer? _searchTimer;
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadCategorysAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadCategorysAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadCategorysAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Category_Record");
    }

    private void HandleAddCategory()
    {
        _addCategoryModel = new AddCategoryModel();
        _addCategoryEditContext = new EditContext(_addCategoryModel);
        showAddCategoryModal = true;
    }

    private void CloseAddCategoryModal()
    {
        showAddCategoryModal = false;
    }

    private async Task SaveCategoryAsync()
    {
        if (_addCategoryEditContext?.Validate() ?? false)
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var newCategoryId = await CategoryService.CreateCategoryAsync(
                userId,
                _addCategoryModel.Name,
                _addCategoryModel.Description
            );

            if (newCategoryId.HasValue)
            {
                ShowSuccessMessage($"Category '{_addCategoryModel.Name}' added successfully!");
                CloseAddCategoryModal();
                await LoadCategorysAsync();
            }
        }
    }

    private async Task HandleEdit(int CategoryId)
    {
        var userId = AuthState.CurrentUser?.Id ?? 0;
        var CategoryToUpdate = await CategoryService.GetCategoryDetailsAsync(CategoryId, userId);
        if (CategoryToUpdate != null)
        {
            _updateCategoryId = CategoryId;
            _updateCategoryModel = new UpdateCategoryModel
            {
                Name = CategoryToUpdate.Name,
                Description = CategoryToUpdate.Description
            };
            _updateCategoryEditContext = new EditContext(_updateCategoryModel);
            showUpdateCategoryModal = true;
        }
    }

    private void CloseUpdateCategoryModal()
    {
        showUpdateCategoryModal = false;
    }

    private async Task SaveUpdateCategoryAsync()
    {
        if (_updateCategoryEditContext?.Validate() ?? false)
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await CategoryService.UpdateCategoryAsync(
                _updateCategoryId,
                userId,
                _updateCategoryModel.Name,
                _updateCategoryModel.Description
            );

            if (success)
            {
                ShowSuccessMessage($"Category '{_updateCategoryModel.Name}' updated successfully!");
                CloseUpdateCategoryModal();
                await LoadCategorysAsync();
            }
        }
    }

    private async Task HandleDelete(int CategoryId)
    {
        var Category = Categorys.FirstOrDefault(s => s.Id == CategoryId);
        var CategoryName = Category?.Name ?? "this Category";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to archive {CategoryName}?");
        if (!confirmed) return;
        
        var userId = AuthState.CurrentUser?.Id ?? 0;
        var success = await CategoryService.ArchiveCategoryAsync(CategoryId, userId);
        if (success)
        {
            ShowSuccessMessage($"Category '{CategoryName}' archived successfully!");
            await LoadCategorysAsync();
        }
    }

    private async Task HandleRowClick(int CategoryId)
    {
        var userId = AuthState.CurrentUser?.Id ?? 0;
        categoryDetails = await CategoryService.GetCategoryDetailsAsync(CategoryId, userId);
        if (categoryDetails != null)
        {
            showCategoryDetails = true;
        }
    }

    private void CloseCategoryDetails()
    {
        showCategoryDetails = false;
        categoryDetails = null;
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        StateHasChanged();

        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessMessage = false;
                StateHasChanged();
            });
        }, null, 3000, Timeout.Infinite);
    }

    // Date filter methods
    private void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterStartDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterStartDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterEndDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterEndDate = null;
            selectedDateRange = "";
        }
    }

    private void FilterAddCategoryNameInput(ChangeEventArgs e)
    {
        var val = e.Value?.ToString() ?? string.Empty;
        var filtered = new string(val.Where(c => char.IsLetter(c) || c == ' ' || c == '\'' || c == '-' || c == '.' || char.IsDigit(c)).ToArray());
        
        // Auto-capitalize: first letter uppercase, rest lowercase unless after space
        if (!string.IsNullOrEmpty(filtered))
        {
            var chars = filtered.ToCharArray();
            bool capitalizeNext = true;
            
            for (int i = 0; i < chars.Length; i++)
            {
                if (char.IsLetter(chars[i]))
                {
                    if (capitalizeNext)
                    {
                        chars[i] = char.ToUpper(chars[i]);
                        capitalizeNext = false;
                    }
                    else
                    {
                        chars[i] = char.ToLower(chars[i]);
                    }
                }
                else if (chars[i] == ' ')
                {
                    capitalizeNext = true;
                }
            }
            
            filtered = new string(chars);
        }
        
        _addCategoryModel.Name = filtered;
        
        // Notify EditContext of field change
        if (_addCategoryEditContext != null)
        {
            _addCategoryEditContext.NotifyFieldChanged(_addCategoryEditContext.Field(nameof(_addCategoryModel.Name)));
        }
        
        StateHasChanged();
    }

    private void FilterUpdateCategoryNameInput(ChangeEventArgs e)
    {
        var val = e.Value?.ToString() ?? string.Empty;
        var filtered = new string(val.Where(c => char.IsLetter(c) || c == ' ' || c == '\'' || c == '-' || c == '.' || char.IsDigit(c)).ToArray());
        
        // Auto-capitalize: first letter uppercase, rest lowercase unless after space
        if (!string.IsNullOrEmpty(filtered))
        {
            var chars = filtered.ToCharArray();
            bool capitalizeNext = true;
            
            for (int i = 0; i < chars.Length; i++)
            {
                if (char.IsLetter(chars[i]))
                {
                    if (capitalizeNext)
                    {
                        chars[i] = char.ToUpper(chars[i]);
                        capitalizeNext = false;
                    }
                    else
                    {
                        chars[i] = char.ToLower(chars[i]);
                    }
                }
                else if (chars[i] == ' ')
                {
                    capitalizeNext = true;
                }
            }
            
            filtered = new string(chars);
        }
        
        _updateCategoryModel.Name = filtered;
        
        // Notify EditContext of field change
        if (_updateCategoryEditContext != null)
        {
            _updateCategoryEditContext.NotifyFieldChanged(_updateCategoryEditContext.Field(nameof(_updateCategoryModel.Name)));
        }
        
        StateHasChanged();
    }

    private void HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                filterStartDate = null;
                filterEndDate = null;
                break;
            case "today":
                filterStartDate = now.Date;
                filterEndDate = now.Date;
                break;
            case "yesterday":
                filterStartDate = now.Date.AddDays(-1);
                filterEndDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                filterStartDate = now.Date.AddDays(-6);
                filterEndDate = now.Date;
                break;
            case "last30days":
                filterStartDate = now.Date.AddDays(-29);
                filterEndDate = now.Date;
                break;
            case "thismonth":
                filterStartDate = new DateTime(now.Year, now.Month, 1);
                filterEndDate = now.Date;
                break;
            case "thisyear":
                filterStartDate = new DateTime(now.Year, 1, 1);
                filterEndDate = now.Date;
                break;
        }
        _ = LoadCategorysAsync();
    }

