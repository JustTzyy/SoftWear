@* Add Accounting Modal *@
@if (showAddAccountingModal)
{
    <div class="modal-overlay" @onclick="CloseAddAccountingModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Accounting</h2>
                <button class="modal-close-btn" @onclick="CloseAddAccountingModal" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="modal-tabs">
                <button class="modal-tab @(activeAddAccountingTab == "user" ? "active" : "")" @onclick='() => SetActiveAddAccountingTab("user")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>User Information</span>
                </button>
                <button class="modal-tab @(activeAddAccountingTab == "address" ? "active" : "")" @onclick='() => SetActiveAddAccountingTab("address")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>Address Information</span>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addAccountingEditContext" OnValidSubmit="SaveAccountingAsync" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    
                    @if (activeAddAccountingTab == "user")
                    {
                        <div class="form-grid">
                            <div class="form-field">
                                <label class="field-label">First Name <span class="required-asterisk">*</span></label>
                                <input id="addAccountingFirstName" class="form-input" value="@_addAccountingModel.FirstName" @oninput="FilterAddAccountingFirstNameInput" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => _addAccountingModel.FirstName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Middle Name</label>
                                <input id="addAccountingMiddleName" class="form-input" value="@_addAccountingModel.MiddleName" @oninput="FilterAddAccountingMiddleNameInput" placeholder="Enter middle name (optional)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Last Name <span class="required-asterisk">*</span></label>
                                <input id="addAccountingLastName" class="form-input" value="@_addAccountingModel.LastName" @oninput="FilterAddAccountingLastNameInput" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => _addAccountingModel.LastName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Email <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addAccountingModel.Email" @oninput="FilterAddAccountingEmailInput" placeholder="Enter email address" />
                                <ValidationMessage For="@(() => _addAccountingModel.Email)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Birthday <span class="required-asterisk">*</span></label>
                                <input type="date" class="form-input" value="@(_addAccountingModel.Birthday?.ToString("yyyy-MM-dd") ?? "")" max="@MaxBirthdayDate.ToString("yyyy-MM-dd")" @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) { AddAccountingBirthday = DateOnly.FromDateTime(date); } else { AddAccountingBirthday = null; } })" />
                                <ValidationMessage For="@(() => _addAccountingModel.Birthday)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Age <span class="required-asterisk">*</span></label>
                                <InputNumber TValue="int?" class="form-input" @bind-Value="_addAccountingModel.Age" disabled />
                                <ValidationMessage For="@(() => _addAccountingModel.Age)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Sex <span class="required-asterisk">*</span></label>
                                <select class="form-input sex-select" value="@_addAccountingModel.Sex" @onchange="@((ChangeEventArgs e) => { 
                                    _addAccountingModel.Sex = e.Value?.ToString() ?? string.Empty; 
                                    if (_addAccountingEditContext != null)
                                    {
                                        _addAccountingEditContext.NotifyFieldChanged(_addAccountingEditContext.Field(nameof(_addAccountingModel.Sex)));
                                    }
                                    StateHasChanged(); 
                                })">
                                    <option value="">Select Sex</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <ValidationMessage For="@(() => _addAccountingModel.Sex)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Contact Number <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addAccountingModel.Contact" @oninput="FilterAddAccountingContactInput" placeholder="09123456789" maxlength="11" />
                                <ValidationMessage For="@(() => _addAccountingModel.Contact)" />
                            </div>
                        </div>
                    }
                    else if (activeAddAccountingTab == "address")
                    {
                        <div class="form-grid">
                            <div class="form-field full-width">
                                <label class="field-label">Street Address <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addAccountingAddressModel.Street" placeholder="123 Main Street, Barangay Name" />
                                <ValidationMessage For="@(() => _addAccountingAddressModel.Street)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Province <span class="required-asterisk">*</span></label>
                                <select class="form-input province-select" value="@_addAccountingAddressModel.Province" @onchange="OnProvinceChanged">
                                    <option value="">Select Province</option>
                                    @foreach (var province in _addAccountingProvinces)
                                    {
                                        <option value="@province">@province</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addAccountingAddressModel.Province)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">City <span class="required-asterisk">*</span></label>
                                <select class="form-input city-select" value="@_addAccountingAddressModel.City" @onchange="OnCityChanged" disabled="@(string.IsNullOrEmpty(_addAccountingAddressModel.Province))">
                                    <option value="">Select City</option>
                                    @foreach (var city in _addAccountingCities)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addAccountingAddressModel.City)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Zip Code <span class="required-asterisk">*</span></label>
                                <input class="form-input" value="@_addAccountingAddressModel.Zip" disabled placeholder="Auto-filled" />
                                <ValidationMessage For="@(() => _addAccountingAddressModel.Zip)" />
                            </div>
                        </div>
                    }

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddAccountingModal">Cancel</button>
                        <button type="submit" class="save-admin-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path>
                                <circle cx="9" cy="7" r="4"></circle>
                                <polyline points="16 11 18 13 22 9"></polyline>
                            </svg>
                            <span>Save Accounting</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

