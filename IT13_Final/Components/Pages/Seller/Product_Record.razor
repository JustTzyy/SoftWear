    private async Task HandleDelete(int productId)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to archive this product?");
        if (confirmed)
        {
            try
            {
                var success = await ProductService.ArchiveProductAsync(productId);
        if (success)
        {
                    ShowSuccessMessage("Product archived successfully!");
                    await LoadProductsAsync();
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Failed to archive product.");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error archiving product: {ex.Message}");
            }
        }
    }

