@code {
    private List<IT13_Final.Services.Data.ProductModel> Products = new();
    private List<IT13_Final.Services.Data.ProductModel> allFilteredProducts = new();
    private List<IT13_Final.Services.Data.CategoryOption> categories = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    
    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    
    private bool HasActiveDateFilters => filterStartDate.HasValue || filterEndDate.HasValue || !string.IsNullOrEmpty(selectedDateRange);

    private bool showProductDetails = false;
    private IT13_Final.Services.Data.ProductDetailsModel? productDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddProductModal = false;
    private AddProductModel _addProductModel = new();
    private EditContext? _addProductEditContext;
    private byte[]? _addImageData;
    private string? _addImageContentType;
    private string? _addImagePreview;
    private string? _addImageFileName;

    private bool showUpdateProductModal = false;
    private UpdateProductModel _updateProductModel = new();
    private EditContext? _updateProductEditContext;
    private int _updateProductId;
    private byte[]? _updateImageData;
    private string? _updateImageContentType;
    private string? _updateImagePreview;
    private string? _updateImageFileName;

    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        _addProductEditContext = new EditContext(_addProductModel);
        _updateProductEditContext = new EditContext(_updateProductModel);
        await LoadCategoriesAsync();
        await LoadProductsAsync();
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            categories = await ProductService.GetActiveCategoriesAsync(userId);
        }
        catch (Exception)
        {
            categories = new List<IT13_Final.Services.Data.CategoryOption>();
        }
    }

    private async Task LoadProductsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            
            // Get all products matching search term first
            var allProducts = await ProductService.GetProductsAsync(userId, searchTerm, 1, 10000);
            
            // Apply date filter client-side
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredProducts = allProducts.Where(p =>
                {
                    var createdDate = p.DateCreated.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date && createdDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return createdDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredProducts = allProducts;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredProducts.Count;
            
            // Apply pagination to filtered results
            Products = allFilteredProducts
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            Products = new List<IT13_Final.Services.Data.ProductModel>();
            allFilteredProducts = new List<IT13_Final.Services.Data.ProductModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Debounce search to avoid too many queries
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
