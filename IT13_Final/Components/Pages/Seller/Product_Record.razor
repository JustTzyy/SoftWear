                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => _addProductModel.CategoryId)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description</label>
                            <InputTextArea id="add-product-description-input" class="form-textarea" @bind-Value="_addProductModel.Description" @oninput="FilterAddProductDescriptionInput" placeholder="Enter product description" rows="3" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Product Image</label>
