@code {
    private List<IT13_Final.Services.Data.ProductModel> Products = new();
    private List<IT13_Final.Services.Data.CategoryOption> categories = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);

    private bool showProductDetails = false;
    private IT13_Final.Services.Data.ProductDetailsModel? productDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddProductModal = false;
    private AddProductModel _addProductModel = new();
    private EditContext? _addProductEditContext;
    private byte[]? _addImageData;
    private string? _addImageContentType;
    private string? _addImagePreview;
    private string? _addImageFileName;

    private bool showUpdateProductModal = false;
    private UpdateProductModel _updateProductModel = new();
    private EditContext? _updateProductEditContext;
    private int _updateProductId;
    private byte[]? _updateImageData;
    private string? _updateImageContentType;
    private string? _updateImagePreview;
    private string? _updateImageFileName;

    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        _addProductEditContext = new EditContext(_addProductModel);
        _updateProductEditContext = new EditContext(_updateProductModel);
        await LoadCategoriesAsync();
        await LoadProductsAsync();
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            categories = await ProductService.GetActiveCategoriesAsync();
        }
        catch (Exception)
        {
            categories = new List<IT13_Final.Services.Data.CategoryOption>();
        }
    }

    private async Task LoadProductsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            totalCount = await ProductService.GetProductsCountAsync(searchTerm);
            Products = await ProductService.GetProductsAsync(searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            Products = new List<IT13_Final.Services.Data.ProductModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadProductsAsync());
        }, null, 300, Timeout.Infinite);
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            _searchTimer?.Dispose();
            currentPage = 1;
            await LoadProductsAsync();
        }
    }

    private async Task PreviousPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadProductsAsync();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadProductsAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Product_Record");
    }

    private void HandleAddProduct()
    {
        _addProductModel = new AddProductModel();
        _addProductEditContext = new EditContext(_addProductModel);
        _addImageData = null;
        _addImageContentType = null;
        _addImagePreview = null;
        _addImageFileName = null;
        showAddProductModal = true;
    }

    private async Task HandleAddImageSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                const long maxFileSize = 5 * 1024 * 1024; // 5MB
                if (file.Size > maxFileSize)
    {
                    await JSRuntime.InvokeVoidAsync("alert", "Image file size must be less than 5MB");
                    return;
                }

                using var stream = file.OpenReadStream(maxFileSize);
                using var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);
                _addImageData = memoryStream.ToArray();
                _addImageContentType = file.ContentType;
                _addImageFileName = file.Name;
                _addImagePreview = $"data:{file.ContentType};base64,{Convert.ToBase64String(_addImageData)}";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error loading image: {ex.Message}");
            }
        }
    }

    private void RemoveAddImage()
    {
        _addImageData = null;
        _addImageContentType = null;
        _addImagePreview = null;
        _addImageFileName = null;
        StateHasChanged();
    }

    private async Task SaveProductAsync()
    {
        if (!_addProductEditContext.Validate())
            return;

        try
        {
            var result = await ProductService.CreateProductAsync(
                _addProductModel.Name,
                _addProductModel.Description,
                _addProductModel.CategoryId,
                _addImageData,
                _addImageContentType
            );

            if (result.HasValue)
            {
                ShowSuccessMessage("Product added successfully!");
                showAddProductModal = false;
                await LoadProductsAsync();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to add product.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error adding product: {ex.Message}");
        }
    }

    private void CloseAddProductModal()
    {
        showAddProductModal = false;
        _addImageData = null;
        _addImageContentType = null;
        _addImagePreview = null;
        _addImageFileName = null;
    }

    private async Task HandleEdit(int productId)
    {
        try
    {
            var productToUpdate = await ProductService.GetProductDetailsAsync(productId);
            if (productToUpdate != null)
        {
                _updateProductModel = new UpdateProductModel
            {
                    Name = productToUpdate.Name,
                    Description = productToUpdate.Description,
                    CategoryId = productToUpdate.CategoryId,
                    ExistingImageBase64 = productToUpdate.ImageBase64
                };
                _updateProductEditContext = new EditContext(_updateProductModel);
                _updateProductId = productId;
                _updateImageData = null;
                _updateImageContentType = null;
                _updateImagePreview = null;
                _updateImageFileName = null;
                showUpdateProductModal = true;
        }
    }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading product: {ex.Message}");
        }
    }

    private async Task HandleUpdateImageSelected(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null)
        {
            try
            {
                const long maxFileSize = 5 * 1024 * 1024; // 5MB
                if (file.Size > maxFileSize)
    {
                    await JSRuntime.InvokeVoidAsync("alert", "Image file size must be less than 5MB");
                    return;
                }

                using var stream = file.OpenReadStream(maxFileSize);
                using var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);
                _updateImageData = memoryStream.ToArray();
                _updateImageContentType = file.ContentType;
                _updateImageFileName = file.Name;
                _updateImagePreview = $"data:{file.ContentType};base64,{Convert.ToBase64String(_updateImageData)}";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error loading image: {ex.Message}");
            }
        }
    }

    private void RemoveUpdateImage()
    {
        _updateImageData = null;
        _updateImageContentType = null;
        _updateImagePreview = null;
        _updateImageFileName = null;
        StateHasChanged();
    }

    private async Task SaveUpdateProductAsync()
    {
        if (!_updateProductEditContext.Validate())
            return;

        try
        {
            var success = await ProductService.UpdateProductAsync(
                _updateProductId,
                _updateProductModel.Name,
                _updateProductModel.Description,
                _updateProductModel.CategoryId,
                _updateImageData,
                _updateImageContentType
            );

            if (success)
            {
                ShowSuccessMessage("Product updated successfully!");
                showUpdateProductModal = false;
                await LoadProductsAsync();
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", "Failed to update product.");
