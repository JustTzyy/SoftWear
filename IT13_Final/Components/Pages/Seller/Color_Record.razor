@page "/seller/Color"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.IColorService ColorService
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Color Records</h1>
        <p class="welcome-date">@DateTime.Now.ToString("dddd, MMMM d, yyyy")</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintColorRecords" title="Print records">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 9V2h12v7"></path>
                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                <rect x="6" y="14" width="12" height="8"></rect>
            </svg>
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input type="text" class="search-input" placeholder="Search by name, hex value, or description..." @bind="searchTerm" @bind:event="oninput" @bind:after="OnSearchInput" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="ClearSearch" title="Clear search">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date" 
               class="date-input" 
               value="@(filterStartDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleStartDateChange" />
        <span class="date-separator">to</span>
        <input type="date" 
               class="date-input" 
               value="@(filterEndDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleEndDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
</div>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

@* Color List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Color List</h3>
            <span class="card-subtitle">@totalCount total colors</span>
        </div>
        <div class="card-actions">
            <button class="card-action-btn secondary" @onclick="NavigateToArchive">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect width="20" height="5" x="2" y="3" rx="1"></rect>
                    <path d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8"></path>
                    <path d="M10 12h4"></path>
                </svg>
                <span>Archive</span>
            </button>
            <button class="card-action-btn primary" @onclick="HandleAddColor">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                <span>Add Color</span>
            </button>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Hex Value</th>
                    <th>Preview</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="7" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (colors.Count == 0)
                {
                    <tr>
                        <td colspan="7" class="empty-cell">No colors found</td>
                    </tr>
                }
                else
                {
                    @foreach (var color in colors)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(color.Id)">
                            <td>@color.Id</td>
                            <td class="color-name">@color.Name</td>
                            <td class="hex-value">@color.HexValue</td>
                            <td>
                                <div class="color-preview" style="background-color: @color.HexValue;"></div>
                            </td>
                            <td class="description-cell">@(string.IsNullOrEmpty(color.Description) ? "N/A" : color.Description)</td>
                            <td>@color.DateCreated.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn edit-btn" @onclick="() => HandleEdit(color.Id)" title="Edit color">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"></path>
                                        <path d="m15 5 4 4"></path>
                                    </svg>
                                </button>
                                <button class="action-btn delete-btn" @onclick="() => HandleDelete(color.Id)" title="Archive">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <rect width="20" height="5" x="2" y="3" rx="1"></rect>
                                        <path d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8"></path>
                                        <path d="M10 12h4"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)" title="Previous page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m15 18-6-6 6-6"></path>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)" title="Next page">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="m9 18 6-6-6-6"></path>
                </svg>
            </button>
        </div>
    }
</div>

@* Color Details Modal *@
@if (showColorDetails && colorDetails != null)
{
    <div class="modal-overlay" @onclick="CloseColorDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"></circle>
                    </svg>
                    <span>Color Details</span>
                </div>
                <button class="modal-close" @onclick="CloseColorDetails" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content-color">
                <div class="color-preview-large" style="background-color: @colorDetails.HexValue;"></div>
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">COLOR NAME:</span>
                        <span class="detail-value">@colorDetails.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">HEX VALUE:</span>
                        <span class="detail-value">@colorDetails.HexValue</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DESCRIPTION:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(colorDetails.Description) ? "N/A" : colorDetails.Description)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(colorDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@colorDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@colorDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* Add Color Modal *@
@if (showAddColorModal)
{
    <div class="modal-overlay" @onclick="CloseAddColorModal">
        <div class="add-color-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Color</h2>
                <button class="modal-close-btn" @onclick="CloseAddColorModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addColorEditContext" OnValidSubmit="SaveColorAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Hex Value</label>
                            <input type="color" class="color-picker" value="@_addColorModel.HexValue" @onchange="OnAddColorPickerChanged" />
                            <input type="text" class="form-input hex-input" value="@_addColorModel.HexValue" @oninput="OnAddHexValueChanged" placeholder="#000000" />
                            <ValidationMessage For="@(() => _addColorModel.HexValue)" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Color Name <span class="required-asterisk">*</span></label>
                            <InputText id="add-color-name-input" class="form-input" @bind-Value="_addColorModel.Name" @oninput="FilterAddColorNameInput" placeholder="Auto-generated or enter custom name" />
                            <ValidationMessage For="@(() => _addColorModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description</label>
                            <InputTextArea id="add-color-description-input" class="form-textarea" @bind-Value="_addColorModel.Description" @oninput="FilterAddColorDescriptionInput" placeholder="Enter color description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddColorModal">Cancel</button>
                        <button type="submit" class="save-color-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Color</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@* Update Color Modal *@
@if (showUpdateColorModal)
{
    <div class="modal-overlay" @onclick="CloseUpdateColorModal">
        <div class="add-color-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Update Color</h2>
                <button class="modal-close-btn" @onclick="CloseUpdateColorModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_updateColorEditContext" OnValidSubmit="SaveUpdateColorAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Hex Value</label>
                            <input type="color" class="color-picker" value="@_updateColorModel.HexValue" @onchange="OnUpdateColorPickerChanged" />
                            <input type="text" class="form-input hex-input" value="@_updateColorModel.HexValue" @oninput="OnUpdateHexValueChanged" placeholder="#000000" />
                            <ValidationMessage For="@(() => _updateColorModel.HexValue)" />
                        </div>
                        <div class="form-field">
                            <label class="field-label">Color Name <span class="required-asterisk">*</span></label>
                            <InputText id="update-color-name-input" class="form-input" @bind-Value="_updateColorModel.Name" @oninput="FilterUpdateColorNameInput" placeholder="Auto-generated or enter custom name" />
                            <ValidationMessage For="@(() => _updateColorModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description</label>
                            <InputTextArea id="update-color-description-input" class="form-textarea" @bind-Value="_updateColorModel.Description" @oninput="FilterUpdateColorDescriptionInput" placeholder="Enter color description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseUpdateColorModal">Cancel</button>
                        <button type="submit" class="save-color-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Update Color</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ColorModel> colors = new();
    private List<IT13_Final.Services.Data.ColorModel> allFilteredColors = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    
    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    
    private bool HasActiveDateFilters => filterStartDate.HasValue || filterEndDate.HasValue || !string.IsNullOrEmpty(selectedDateRange);
    private bool showColorDetails = false;
    private IT13_Final.Services.Data.ColorDetailsModel? colorDetails = null;

    private bool showAddColorModal = false;
    private readonly AddColorModel _addColorModel = new();
    private EditContext _addColorEditContext;
    
    private bool showUpdateColorModal = false;
    private readonly AddColorModel _updateColorModel = new();
    private EditContext _updateColorEditContext;
    private int? _updateColorId = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    protected override async Task OnInitializedAsync()
    {
        _addColorEditContext = new EditContext(_addColorModel);
        _updateColorEditContext = new EditContext(_updateColorModel);
        await LoadColorsAsync();
    }

    private async Task LoadColorsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            
            // Get all colors matching search term first
            var allColors = await ColorService.GetColorsAsync(userId, searchTerm, 1, 10000);
            
            // Apply date filter client-side
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredColors = allColors.Where(c =>
                {
                    var createdDate = c.DateCreated.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date && createdDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return createdDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return createdDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredColors = allColors;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredColors.Count;
            
            // Apply pagination to filtered results
            colors = allFilteredColors
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            colors = new List<IT13_Final.Services.Data.ColorModel>();
            allFilteredColors = new List<IT13_Final.Services.Data.ColorModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Debounce search to avoid too many queries
    private System.Threading.Timer? _searchTimer;
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadColorsAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadColorsAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadColorsAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Color_Record");
    }

    private async Task HandleAddColor()
    {
        showAddColorModal = true;
        _addColorModel.Reset();
        _addColorEditContext = new EditContext(_addColorModel);
        StateHasChanged();
        await Task.Delay(100);
        await JSRuntime.InvokeVoidAsync("setupCategoryInputFilter", "add-color-name-input", false);
        await JSRuntime.InvokeVoidAsync("setupCategoryInputFilter", "add-color-description-input", true);
    }

    private void CloseAddColorModal()
    {
        showAddColorModal = false;
        _addColorModel.Reset();
        StateHasChanged();
    }

    private async Task SaveColorAsync()
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to add the color {_addColorModel.Name}?");
        if (!confirmed) return;

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var newColorId = await ColorService.CreateColorAsync(userId,
                _addColorModel.Name,
                _addColorModel.HexValue,
                string.IsNullOrWhiteSpace(_addColorModel.Description) ? null : _addColorModel.Description
            );

            if (newColorId.HasValue && newColorId.Value > 0)
            {
                await LoadColorsAsync();
                successMessageText = "Color created successfully!";
                showSuccessMessage = true;
                CloseAddColorModal();

                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task HandleEdit(int colorId)
    {
        _updateColorId = colorId;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var details = await ColorService.GetColorDetailsAsync(colorId, userId);
            if (details == null) return;

            _updateColorModel.Name = details.Name;
            _updateColorModel.HexValue = details.HexValue;
            _updateColorModel.Description = details.Description ?? string.Empty;

            _updateColorEditContext = new EditContext(_updateColorModel);
            showUpdateColorModal = true;
            StateHasChanged();
            await Task.Delay(100);
            await JSRuntime.InvokeVoidAsync("setupCategoryInputFilter", "update-color-name-input", false);
            await JSRuntime.InvokeVoidAsync("setupCategoryInputFilter", "update-color-description-input", true);
        }
        catch (Exception)
        {
            // Handle error
        }
    }

    private void CloseUpdateColorModal()
    {
        showUpdateColorModal = false;
        _updateColorModel.Reset();
        _updateColorId = null;
        StateHasChanged();
    }

    private async Task SaveUpdateColorAsync()
    {
        if (!_updateColorId.HasValue) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to update the color {_updateColorModel.Name}?");
        if (!confirmed) return;

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await ColorService.UpdateColorAsync(
                _updateColorId.Value,
                userId,
                _updateColorModel.Name,
                _updateColorModel.HexValue,
                string.IsNullOrWhiteSpace(_updateColorModel.Description) ? null : _updateColorModel.Description
            );

            if (success)
            {
                await LoadColorsAsync();
                successMessageText = "Color updated successfully!";
                showSuccessMessage = true;
                CloseUpdateColorModal();

                _successBannerTimer?.Dispose();
                _successBannerTimer = new System.Threading.Timer(async _ =>
                {
                    await InvokeAsync(() =>
                    {
                        showSuccessMessage = false;
                        successMessageText = string.Empty;
                        StateHasChanged();
                    });
                }, null, 5000, Timeout.Infinite);
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        finally
        {
            StateHasChanged();
        }
    }

    private async Task HandleDelete(int colorId)
    {
        var color = colors.FirstOrDefault(c => c.Id == colorId);
        var colorName = color?.Name ?? "this color";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to archive {colorName}?");
        if (!confirmed) return;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
