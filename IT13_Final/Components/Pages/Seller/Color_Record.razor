            // Greens
            { "#008000", "Green" }, { "#00FF00", "Lime" }, { "#90EE90", "Light Green" },
            { "#228B22", "Forest Green" }, { "#32CD32", "Lime Green" }, { "#00FF7F", "Spring Green" },
            { "#00FA9A", "Medium Spring Green" }, { "#7FFF00", "Chartreuse" },
            
            // Blues
            { "#0000FF", "Blue" }, { "#00008B", "Dark Blue" }, { "#0000CD", "Medium Blue" },
            { "#4169E1", "Royal Blue" }, { "#1E90FF", "Dodger Blue" }, { "#87CEEB", "Sky Blue" },
            { "#87CEFA", "Light Sky Blue" }, { "#00BFFF", "Deep Sky Blue" }, { "#ADD8E6", "Light Blue" },
            
            // Purples
            { "#800080", "Purple" }, { "#8B008B", "Dark Magenta" }, { "#9370DB", "Medium Purple" },
            { "#BA55D3", "Medium Orchid" }, { "#DDA0DD", "Plum" }, { "#EE82EE", "Violet" },
            { "#DA70D6", "Orchid" }, { "#FF00FF", "Magenta" },
            
            // Browns
            { "#A52A2A", "Brown" }, { "#8B4513", "Saddle Brown" }, { "#D2691E", "Chocolate" },
            { "#CD853F", "Peru" }, { "#F4A460", "Sandy Brown" }, { "#DEB887", "Burlywood" },
            
            // Grays
            { "#808080", "Gray" }, { "#A9A9A9", "Dark Gray" }, { "#C0C0C0", "Silver" },
            { "#D3D3D3", "Light Gray" }, { "#DCDCDC", "Gainsboro" },
            
            // Black & White
            { "#000000", "Black" }, { "#FFFFFF", "White" }, { "#F5F5F5", "White Smoke" },
            { "#FFFAF0", "Floral White" }
        };

        var upperHex = hexValue.ToUpperInvariant();
        if (colorMap.ContainsKey(upperHex))
            return colorMap[upperHex];

        // Generate descriptive name based on color components
        var hex = upperHex.TrimStart('#');
        if (hex.Length == 6)
        {
            var r = Convert.ToInt32(hex.Substring(0, 2), 16);
            var g = Convert.ToInt32(hex.Substring(2, 2), 16);
            var b = Convert.ToInt32(hex.Substring(4, 2), 16);

            // Determine dominant color
            var max = Math.Max(r, Math.Max(g, b));
            var min = Math.Min(r, Math.Min(g, b));
            var brightness = (max + min) / 2;

            // If very dark
            if (max < 50) return "Dark";
            // If very light
            if (min > 200) return "Light";

            // Determine color family
            if (r > g && r > b)
            {
                if (g > b * 1.5) return brightness > 150 ? "Light Orange" : "Dark Orange";
                return brightness > 150 ? "Light Red" : "Dark Red";
            }
            else if (g > r && g > b)
            {
                if (b > r * 1.5) return brightness > 150 ? "Light Cyan" : "Teal";
                return brightness > 150 ? "Light Green" : "Dark Green";
            }
            else if (b > r && b > g)
            {
                if (r > g * 1.5) return brightness > 150 ? "Light Purple" : "Dark Purple";
                return brightness > 150 ? "Light Blue" : "Dark Blue";
            }
            else if (Math.Abs(r - g) < 30 && Math.Abs(g - b) < 30)
            {
                if (brightness < 80) return "Dark Gray";
                if (brightness > 180) return "Light Gray";
                return "Gray";
            }
        }

        return $"Color {hexValue}";
    }

