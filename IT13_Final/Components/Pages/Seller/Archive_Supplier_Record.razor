@page "/seller/Archive_Supplier_Record"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.ISupplierService SupplierService
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

<h1 class="page-title">Archived Suppliers</h1>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

<div class="admin-records-container">
    <div class="search-actions-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search archived suppliers" value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>

        <div class="action-buttons">
            <button class="back-btn" @onclick="NavigateBack">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                <span>Back to Suppliers</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-header">List</div>
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Company Name</th>
                    <th>Email</th>
                    <th>Archived Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (archivedSuppliers.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No archived suppliers found</td>
                    </tr>
                }
                else
                {
                    @foreach (var supplier in archivedSuppliers)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(supplier.Id)">
                            <td>@supplier.Id</td>
                            <td class="supplier-name">@supplier.CompanyName</td>
                            <td>@(string.IsNullOrEmpty(supplier.Email) ? "N/A" : supplier.Email)</td>
                            <td>@supplier.ArchivedDate.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn restore-btn" @onclick="() => HandleRestore(supplier.Id)" title="Restore">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                                        <path d="M21 3v5h-5"></path>
                                        <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                                        <path d="M8 16H3v5"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>
            
            @for (int i = 1; i <= totalPages; i++)
            {
                @if (i == 1 || i == totalPages || (i >= currentPage - 2 && i <= currentPage + 2))
                {
                    <button class="pagination-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(i)">
                        @i
                    </button>
                }
                else if (i == currentPage - 3 || i == currentPage + 3)
                {
                    <span class="pagination-ellipsis">...</span>
                }
            }
            
            <button class="pagination-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@if (showSupplierDetails && supplierDetails != null)
{
    <div class="modal-overlay" @onclick="CloseSupplierDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    <span>Supplier Details</span>
                </div>
                <button class="modal-close" @onclick="CloseSupplierDetails">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-content">
                <div class="details-column">
                    <div class="details-section">
                        <div class="details-section-header">
                            <svg class="section-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <span>Supplier Information</span>
                        </div>
                        <div class="details-list">
                            <div class="detail-item">
                                <span class="detail-label">COMPANY NAME:</span>
                                <span class="detail-value">@supplierDetails.CompanyName</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">CONTACT PERSON:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactPerson) ? "N/A" : supplierDetails.ContactPerson)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">EMAIL:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Email) ? "N/A" : supplierDetails.Email)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">CONTACT NUMBER:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.ContactNumber) ? "N/A" : supplierDetails.ContactNumber)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">STATUS:</span>
                                <span class="detail-value status-badge inactive">@supplierDetails.Status</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">STREET ADDRESS:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Street) ? "N/A" : supplierDetails.Street)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">CITY:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.City) ? "N/A" : supplierDetails.City)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">PROVINCE:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Province) ? "N/A" : supplierDetails.Province)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">ZIP CODE:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(supplierDetails.Zip) ? "N/A" : supplierDetails.Zip)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">DATE CREATED:</span>
                                <span class="detail-value">@supplierDetails.DateCreated.ToString("M/d/yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="close-btn" @onclick="CloseSupplierDetails">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span>CLOSE</span>
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ArchivedSupplierModel> archivedSuppliers = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private bool showSupplierDetails = false;
    private IT13_Final.Services.Data.SupplierDetailsModel? supplierDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedSuppliersAsync();
    }

    private async Task LoadArchivedSuppliersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            totalCount = await SupplierService.GetArchivedSuppliersCountAsync(userId, searchTerm);
            archivedSuppliers = await SupplierService.GetArchivedSuppliersAsync(userId, searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            archivedSuppliers = new List<IT13_Final.Services.Data.ArchivedSupplierModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadArchivedSuppliersAsync();
        }
    }

    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadArchivedSuppliersAsync();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadArchivedSuppliersAsync();
        }
    }

    private void NavigateBack()
    {
        Nav.NavigateTo("/seller/Supplier");
    }

    private async Task HandleRestore(int supplierId)
    {
        var supplier = archivedSuppliers.FirstOrDefault(s => s.Id == supplierId);
        var supplierName = supplier?.CompanyName ?? "this supplier";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore {supplierName}?");
        if (!confirmed) return;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await SupplierService.RestoreSupplierAsync(supplierId, userId);
            
            if (success)
            {
                ShowSuccessMessage("Supplier restored successfully!");
                await LoadArchivedSuppliersAsync();
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

    private async Task HandleRowClick(int supplierId)
    {
        showSupplierDetails = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            supplierDetails = await SupplierService.GetArchivedSupplierDetailsAsync(supplierId, userId);
        }
        catch
        {
            supplierDetails = null;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private void CloseSupplierDetails()
    {
        showSupplierDetails = false;
        supplierDetails = null;
        StateHasChanged();
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        
        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(() =>
            {
                showSuccessMessage = false;
                successMessageText = string.Empty;
                StateHasChanged();
            });
        }, null, 5000, Timeout.Infinite);
    }

    public void Dispose()
    {
        _successBannerTimer?.Dispose();
        _searchTimer?.Dispose();
    }
}

