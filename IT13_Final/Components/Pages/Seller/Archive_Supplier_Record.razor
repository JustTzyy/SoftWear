@code {
    private List<IT13_Final.Services.Data.ArchivedSupplierModel> archivedSuppliers = new();
    private List<IT13_Final.Services.Data.ArchivedSupplierModel> allFilteredSuppliers = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    private bool showSupplierDetails = false;
    private IT13_Final.Services.Data.SupplierDetailsModel? supplierDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;
    
    // Date filtering
    private string selectedDateRange = "";
    private DateTime? filterStartDate = null;
    private DateTime? filterEndDate = null;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || filterStartDate.HasValue || filterEndDate.HasValue;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedSuppliersAsync();
    }

    private async Task LoadArchivedSuppliersAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            // Get all archived suppliers matching search term first
            var allSuppliers = await SupplierService.GetArchivedSuppliersAsync(userId, searchTerm, 1, 10000);
            
            // Apply date filter client-side
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredSuppliers = allSuppliers.Where(s =>
                {
                    var archivedDate = s.ArchivedDate.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date && archivedDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return archivedDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredSuppliers = allSuppliers;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredSuppliers.Count;
            
            // Apply pagination to filtered results
            archivedSuppliers = allFilteredSuppliers
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            archivedSuppliers = new List<IT13_Final.Services.Data.ArchivedSupplierModel>();
            allFilteredSuppliers = new List<IT13_Final.Services.Data.ArchivedSupplierModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    // Debounce search to avoid too many queries
    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadArchivedSuppliersAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadArchivedSuppliersAsync();
    }
    

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadArchivedSuppliersAsync();
        }
    }

    private void NavigateToRecords()
    {
        Nav.NavigateTo("/seller/Supplier");
    }

    private async Task HandleRestore(int supplierId)
    {
        var supplier = archivedSuppliers.FirstOrDefault(s => s.Id == supplierId);
        var supplierName = supplier?.CompanyName ?? "this supplier";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore {supplierName}?");
        if (!confirmed) return;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await SupplierService.RestoreSupplierAsync(supplierId, userId);
            
            if (success)
            {
                ShowSuccessMessage("Supplier restored successfully!");
                await LoadArchivedSuppliersAsync();
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

    private async Task HandleRowClick(int supplierId)
    {
        showSupplierDetails = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            supplierDetails = await SupplierService.GetArchivedSupplierDetailsAsync(supplierId, userId);
        }
        catch
        {
            supplierDetails = null;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private void CloseSupplierDetails()
    {
        showSupplierDetails = false;
        supplierDetails = null;
        StateHasChanged();
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        StateHasChanged();

        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessMessage = false;
                StateHasChanged();
            });
        }, null, 3000, Timeout.Infinite);
    }

    // Date filter methods
    private void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterStartDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterStartDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            filterEndDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterEndDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                filterStartDate = null;
                filterEndDate = null;
                break;
            case "today":
                filterStartDate = now.Date;
                filterEndDate = now.Date;
                break;
            case "yesterday":
                filterStartDate = now.Date.AddDays(-1);
                filterEndDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                filterStartDate = now.Date.AddDays(-6);
                filterEndDate = now.Date;
                break;
            case "last30days":
                filterStartDate = now.Date.AddDays(-29);
                filterEndDate = now.Date;
                break;
            case "thismonth":
                filterStartDate = new DateTime(now.Year, now.Month, 1);
                filterEndDate = now.Date;
                break;
            case "thisyear":
                filterStartDate = new DateTime(now.Year, 1, 1);
                filterEndDate = now.Date;
                break;
        }
        currentPage = 1;
        InvokeAsync(async () => await LoadArchivedSuppliersAsync());
    }

    private async Task ApplyDateFilter()
    {
        currentPage = 1;
        await LoadArchivedSuppliersAsync();
    }

    private async Task ClearDateFilter()
    {
        filterStartDate = null;
        filterEndDate = null;
        selectedDateRange = "";
        currentPage = 1;
        await LoadArchivedSuppliersAsync();
    }

    private async Task PrintArchivedSupplierRecords()
    {
        // Use all filtered suppliers for the PDF, not just the current page
        var recordsForPrint = allFilteredSuppliers.Any() ? allFilteredSuppliers : archivedSuppliers;

        // Implementation for printing would go here
        await Task.CompletedTask;
    }

    public void Dispose()
    {
        _successBannerTimer?.Dispose();
        _searchTimer?.Dispose();
    }
}

