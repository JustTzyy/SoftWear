@page "/seller/Size"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.ISizeService SizeService
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

<h1 class="page-title">Size Records</h1>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

<div class="sizes-container">
    <div class="search-actions-row">
        <div class="search-wrapper">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search sizes" value="@searchTerm" @oninput="HandleSearchInput" @onkeypress="HandleSearchKeyPress" />
        </div>

        <div class="action-buttons">
            <button class="archive-btn" @onclick="NavigateToArchive">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                    <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                    <line x1="12" y1="22.08" x2="12" y2="12"></line>
                </svg>
                <span>Archive</span>
            </button>
            <button class="add-size-btn" @onclick="HandleAddSize">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="12" y1="8" x2="12" y2="16"></line>
                    <line x1="8" y1="12" x2="16" y2="12"></line>
                </svg>
                <span>Add Size</span>
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-header">List</div>
        <table class="sizes-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Date Created</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="5" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (sizes.Count == 0)
                {
                    <tr>
                        <td colspan="5" class="empty-cell">No sizes found</td>
                    </tr>
                }
                else
                {
                    @foreach (var size in sizes)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(size.Id)">
                            <td>@size.Id</td>
                            <td class="size-name">@size.Name</td>
                            <td class="description-cell">@(string.IsNullOrEmpty(size.Description) ? "N/A" : size.Description)</td>
                            <td>@size.DateCreated.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn edit-btn" @onclick="() => HandleEdit(size.Id)" title="Edit">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                </button>
                                <button class="action-btn delete-btn" @onclick="() => HandleDelete(size.Id)" title="Delete">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"></polyline>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@* Size Details Modal *@
@if (showSizeDetails && sizeDetails != null)
{
    <div class="modal-overlay" @onclick="CloseSizeDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                    <span>Size Details</span>
                </div>
                <button class="modal-close" @onclick="CloseSizeDetails" title="Close">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content-size">
                <div class="details-list">
                    <div class="detail-item">
                        <span class="detail-label">SIZE NAME:</span>
                        <span class="detail-value">@sizeDetails.Name</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DESCRIPTION:</span>
                        <span class="detail-value">@(string.IsNullOrEmpty(sizeDetails.Description) ? "N/A" : sizeDetails.Description)</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">STATUS:</span>
                        <span class="detail-value status-badge @(sizeDetails.Status.ToUpper() == "ACTIVE" ? "active" : "inactive")">@sizeDetails.Status</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">DATE CREATED:</span>
                        <span class="detail-value">@sizeDetails.DateCreated.ToString("M/d/yyyy")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* Add Size Modal *@
@if (showAddSizeModal)
{
    <div class="modal-overlay" @onclick="CloseAddSizeModal">
        <div class="add-size-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Size</h2>
                <button class="modal-close-btn" @onclick="CloseAddSizeModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addSizeEditContext" OnValidSubmit="SaveSizeAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Size Name</label>
                            <InputText class="form-input" @bind-Value="_addSizeModel.Name" placeholder="e.g., Small, Medium, Large" />
                            <ValidationMessage For="@(() => _addSizeModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_addSizeModel.Description" placeholder="Enter size description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddSizeModal">Cancel</button>
                        <button type="submit" class="save-size-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Size</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@* Update Size Modal *@
@if (showUpdateSizeModal)
{
    <div class="modal-overlay" @onclick="CloseUpdateSizeModal">
        <div class="update-size-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Update Size</h2>
                <button class="modal-close-btn" @onclick="CloseUpdateSizeModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_updateSizeEditContext" OnValidSubmit="SaveUpdateSizeAsync">
                    <DataAnnotationsValidator />
                    
                    <div class="form-grid">
                        <div class="form-field">
                            <label class="field-label">Size Name</label>
                            <InputText class="form-input" @bind-Value="_updateSizeModel.Name" placeholder="e.g., Small, Medium, Large" />
                            <ValidationMessage For="@(() => _updateSizeModel.Name)" />
                        </div>
                        <div class="form-field full-width">
                            <label class="field-label">Description (Optional)</label>
                            <InputTextArea class="form-textarea" @bind-Value="_updateSizeModel.Description" placeholder="Enter size description" rows="3" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseUpdateSizeModal">Cancel</button>
                        <button type="submit" class="save-size-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Update Size</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.SizeModel> sizes = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);

    private bool showSizeDetails = false;
    private IT13_Final.Services.Data.SizeDetailsModel? sizeDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;

    private bool showAddSizeModal = false;
    private AddSizeModel _addSizeModel = new();
    private EditContext? _addSizeEditContext;

    private bool showUpdateSizeModal = false;
    private UpdateSizeModel _updateSizeModel = new();
    private EditContext? _updateSizeEditContext;
    private int _updateSizeId;

    protected override async Task OnInitializedAsync()
    {
        _addSizeEditContext = new EditContext(_addSizeModel);
        _updateSizeEditContext = new EditContext(_updateSizeModel);
        await LoadSizesAsync();
    }

    private async Task LoadSizesAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            totalCount = await SizeService.GetSizesCountAsync(searchTerm);
            sizes = await SizeService.GetSizesAsync(searchTerm, currentPage, pageSize);
        }
        catch (Exception)
        {
            sizes = new List<IT13_Final.Services.Data.SizeModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadSizesAsync();
        }
    }

    private System.Threading.Timer? _searchTimer;
    private void HandleSearchInput(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? string.Empty;
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadSizesAsync();
            });
        }, null, 500, Timeout.Infinite);
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadSizesAsync();
        }
    }

    private void NavigateToArchive()
    {
        Nav.NavigateTo("/seller/Archive_Size_Record");
    }

    private void HandleAddSize()
    {
        _addSizeModel = new AddSizeModel();
        _addSizeEditContext = new EditContext(_addSizeModel);
        showAddSizeModal = true;
    }

    private void CloseAddSizeModal()
    {
        showAddSizeModal = false;
    }

    private async Task SaveSizeAsync()
    {
        if (_addSizeEditContext?.Validate() ?? false)
        {
            var newSizeId = await SizeService.CreateSizeAsync(
                _addSizeModel.Name,
                _addSizeModel.Description
            );

            if (newSizeId.HasValue)
            {
                ShowSuccessMessage($"Size '{_addSizeModel.Name}' added successfully!");
                CloseAddSizeModal();
                await LoadSizesAsync();
            }
        }
    }

    private async Task HandleEdit(int sizeId)
    {
        var sizeToUpdate = await SizeService.GetSizeDetailsAsync(sizeId);
        if (sizeToUpdate != null)
        {
            _updateSizeId = sizeId;
            _updateSizeModel = new UpdateSizeModel
            {
                Name = sizeToUpdate.Name,
                Description = sizeToUpdate.Description
            };
            _updateSizeEditContext = new EditContext(_updateSizeModel);
            showUpdateSizeModal = true;
        }
    }

    private void CloseUpdateSizeModal()
    {
        showUpdateSizeModal = false;
    }

    private async Task SaveUpdateSizeAsync()
    {
        if (_updateSizeEditContext?.Validate() ?? false)
        {
            var success = await SizeService.UpdateSizeAsync(
                _updateSizeId,
                _updateSizeModel.Name,
                _updateSizeModel.Description
            );

            if (success)
            {
                ShowSuccessMessage($"Size '{_updateSizeModel.Name}' updated successfully!");
                CloseUpdateSizeModal();
                await LoadSizesAsync();
            }
        }
    }

    private async Task HandleDelete(int sizeId)
    {
        var size = sizes.FirstOrDefault(s => s.Id == sizeId);
        var sizeName = size?.Name ?? "this size";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to archive {sizeName}?");
        if (!confirmed) return;
        
        var success = await SizeService.ArchiveSizeAsync(sizeId);
        if (success)
        {
            ShowSuccessMessage($"Size '{sizeName}' archived successfully!");
            await LoadSizesAsync();
        }
    }

    private async Task HandleRowClick(int sizeId)
    {
        sizeDetails = await SizeService.GetSizeDetailsAsync(sizeId);
        if (sizeDetails != null)
        {
            showSizeDetails = true;
        }
    }

    private void CloseSizeDetails()
    {
        showSizeDetails = false;
        sizeDetails = null;
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        StateHasChanged();

        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessMessage = false;
                StateHasChanged();
            });
        }, null, 3000, Timeout.Infinite);
    }

    public void Dispose()
    {
        _successBannerTimer?.Dispose();
        _searchTimer?.Dispose();
    }

    private class AddSizeModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Size name is required")]
        [System.ComponentModel.DataAnnotations.StringLength(100, ErrorMessage = "Size name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string Description { get; set; } = string.Empty;
    }

    private class UpdateSizeModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Size name is required")]
        [System.ComponentModel.DataAnnotations.StringLength(100, ErrorMessage = "Size name cannot exceed 100 characters")]
        public string Name { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.StringLength(500, ErrorMessage = "Description cannot exceed 500 characters")]
        public string Description { get; set; } = string.Empty;
    }
}

