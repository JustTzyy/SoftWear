@code {
    private List<IT13_Final.Services.Data.SaleReportModel> sales = new();
    private List<IT13_Final.Services.Data.SaleReportModel> allSalesForPrint = new();

    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private bool isGeneratingPDF = false;

    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);

    private decimal totalSalesAmount = 0m;
    private decimal vatAmount = 0m;
    private decimal adminFeeAmount = 0m;

    private int sellerUserId = 0;
    private System.Threading.Timer? _searchTimer;

    // Modal state
    private bool showSaleDetailsModal = false;
    private IT13_Final.Services.Data.SaleReportModel? selectedSale = null;
    private List<IT13_Final.Services.Data.SaleReportItemModel> saleItems = new();

    protected override async Task OnInitializedAsync()
    {
        // For seller-scoped data, link staff by seller's own user id (tbl_users.id),
        // same pattern as Seller/AuditLogs. No extra DB lookup is needed here.
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadSales();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "seller-sales-report-search-input");
        }
    }

    private async Task LoadSales()
    {
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all cashier user IDs for this seller
            var cashierUserIds = await GetCashierUserIdsAsync();
            
            if (cashierUserIds.Count == 0)
            {
                sales = new List<IT13_Final.Services.Data.SaleReportModel>();
                totalCount = 0;
                totalSalesAmount = 0;
                vatAmount = 0;
                adminFeeAmount = 0;
                return;
            }

            // Build parameterized IN clause
            var userIdParams = new List<string>();
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                userIdParams.Add($"@cashierId{i}");
            }
            var cashierIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            // Get count
            var countSql = $@"
                SELECT COUNT(*)
                FROM dbo.tbl_sales s
                INNER JOIN dbo.tbl_users u ON s.user_id = u.id
                WHERE s.archives IS NULL 
                AND s.status = 'Completed'
                AND s.user_id IN ({cashierIdsInClause})
                AND EXISTS (
                    SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                    WHERE dsv.cashier_user_id = s.user_id
                    AND dsv.sale_date = CAST(s.timestamps AS DATE)
                    AND dsv.status = 'Approved'
                    AND dsv.archived_at IS NULL
                    AND dsv.seller_user_id = @SellerUserId
                )";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countSql += " AND (s.sale_number LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                countSql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                countSql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            using var countCmd = new SqlCommand(countSql, conn);
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                countCmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
            }
            countCmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var countResult = await countCmd.ExecuteScalarAsync();
            totalCount = countResult != null ? Convert.ToInt32(countResult) : 0;

            // Get sales (paged)
            var offset = (currentPage - 1) * pageSize;
            var salesSql = $@"
                SELECT s.id, s.sale_number, s.amount, s.payment_type, s.timestamps,
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as cashier_name,
                       p.amount_paid, p.change_given, p.reference_number
                FROM dbo.tbl_sales s
                INNER JOIN dbo.tbl_users u ON s.user_id = u.id
                LEFT JOIN dbo.tbl_payments p ON s.id = p.sale_id AND p.archives IS NULL
                WHERE s.archives IS NULL 
                AND s.status = 'Completed'
                AND s.user_id IN ({cashierIdsInClause})
                AND EXISTS (
                    SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                    WHERE dsv.cashier_user_id = s.user_id
                    AND dsv.sale_date = CAST(s.timestamps AS DATE)
                    AND dsv.status = 'Approved'
                    AND dsv.archived_at IS NULL
                    AND dsv.seller_user_id = @SellerUserId
                )";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                salesSql += " AND (s.sale_number LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                salesSql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                salesSql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            salesSql += " ORDER BY s.timestamps DESC OFFSET @Offset ROWS FETCH NEXT @PageSize ROWS ONLY";

            using var salesCmd = new SqlCommand(salesSql, conn);
            for (int i = 0; i < cashierUserIds.Count; i++)
            {
                salesCmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
            }
            salesCmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                salesCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                salesCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                salesCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }
            salesCmd.Parameters.AddWithValue("@Offset", offset);
            salesCmd.Parameters.AddWithValue("@PageSize", pageSize);

            sales = new List<IT13_Final.Services.Data.SaleReportModel>();
            using var reader = await salesCmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                sales.Add(new IT13_Final.Services.Data.SaleReportModel
                {
                    Id = reader.GetInt32(0),
                    SaleNumber = reader.GetString(1),
                    Amount = reader.GetDecimal(2),
                    PaymentMethod = reader.IsDBNull(3) ? string.Empty : reader.GetString(3),
                    Timestamps = reader.GetDateTime(4),
                    CashierName = reader.IsDBNull(5) ? string.Empty : reader.GetString(5),
                    AmountPaid = reader.IsDBNull(6) ? reader.GetDecimal(2) : reader.GetDecimal(6),
                    ChangeGiven = reader.IsDBNull(7) ? 0 : reader.GetDecimal(7),
                    ReferenceNumber = reader.IsDBNull(8) ? null : reader.GetString(8)
                });
            }

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                await LoadSales();
                return;
            }

            // Compute total sales amount across ALL matching records (no pagination)
            var totalSql = $@"
                SELECT SUM(s.amount)
                FROM dbo.tbl_sales s
                INNER JOIN dbo.tbl_users u ON s.user_id = u.id
                WHERE s.archives IS NULL 
                AND s.status = 'Completed'
                AND s.user_id IN ({cashierIdsInClause})
                AND EXISTS (
                    SELECT 1 FROM dbo.tbl_daily_sales_verifications dsv
                    WHERE dsv.cashier_user_id = s.user_id
                    AND dsv.sale_date = CAST(s.timestamps AS DATE)
                    AND dsv.status = 'Approved'
                    AND dsv.archived_at IS NULL
                    AND dsv.seller_user_id = @SellerUserId
                )";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                totalSql += " AND (s.sale_number LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                totalSql += " AND CAST(s.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                totalSql += " AND CAST(s.timestamps AS DATE) <= @EndDate";
            }

            // Use a separate connection for the total SUM query to avoid conflicts
            using (var totalConn = new SqlConnection(connectionString))
            {
                await totalConn.OpenAsync();

                using (var totalCmd = new SqlCommand(totalSql, totalConn))
                {
                    for (int i = 0; i < cashierUserIds.Count; i++)
                    {
                        totalCmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
                    }
                    totalCmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);
                    if (!string.IsNullOrWhiteSpace(searchTerm))
                    {
                        totalCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
                    }
                    if (startDate.HasValue)
                    {
                        totalCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                    }
                    if (endDate.HasValue)
                    {
                        totalCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                    }

                    var totalResult = await totalCmd.ExecuteScalarAsync();
                    totalSalesAmount = totalResult != null && totalResult != DBNull.Value
                        ? Convert.ToDecimal(totalResult)
                        : 0m;
                }
            }

            // Calculate VAT (12% on total sales)
            vatAmount = totalSalesAmount * 0.12m;
            
            // Calculate Admin Fee (2% per product)
            await CalculateAdminFee();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading sales for seller: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load sales reports. Please try again.");
            sales = new List<IT13_Final.Services.Data.SaleReportModel>();
            totalCount = 0;
            totalSalesAmount = 0;
            vatAmount = 0;
            adminFeeAmount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task<List<int>> GetCashierUserIdsAsync()
    {
        var cashierIds = new List<int>();
        
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        if (sellerUserId <= 0)
        {
            return cashierIds;
        }

        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"SELECT u.id
                        FROM dbo.tbl_users u
                        JOIN dbo.tbl_roles r ON r.id = u.role_id
                        WHERE u.user_id = @SellerUserId
                        AND LOWER(r.name) = 'cashier'
                        AND u.archived_at IS NULL";

            using var cmd = new SqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("@SellerUserId", sellerUserId);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                cashierIds.Add(reader.GetInt32(0));
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading cashier IDs: {ex.Message}");
        }

        return cashierIds;
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            // Prevent future dates - cap at today
            if (date.Date > today)
            {
                startDate = today;
            }
            else
            {
                startDate = date.Date;
            }
            selectedDateRange = "";
            
            // If end date is before start date, adjust it
            if (endDate.HasValue && endDate.Value < startDate.Value)
            {
                endDate = startDate.Value;
            }
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            var parsedDate = date.Date;
            
            // Prevent future dates - cap at today
            if (parsedDate > today)
            {
                parsedDate = today;
            }
            
            // Ensure end date is never before start date - if it is, set it to startDate or today (whichever is earlier)
            if (startDate.HasValue)
            {
                // If end date is before start date, set it to start date
                if (parsedDate < startDate.Value)
                {
                    endDate = startDate.Value;
                }
                else
                {
                    endDate = parsedDate;
                }
            }
            else
            {
                // If no start date is set, allow any date up to today
                endDate = parsedDate;
            }
            
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

