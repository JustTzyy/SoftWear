    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var clerkIds = await GetStockClerkUserIdsAsync();
            if (clerkIds.Count == 0)
            {
                allStockOutsForPrint = new List<IT13_Final.Services.Data.StockOutModel>();
            }
            else
            {
                // Build parameterized IN clause
                var userIdParams = new List<string>();
                for (int i = 0; i < clerkIds.Count; i++)
                {
                    userIdParams.Add($"@clerkId{i}");
                }
                var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
                await conn.OpenAsync();

                var stockOutsSql = $@"
                    SELECT so.id, so.quantity_removed, so.reason, so.timestamps, so.variant_id, 
                           v.name as variant_name, p.name as product_name, 
                           COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as user_name
                    FROM dbo.tbl_stock_out so
                    INNER JOIN dbo.tbl_variants v ON so.variant_id = v.id
                    INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                    INNER JOIN dbo.tbl_users u ON so.user_id = u.id
                    WHERE so.archives IS NULL
                    AND so.user_id IN ({clerkIdsInClause})";

                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    stockOutsSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm)";
                }

                if (startDate.HasValue)
                {
                    stockOutsSql += " AND CAST(so.timestamps AS DATE) >= @StartDate";
                }

                if (endDate.HasValue)
                {
                    stockOutsSql += " AND CAST(so.timestamps AS DATE) <= @EndDate";
                }

                stockOutsSql += " ORDER BY so.timestamps DESC";

                using var cmd = new Microsoft.Data.SqlClient.SqlCommand(stockOutsSql, conn);
                for (int i = 0; i < clerkIds.Count; i++)
                {
                    cmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
                }
                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    cmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
                }
                if (startDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                }
                if (endDate.HasValue)
                {
                    cmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                }

                allStockOutsForPrint = new List<IT13_Final.Services.Data.StockOutModel>();
                using var reader = await cmd.ExecuteReaderAsync();
                while (await reader.ReadAsync())
                {
                    allStockOutsForPrint.Add(new IT13_Final.Services.Data.StockOutModel
                    {
                        Id = reader.GetInt32(0),
                        QuantityRemoved = reader.GetInt32(1),
                        Reason = reader.IsDBNull(2) ? null : reader.GetString(2),
                        Timestamps = reader.GetDateTime(3),
                        VariantId = reader.GetInt32(4),
                        VariantName = reader.GetString(5),
                        ProductName = reader.GetString(6),
                        UserName = reader.IsDBNull(7) ? string.Empty : reader.GetString(7)
                    });
                }
            }

            // Check if generateAndPrintStockOutReport exists, otherwise use a simple print
            await JSRuntime.InvokeVoidAsync("generateAndPrintStockOutReport",
                allStockOutsForPrint.Select(so => new
                {
                    productName = so.ProductName,
                    variantName = so.VariantName,
                    quantity = so.QuantityRemoved,
                    reason = so.Reason ?? "N/A",
                    stockClerkName = so.UserName ?? "N/A",
                    date = so.Timestamps.ToString("MMM dd, yyyy"),
                    time = so.Timestamps.ToString("HH:mm:ss"),
                    userName = so.UserName
                }).ToArray(),
                AuthState.CurrentUser?.FullName ?? "Seller",
                startDate?.ToString("MMM dd, yyyy") ?? "All Time",
                endDate?.ToString("MMM dd, yyyy") ?? "Today"
            );
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("window.print");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

