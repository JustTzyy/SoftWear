@code {
    private List<IT13_Final.Services.Data.StockOutModel> stockOuts = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private int totalQuantityRemoved = 0;
    private System.Threading.Timer? _searchTimer;
    private bool showStockOutDetailsModal = false;
    private IT13_Final.Services.Data.StockOutDetailsModel? selectedStockOut = null;
    private List<IT13_Final.Services.Data.StockOutModel> allStockOutsForPrint = new();
    private bool isGeneratingPDF = false;
    private int sellerUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadStockOuts();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "stock-out-report-search-input");
            }
            catch (Exception)
            {
                // JavaScript function might not be available yet, ignore
            }
        }
    }

    private async Task<List<int>> GetStockClerkUserIdsAsync()
    {
        var clerkIds = new List<int>();
        
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        if (sellerUserId <= 0)
        {
            return clerkIds;
        }

        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT u.id
                FROM dbo.tbl_users u
                JOIN dbo.tbl_roles r ON r.id = u.role_id
                WHERE u.user_id = @SellerId
                AND LOWER(r.name) = 'stockclerk'
                AND u.archived_at IS NULL";

            using var cmd = new Microsoft.Data.SqlClient.SqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("@SellerId", sellerUserId);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                clerkIds.Add(reader.GetInt32(0));
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock clerk IDs: {ex.Message}");
        }

        return clerkIds;
    }

    private async Task LoadStockOuts()
    {
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all stock clerk user IDs for this seller
            var clerkIds = await GetStockClerkUserIdsAsync();
            
            if (clerkIds.Count == 0)
            {
                stockOuts = new List<IT13_Final.Services.Data.StockOutModel>();
                totalCount = 0;
                return;
            }

            // Build parameterized IN clause
            var userIdParams = new List<string>();
            for (int i = 0; i < clerkIds.Count; i++)
            {
                userIdParams.Add($"@clerkId{i}");
            }
            var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            // Get count
            var countSql = $@"
                SELECT COUNT(*)
                FROM dbo.tbl_stock_out so
                INNER JOIN dbo.tbl_variants v ON so.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                WHERE so.archives IS NULL
                AND so.user_id IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                countSql += " AND CAST(so.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                countSql += " AND CAST(so.timestamps AS DATE) <= @EndDate";
            }

            using var countCmd = new Microsoft.Data.SqlClient.SqlCommand(countSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                countCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var countResult = await countCmd.ExecuteScalarAsync();
            totalCount = countResult != null ? Convert.ToInt32(countResult) : 0;

            // Get data with proper user name retrieval
            var offset = (currentPage - 1) * pageSize;
            var dataSql = $@"
                SELECT so.id, so.quantity_removed, so.reason, so.timestamps, so.variant_id, 
                       v.name as variant_name, p.name as product_name, 
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as user_name
                FROM dbo.tbl_stock_out so
                INNER JOIN dbo.tbl_variants v ON so.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                INNER JOIN dbo.tbl_users u ON so.user_id = u.id
                WHERE so.archives IS NULL
                AND so.user_id IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm)";
            }

            if (startDate.HasValue)
            {
                dataSql += " AND CAST(so.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                dataSql += " AND CAST(so.timestamps AS DATE) <= @EndDate";
            }

            dataSql += @" ORDER BY so.timestamps DESC
                OFFSET @Offset ROWS FETCH NEXT @PageSize ROWS ONLY";

            using var dataCmd = new Microsoft.Data.SqlClient.SqlCommand(dataSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                dataCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (startDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }
            dataCmd.Parameters.AddWithValue("@Offset", offset);
            dataCmd.Parameters.AddWithValue("@PageSize", pageSize);

            stockOuts = new List<IT13_Final.Services.Data.StockOutModel>();
            using var reader = await dataCmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                stockOuts.Add(new IT13_Final.Services.Data.StockOutModel
                {
                    Id = reader.GetInt32(0),
                    QuantityRemoved = reader.GetInt32(1),
                    Reason = reader.IsDBNull(2) ? null : reader.GetString(2),
                    Timestamps = reader.GetDateTime(3),
                    VariantId = reader.GetInt32(4),
                    VariantName = reader.GetString(5),
                    ProductName = reader.GetString(6),
                    UserName = reader.IsDBNull(7) ? string.Empty : reader.GetString(7)
                });
            }

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                await LoadStockOuts();
                return;
            }

            // Calculate total quantity removed
            totalQuantityRemoved = stockOuts.Sum(so => so.QuantityRemoved);
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock outs: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load stock out records. Please try again.");
            stockOuts = new List<IT13_Final.Services.Data.StockOutModel>();
            totalCount = 0;
            totalQuantityRemoved = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            // Prevent future dates - cap at today
            if (date.Date > today)
            {
                startDate = today;
            }
            else
            {
                startDate = date.Date;
            }
            selectedDateRange = "";
            
            // If end date is before start date, adjust it
            if (endDate.HasValue && endDate.Value < startDate.Value)
            {
                endDate = startDate.Value;
            }
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            var parsedDate = date.Date;
            
            // Prevent future dates - cap at today
            if (parsedDate > today)
            {
                parsedDate = today;
            }
            
            // Ensure end date is never before start date - if it is, set it to startDate or today (whichever is earlier)
            if (startDate.HasValue)
            {
                // If end date is before start date, set it to start date
                if (parsedDate < startDate.Value)
                {
                    endDate = startDate.Value;
                }
                else
                {
                    endDate = parsedDate;
                }
            }
            else
            {
                // If no start date is set, allow any date up to today
                endDate = parsedDate;
            }
            
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

    private async Task ClearDateFilter()
    {
        selectedDateRange = "";
        startDate = null;
        endDate = null;
        currentPage = 1;
        await LoadStockOuts();
    }

    private async Task ApplyFilters()
    {
        currentPage = 1;
        await LoadStockOuts();
    }

    private void HandleSearchInput()
    {
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () => await LoadStockOuts());
        }, null, 500, Timeout.Infinite);
    }

    private async Task HandleClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadStockOuts();
        StateHasChanged();
    }

    private async Task HandleSearchKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            currentPage = 1;
            await LoadStockOuts();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages)
        {
            if (page != currentPage)
            {
                currentPage = page;
                await LoadStockOuts();
            }
        }
    }

    private async Task HandleStockOutClick(int stockOutId)
    {
        try
        {
            // Pass userId = 0 to bypass user filter since we already filtered the list
            // to only show stock-outs from this seller's stock clerks
