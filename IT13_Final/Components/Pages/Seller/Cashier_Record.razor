@* Add Cashier Modal *@
@if (showAddCashierModal)
{
    <div class="modal-overlay" @onclick="CloseAddCashierModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Cashier</h2>
                <button class="modal-close-btn" @onclick="CloseAddCashierModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-tabs">
                <button class="modal-tab @(activeAddCashierTab == "user" ? "active" : "")" @onclick='() => SetActiveAddCashierTab("user")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>User Information</span>
                </button>
                <button class="modal-tab @(activeAddCashierTab == "address" ? "active" : "")" @onclick='() => SetActiveAddCashierTab("address")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>Address Information</span>
                </button>
            </div>

            <div class="modal-body">
                <EditForm EditContext="@_addCashierEditContext" OnValidSubmit="SaveCashierAsync" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    
                    @if (activeAddCashierTab == "user")
                    {
                        <div class="form-grid">
                            <div class="form-field">
                                <label class="field-label">First Name <span class="required-asterisk">*</span></label>
                                <input id="addCashierFirstName" class="form-input" value="@_addCashierModel.FirstName" @oninput="FilterAddCashierFirstNameInput" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => _addCashierModel.FirstName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Middle Name</label>
                                <input id="addCashierMiddleName" class="form-input" value="@_addCashierModel.MiddleName" @oninput="FilterAddCashierMiddleNameInput" placeholder="Enter middle name (optional)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Last Name <span class="required-asterisk">*</span></label>
                                <input id="addCashierLastName" class="form-input" value="@_addCashierModel.LastName" @oninput="FilterAddCashierLastNameInput" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => _addCashierModel.LastName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Email <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addCashierModel.Email" @oninput="FilterAddCashierEmailInput" placeholder="Enter email address" />
                                <ValidationMessage For="@(() => _addCashierModel.Email)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Birthday <span class="required-asterisk">*</span></label>
                                <input type="date" class="form-input" value="@(_addCashierModel.Birthday?.ToString("yyyy-MM-dd") ?? "")" max="@MaxBirthdayDate.ToString("yyyy-MM-dd")" @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) { AddCashierBirthday = DateOnly.FromDateTime(date); } else { AddCashierBirthday = null; } })" />
                                <ValidationMessage For="@(() => _addCashierModel.Birthday)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Age <span class="required-asterisk">*</span></label>
                                <InputNumber TValue="int?" class="form-input" @bind-Value="_addCashierModel.Age" disabled />
                                <ValidationMessage For="@(() => _addCashierModel.Age)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Sex <span class="required-asterisk">*</span></label>
                                <select class="form-input sex-select" value="@_addCashierModel.Sex" @onchange="@((ChangeEventArgs e) => { 
                                    _addCashierModel.Sex = e.Value?.ToString() ?? string.Empty; 
                                    if (_addCashierEditContext != null)
                                    {
                                        _addCashierEditContext.NotifyFieldChanged(_addCashierEditContext.Field(nameof(_addCashierModel.Sex)));
                                    }
                                    StateHasChanged(); 
                                })">
                                    <option value="">Select Sex</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <ValidationMessage For="@(() => _addCashierModel.Sex)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Contact Number <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addCashierModel.Contact" @oninput="FilterAddCashierContactInput" placeholder="09123456789" maxlength="11" />
                                <ValidationMessage For="@(() => _addCashierModel.Contact)" />
                            </div>
                        </div>
                    }
                    else if (activeAddCashierTab == "address")
                    {
                        <div class="form-grid">
                            <div class="form-field full-width">
                                <label class="field-label">Street Address <span class="required-asterisk">*</span></label>
                                <InputText id="add-cashier-street-input" class="form-input" @bind-Value="_addCashierAddressModel.Street" placeholder="123 Main Street, Barangay Name" />
                                <ValidationMessage For="@(() => _addCashierAddressModel.Street)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Province <span class="required-asterisk">*</span></label>
                                <select class="form-input province-select" value="@_addCashierAddressModel.Province" @onchange="OnProvinceChanged">
                                    <option value="">Select Province</option>
                                    @foreach (var province in _addCashierProvinces)
                                    {
                                        <option value="@province">@province</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addCashierAddressModel.Province)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">City <span class="required-asterisk">*</span></label>
                                <select class="form-input city-select" value="@_addCashierAddressModel.City" @onchange="OnCityChanged" disabled="@(string.IsNullOrEmpty(_addCashierAddressModel.Province))">
                                    <option value="">Select City</option>
                                    @foreach (var city in _addCashierCities)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addCashierAddressModel.City)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Zip Code <span class="required-asterisk">*</span></label>
                                <input class="form-input" value="@_addCashierAddressModel.Zip" disabled placeholder="Auto-filled" />
                                <ValidationMessage For="@(() => _addCashierAddressModel.Zip)" />
                            </div>
                        </div>
                    }

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddCashierModal">Cancel</button>
                        <button type="submit" class="save-admin-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Cashier</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

