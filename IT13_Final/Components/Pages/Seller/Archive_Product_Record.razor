@page "/seller/Archive_Product_Record"
@layout IT13_Final.Components.Layout.Seller.Seller
@inject IT13_Final.Services.Data.IProductService ProductService
@inject IT13_Final.Services.Auth.AuthState AuthState
@inject IJSRuntime JSRuntime
@inject NavigationManager Nav
@implements IDisposable

@* Welcome Header *@
<div class="welcome-header">
    <div class="welcome-content">
        <h1 class="welcome-greeting">Archived Product Records</h1>
        <p class="welcome-date">Manage archived products â€¢ @totalCount total archived</p>
    </div>
    <div class="header-actions">
        <button class="action-btn print-btn" @onclick="PrintArchivedProductRecords" title="Print records">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 9V2h12v7"></path>
                <path d="M6 18H4a2 2 0 0 1-2-2v-5a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-2"></path>
                <rect x="6" y="14" width="12" height="8"></rect>
            </svg>
        </button>
    </div>
</div>

@* Search and Date Filters *@
<div class="dashboard-filters">
    <div class="search-wrapper">
        <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"></circle>
            <path d="m21 21-4.3-4.3"></path>
        </svg>
        <input type="text" class="search-input" placeholder="Search by name, description, or category..." @bind="searchTerm" @bind:event="oninput" @bind:after="OnSearchInput" />
        @if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            <button class="clear-search-btn" @onclick="ClearSearch" title="Clear search">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
    <div class="date-filters">
        <select class="date-select" @bind="selectedDateRange" @bind:after="HandleDateRangeChange" @bind:event="onchange">
            <option value="">All Time</option>
            <option value="today">Today</option>
            <option value="yesterday">Yesterday</option>
            <option value="last7days">Last 7 Days</option>
            <option value="last30days">Last 30 Days</option>
            <option value="thismonth">This Month</option>
            <option value="thisyear">This Year</option>
        </select>
        <input type="date" 
               class="date-input" 
               value="@(filterStartDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleStartDateChange" />
        <span class="date-separator">to</span>
        <input type="date" 
               class="date-input" 
               value="@(filterEndDate?.ToString("yyyy-MM-dd"))" 
               min="@DateTime.Now.AddYears(-10).ToString("yyyy-MM-dd")"
               max="@DateTime.Now.ToString("yyyy-MM-dd")"
               @onchange="HandleEndDateChange" />
        @if (HasActiveDateFilters)
        {
            <button class="clear-btn" @onclick="ClearDateFilter" title="Clear filters">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 6 6 18"></path>
                    <path d="m6 6 12 12"></path>
                </svg>
            </button>
        }
    </div>
</div>

@if (showSuccessMessage && !string.IsNullOrEmpty(successMessageText))
{
    <div class="success-banner">
        <svg class="success-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span>@successMessageText</span>
    </div>
}

@* Archived List Card *@
<div class="content-card">
    <div class="card-header">
        <div class="card-title-section">
            <h3 class="card-title">Archived Product List</h3>
            <span class="card-subtitle">@totalCount archived products</span>
        </div>
        <div class="card-actions">
            <button class="card-action-btn primary" @onclick="NavigateToRecords">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                <span>Back to Active</span>
            </button>
        </div>
    </div>
    
    <div class="card-body">
        <table class="admin-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Archived Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (isLoading)
                {
                    <tr>
                        <td colspan="6" class="loading-cell">Loading...</td>
                    </tr>
                }
                else if (archivedProducts.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="empty-cell">No archived products found</td>
                    </tr>
                }
                else
                {
                    @foreach (var product in archivedProducts)
                    {
                        <tr class="clickable-row" @onclick="() => HandleRowClick(product.Id)">
                            <td>@product.Id</td>
                            <td class="image-cell">
                                @if (!string.IsNullOrEmpty(product.ImageBase64))
                                {
                                    <img src="data:image/jpeg;base64,@product.ImageBase64" alt="Product" class="product-thumbnail" />
                                }
                                else
                                {
                                    <div class="no-image-placeholder">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                                            <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                            <polyline points="21 15 16 10 5 21"></polyline>
                                        </svg>
                                    </div>
                                }
                            </td>
                            <td class="product-name">@product.Name</td>
                            <td>@product.CategoryName</td>
                            <td>@product.ArchivedDate.ToString("MMM dd, yyyy")</td>
                            <td class="actions-cell" @onclick:stopPropagation>
                                <button class="action-btn restore-btn" @onclick="() => HandleRestore(product.Id)" title="Restore product">
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"></path>
                                        <path d="M21 3v5h-5"></path>
                                        <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"></path>
                                        <path d="M8 16H3v5"></path>
                                    </svg>
                                </button>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    @if (totalPages > 1)
    {
        <div class="pagination">
            <button class="page-btn" @onclick="() => GoToPage(currentPage - 1)" disabled="@(currentPage == 1)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </button>

            @for (int i = 1; i <= totalPages; i++)
            {
                var pageNum = i;
                @if (i == 1 || i == totalPages || (i >= currentPage - 1 && i <= currentPage + 1))
                {
                    <button class="page-btn @(i == currentPage ? "active" : "")" @onclick="() => GoToPage(pageNum)">
                        @i
                    </button>
                }
                else if (i == currentPage - 2 || i == currentPage + 2)
                {
                    <span class="page-ellipsis">...</span>
                }
            }

            <button class="page-btn" @onclick="() => GoToPage(currentPage + 1)" disabled="@(currentPage == totalPages)">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </button>
        </div>
    }
</div>

@if (showProductDetails && productDetails != null)
{
    <div class="modal-overlay" @onclick="CloseProductDetails">
        <div class="modal-container" @onclick:stopPropagation>
            <div class="modal-header">
                <div class="modal-title">
                    <svg class="modal-title-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                    </svg>
                    <span>Product Details</span>
                </div>
                <button class="modal-close" @onclick="CloseProductDetails">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M18 6 6 18"></path>
                        <path d="m6 6 12 12"></path>
                    </svg>
                    <span class="modal-close-text">Close</span>
                </button>
            </div>

            <div class="modal-content">
                <div class="details-column">
                    <div class="details-section">
                        <div class="details-section-header">
                            <svg class="section-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                            </svg>
                            <span>Product Information</span>
                        </div>
                        @if (!string.IsNullOrEmpty(productDetails.ImageBase64))
                        {
                            <div class="product-image-large">
                                <img src="data:image/jpeg;base64,@productDetails.ImageBase64" alt="Product Image" />
                            </div>
                        }
                        <div class="details-list">
                            <div class="detail-item">
                                <span class="detail-label">PRODUCT NAME:</span>
                                <span class="detail-value">@productDetails.Name</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">CATEGORY:</span>
                                <span class="detail-value">@productDetails.CategoryName</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">DESCRIPTION:</span>
                                <span class="detail-value">@(string.IsNullOrEmpty(productDetails.Description) ? "N/A" : productDetails.Description)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">STATUS:</span>
                                <span class="detail-value status-badge inactive">@productDetails.Status</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">DATE CREATED:</span>
                                <span class="detail-value">@productDetails.DateCreated.ToString("M/d/yyyy")</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="close-btn" @onclick="CloseProductDetails">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                    <span>CLOSE</span>
                </button>
            </div>
        </div>
    </div>
}

@code {
    private List<IT13_Final.Services.Data.ArchivedProductModel> archivedProducts = new();
    private List<IT13_Final.Services.Data.ArchivedProductModel> allFilteredProducts = new();
    private string searchTerm = string.Empty;
    private bool isLoading = true;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling((double)totalCount / pageSize);
    
    // Date filter variables
    private string selectedDateRange = "";
    private DateTime? filterStartDate;
    private DateTime? filterEndDate;
    
    private bool HasActiveDateFilters => filterStartDate.HasValue || filterEndDate.HasValue || !string.IsNullOrEmpty(selectedDateRange);
    
    private bool showProductDetails = false;
    private IT13_Final.Services.Data.ProductDetailsModel? productDetails = null;

    private bool showSuccessMessage = false;
    private string successMessageText = string.Empty;
    private System.Threading.Timer? _successBannerTimer;
    private System.Threading.Timer? _searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadArchivedProductsAsync();
    }

    private async Task LoadArchivedProductsAsync()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            
            // Get all archived products matching search term first
            var allProducts = await ProductService.GetArchivedProductsAsync(userId, searchTerm, 1, 10000);
            
            // Apply date filter client-side (filter by ArchivedDate)
            if (filterStartDate.HasValue || filterEndDate.HasValue)
            {
                allFilteredProducts = allProducts.Where(p =>
                {
                    var archivedDate = p.ArchivedDate.Date;
                    
                    if (filterStartDate.HasValue && filterEndDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date && archivedDate <= filterEndDate.Value.Date;
                    }
                    else if (filterStartDate.HasValue)
                    {
                        return archivedDate >= filterStartDate.Value.Date;
                    }
                    else if (filterEndDate.HasValue)
                    {
                        return archivedDate <= filterEndDate.Value.Date;
                    }
                    return true;
                }).ToList();
            }
            else
            {
                allFilteredProducts = allProducts;
            }
            
            // Update total count based on filtered results
            totalCount = allFilteredProducts.Count;
            
            // Apply pagination to filtered results
            archivedProducts = allFilteredProducts
                .Skip((currentPage - 1) * pageSize)
                .Take(pageSize)
                .ToList();
        }
        catch (Exception)
        {
            archivedProducts = new List<IT13_Final.Services.Data.ArchivedProductModel>();
            allFilteredProducts = new List<IT13_Final.Services.Data.ArchivedProductModel>();
            totalCount = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void OnSearchInput()
    {
        // Filter out special characters
        var filtered = System.Text.RegularExpressions.Regex.Replace(searchTerm, @"[^a-zA-Z0-9\s\-_]", "");
        if (filtered != searchTerm)
        {
            searchTerm = filtered;
        }
        
        _searchTimer?.Dispose();
        _searchTimer = new System.Threading.Timer(async _ =>
        {
            currentPage = 1;
            await InvokeAsync(async () =>
            {
                await LoadArchivedProductsAsync();
            });
        }, null, 400, Timeout.Infinite);
    }

    private async Task ClearSearch()
    {
        searchTerm = string.Empty;
        currentPage = 1;
        await LoadArchivedProductsAsync();
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= totalPages && page != currentPage)
        {
            currentPage = page;
            await LoadArchivedProductsAsync();
        }
    }

    private void NavigateToRecords()
    {
        Nav.NavigateTo("/seller/Product");
    }

    private async Task HandleRestore(int productId)
    {
        var product = archivedProducts.FirstOrDefault(p => p.Id == productId);
        var productName = product?.Name ?? "this product";
        
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to restore {productName}?");
        if (!confirmed) return;
        
        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            var success = await ProductService.RestoreProductAsync(productId, userId);
            
            if (success)
            {
                await LoadArchivedProductsAsync();
                ShowSuccessMessage("Product restored successfully!");
            }
        }
        catch (Exception)
        {
            // Handle error
        }
        
        StateHasChanged();
    }

    private async Task HandleRowClick(int productId)
    {
        showProductDetails = true;
        StateHasChanged();

        try
        {
            var userId = AuthState.CurrentUser?.Id ?? 0;
            productDetails = await ProductService.GetArchivedProductDetailsAsync(productId, userId);
        }
        catch
        {
            productDetails = null;
        }
        finally
        {
            StateHasChanged();
        }
    }

    private void CloseProductDetails()
    {
        showProductDetails = false;
        productDetails = null;
        StateHasChanged();
    }

    private void ShowSuccessMessage(string message)
    {
        successMessageText = message;
        showSuccessMessage = true;
        StateHasChanged();

        _successBannerTimer?.Dispose();
        _successBannerTimer = new System.Threading.Timer(_ =>
        {
            InvokeAsync(() =>
            {
                showSuccessMessage = false;
                StateHasChanged();
            });
        }, null, 3000, Timeout.Infinite);
    }

    // Date filter methods
    private void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            // Prevent future dates - cap at today
            if (date.Date > today)
            {
                filterStartDate = today;
            }
            else
            {
                filterStartDate = date.Date;
            }
            selectedDateRange = "";
            
            // If end date is before start date, adjust it
            if (filterEndDate.HasValue && filterEndDate.Value < filterStartDate.Value)
            {
                filterEndDate = filterStartDate.Value;
            }
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterStartDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            var today = DateTime.Today;
            var parsedDate = date.Date;
            
            // Prevent future dates - cap at today
            if (parsedDate > today)
            {
                parsedDate = today;
            }
            
            // Ensure end date is never before start date - if it is, set it to startDate or today (whichever is earlier)
            if (filterStartDate.HasValue)
            {
                // If end date is before start date, set it to start date
                if (parsedDate < filterStartDate.Value)
                {
                    filterEndDate = filterStartDate.Value;
                }
                else
                {
                    filterEndDate = parsedDate;
                }
            }
            else
            {
                // If no start date is set, allow any date up to today
                filterEndDate = parsedDate;
            }
            
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            filterEndDate = null;
            selectedDateRange = "";
        }
    }

    private void HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                filterStartDate = null;
                filterEndDate = null;
                break;
            case "today":
                filterStartDate = now.Date;
                filterEndDate = now.Date;
                break;
            case "yesterday":
                filterStartDate = now.Date.AddDays(-1);
                filterEndDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                filterStartDate = now.Date.AddDays(-6);
                filterEndDate = now.Date;
                break;
            case "last30days":
                filterStartDate = now.Date.AddDays(-29);
                filterEndDate = now.Date;
                break;
            case "thismonth":
                filterStartDate = new DateTime(now.Year, now.Month, 1);
                filterEndDate = now.Date;
                break;
            case "thisyear":
                filterStartDate = new DateTime(now.Year, 1, 1);
                filterEndDate = now.Date;
                break;
        }
        currentPage = 1;
        InvokeAsync(async () => await LoadArchivedProductsAsync());
    }

    private async Task ApplyDateFilter()
    {
        currentPage = 1;
        await LoadArchivedProductsAsync();
    }

    private async Task ClearDateFilter()
    {
        filterStartDate = null;
        filterEndDate = null;
        selectedDateRange = "";
        currentPage = 1;
        await LoadArchivedProductsAsync();
    }

    private string GetDateRangeText()
    {
        if (filterStartDate.HasValue && filterEndDate.HasValue)
        {
            return $"{filterStartDate.Value:MM/dd/yyyy} - {filterEndDate.Value:MM/dd/yyyy}";
        }
        else if (filterStartDate.HasValue)
        {
            return $"From {filterStartDate.Value:MM/dd/yyyy}";
        }
        else if (filterEndDate.HasValue)
        {
            return $"Until {filterEndDate.Value:MM/dd/yyyy}";
        }
        return "All Time";
    }

    private async Task PrintArchivedProductRecords()
    {
        var currentUserName = AuthState.CurrentUser?.FullName ?? "Seller";
        
        // Use all filtered products for the PDF, not just the current page
        var recordsForPrint = allFilteredProducts.Any() ? allFilteredProducts : archivedProducts;

        var reportData = new
        {
            title = "Archived Product Records Report",
            printedBy = currentUserName,
            printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
            dateRange = GetDateRangeText(),
            totalCount = recordsForPrint.Count,
            records = recordsForPrint.Select(p => new
            {
                id = p.Id,
                name = p.Name,
                categoryName = p.CategoryName,
                archivedDate = p.ArchivedDate.ToString("MMM dd, yyyy")
            }).ToList()
        };

        await JSRuntime.InvokeVoidAsync("printArchivedProductRecords", reportData);
    }

    public void Dispose()
    {
        _searchTimer?.Dispose();
        _successBannerTimer?.Dispose();
    }
}
