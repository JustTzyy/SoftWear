    private async Task PrintReport()
    {
        // Confirm before exporting PDF
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirmExportPDF");
        if (!confirmed) return;

        try
        {
            isGeneratingPDF = true;
            StateHasChanged();

            var cashierUserIds = await GetCashierUserIdsAsync();
            if (cashierUserIds.Count == 0)
            {
                allReturnsForPrint = new List<IT13_Final.Services.Data.ReturnReportModel>();
            }
            else
            {
                var userIdParams = new List<string>();
                for (int i = 0; i < cashierUserIds.Count; i++)
                {
                    userIdParams.Add($"@cashierId{i}");
                }
                var cashierIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

                const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
                using var conn = new SqlConnection(connectionString);
                await conn.OpenAsync();

                var returnsSql = $@"
                    SELECT r.id, r.return_number, r.sale_id, s.sale_number, r.reason, r.status, r.timestamps,
                           COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as cashier_name
                    FROM dbo.tbl_returns r
                    INNER JOIN dbo.tbl_sales s ON r.sale_id = s.id
                    INNER JOIN dbo.tbl_users u ON r.user_id = u.id
                    WHERE r.archives IS NULL
                    AND r.user_id IN ({cashierIdsInClause})";

                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    returnsSql += " AND (r.return_number LIKE @SearchTerm OR s.sale_number LIKE @SearchTerm)";
                }

                if (startDate.HasValue)
                {
                    returnsSql += " AND CAST(r.timestamps AS DATE) >= @StartDate";
                }

                if (endDate.HasValue)
                {
                    returnsSql += " AND CAST(r.timestamps AS DATE) <= @EndDate";
                }

                returnsSql += " ORDER BY r.timestamps DESC";

                using var returnsCmd = new SqlCommand(returnsSql, conn);
                for (int i = 0; i < cashierUserIds.Count; i++)
                {
                    returnsCmd.Parameters.AddWithValue($"@cashierId{i}", cashierUserIds[i]);
                }
                if (!string.IsNullOrWhiteSpace(searchTerm))
                {
                    returnsCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
                }
                if (startDate.HasValue)
                {
                    returnsCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
                }
                if (endDate.HasValue)
                {
                    returnsCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
                }

                allReturnsForPrint = new List<IT13_Final.Services.Data.ReturnReportModel>();
                using var reader = await returnsCmd.ExecuteReaderAsync();
                while (await reader.ReadAsync())
                {
                    allReturnsForPrint.Add(new IT13_Final.Services.Data.ReturnReportModel
                    {
                        Id = reader.GetInt32(0),
                        ReturnNumber = reader.GetString(1),
                        SaleId = reader.GetInt32(2),
                        SaleNumber = reader.GetString(3),
                        Reason = reader.IsDBNull(4) ? null : reader.GetString(4),
                        Status = reader.GetString(5),
                        Timestamps = reader.GetDateTime(6),
                        CashierName = reader.IsDBNull(7) ? string.Empty : reader.GetString(7)
                    });
                }
            }

            var reportData = new
            {
                title = "Returns Reports (All Cashiers)",
                printedBy = AuthState.CurrentUser?.FullName ?? "Seller",
                printedAt = DateTime.Now.ToString("MMMM dd, yyyy hh:mm tt"),
                dateRange = GetDateRangeText(),
                totalCount = allReturnsForPrint.Count,
                totalReturnsAmount = totalReturnsAmount.ToString("N2"),
                pendingReturnsCount = pendingReturnsCount,
                completedReturnsCount = completedReturnsCount,
                records = allReturnsForPrint.Select(r => new
                {
                    returnNumber = r.ReturnNumber,
                    saleNumber = r.SaleNumber,
                    status = r.Status,
                    cashierName = r.CashierName,
                    date = r.Timestamps.ToString("MMM dd, yyyy"),
                    time = r.Timestamps.ToString("HH:mm:ss"),
                    reason = r.Reason ?? string.Empty
                }).ToList()
            };

            await JSRuntime.InvokeVoidAsync("generateAndPrintReturnsReport", reportData);

            try
            {
                if (AuthState.CurrentUser != null)
                {
                    await HistoryService.LogAsync(
                        AuthState.CurrentUser.Id,
                        "print",
                        "Seller_Returns_Report",
                        $"Printed returns report - {allReturnsForPrint.Count} returns from {startDate?.ToString("MMM dd, yyyy") ?? "All Time"} to {endDate?.ToString("MMM dd, yyyy") ?? "Today"}"
                    );
                }
            }
            catch { }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error generating seller returns report: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to generate PDF. Please try again.");
        }
        finally
        {
            isGeneratingPDF = false;
            StateHasChanged();
        }
    }

    private string GetDateRangeText()
    {
        if (startDate.HasValue && endDate.HasValue)
        {
            return $"{startDate.Value:MM/dd/yyyy} - {endDate.Value:MM/dd/yyyy}";
        }
        else if (startDate.HasValue)
        {
            return $"From {startDate.Value:MM/dd/yyyy}";
        }
        else if (endDate.HasValue)
        {
            return $"Until {endDate.Value:MM/dd/yyyy}";
        }
        return "All Time";
    }

