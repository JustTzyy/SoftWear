@code {
    private List<IT13_Final.Services.Data.StockAdjustmentModel> stockAdjustments = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private string selectedAdjustmentType = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private int totalIncreases = 0;
    private int totalDecreases = 0;
    private int netAdjustment = 0;
    private System.Threading.Timer? _searchTimer;
    private bool showStockAdjustmentDetailsModal = false;
    private IT13_Final.Services.Data.StockAdjustmentDetailsModel? selectedStockAdjustment = null;
    private List<IT13_Final.Services.Data.StockAdjustmentModel> allStockAdjustmentsForPrint = new();
    private bool isGeneratingPDF = false;
    private int sellerUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadStockAdjustments();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "seller-stock-adjustment-report-search-input");
            }
            catch (Exception)
            {
                // JavaScript function might not be available yet, ignore
            }
        }
    }

    private async Task<List<int>> GetStockClerkUserIdsAsync()
    {
        var clerkIds = new List<int>();
        
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        if (sellerUserId <= 0)
        {
            await JSRuntime.InvokeVoidAsync("console.error", "Seller User ID is 0 or invalid");
            return clerkIds;
        }

        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT u.id
                FROM dbo.tbl_users u
                JOIN dbo.tbl_roles r ON r.id = u.role_id
                WHERE u.user_id = @SellerId
                AND LOWER(r.name) = 'stockclerk'
                AND u.archived_at IS NULL";

            using var cmd = new Microsoft.Data.SqlClient.SqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("@SellerId", sellerUserId);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                clerkIds.Add(reader.GetInt32(0));
            }
            
            await JSRuntime.InvokeVoidAsync("console.log", $"Found {clerkIds.Count} stock clerks for seller {sellerUserId}");
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock clerk IDs: {ex.Message}");
        }

        return clerkIds;
    }

    private async Task LoadStockAdjustments()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all stock clerk user IDs for this seller
            var clerkIds = await GetStockClerkUserIdsAsync();
            
            // Debug logging
            await JSRuntime.InvokeVoidAsync("console.log", $"Seller User ID: {sellerUserId}, Stock Clerk IDs Count: {clerkIds.Count}");
            
            if (clerkIds.Count == 0)
            {
                await JSRuntime.InvokeVoidAsync("console.warn", "No stock clerks found for this seller");
                stockAdjustments = new List<IT13_Final.Services.Data.StockAdjustmentModel>();
                totalCount = 0;
                isLoading = false;
                StateHasChanged();
                return;
            }

            // Build parameterized IN clause
            var userIdParams = new List<string>();
            for (int i = 0; i < clerkIds.Count; i++)
            {
                userIdParams.Add($"@clerkId{i}");
            }
            var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            // Get count
            var countSql = $@"
                SELECT COUNT(*)
                FROM dbo.tbl_stock_adjustments sa
                INNER JOIN dbo.tbl_variants v ON sa.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                WHERE sa.archives IS NULL
                AND sa.user_id IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm OR sa.reason LIKE @SearchTerm OR sa.adjustment_type LIKE @SearchTerm)";
            }

            if (!string.IsNullOrWhiteSpace(selectedAdjustmentType))
            {
                countSql += " AND sa.adjustment_type = @AdjustmentType";
            }

            if (startDate.HasValue)
            {
                countSql += " AND CAST(sa.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                countSql += " AND CAST(sa.timestamps AS DATE) <= @EndDate";
            }

            using var countCmd = new Microsoft.Data.SqlClient.SqlCommand(countSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                countCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (!string.IsNullOrWhiteSpace(selectedAdjustmentType))
            {
                countCmd.Parameters.AddWithValue("@AdjustmentType", selectedAdjustmentType);
            }
            if (startDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var countResult = await countCmd.ExecuteScalarAsync();
            totalCount = countResult != null ? Convert.ToInt32(countResult) : 0;
            
            await JSRuntime.InvokeVoidAsync("console.log", $"Total stock adjustments found: {totalCount}");

            // Get data with proper user name retrieval
            var offset = (currentPage - 1) * pageSize;
            var dataSql = $@"
                SELECT sa.id, sa.variant_id, v.name as variant_name, p.name as product_name,
                       sa.size_id, sz.name as size_name,
                       sa.color_id, c.name as color_name, c.hex_value as color_hex,
                       sa.adjustment_type, sa.quantity_adjusted, sa.reason, sa.timestamps,
                       sa.user_id, COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as user_name
                FROM dbo.tbl_stock_adjustments sa
                INNER JOIN dbo.tbl_variants v ON sa.variant_id = v.id
                INNER JOIN dbo.tbl_products p ON v.product_id = p.id
                INNER JOIN dbo.tbl_users u ON sa.user_id = u.id
                LEFT JOIN dbo.tbl_sizes sz ON sa.size_id = sz.id
                LEFT JOIN dbo.tbl_colors c ON sa.color_id = c.id
                WHERE sa.archives IS NULL
                AND sa.user_id IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataSql += " AND (v.name LIKE @SearchTerm OR p.name LIKE @SearchTerm OR sa.reason LIKE @SearchTerm OR sa.adjustment_type LIKE @SearchTerm)";
            }

            if (!string.IsNullOrWhiteSpace(selectedAdjustmentType))
            {
                dataSql += " AND sa.adjustment_type = @AdjustmentType";
            }

            if (startDate.HasValue)
            {
                dataSql += " AND CAST(sa.timestamps AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                dataSql += " AND CAST(sa.timestamps AS DATE) <= @EndDate";
            }

            dataSql += " ORDER BY sa.timestamps DESC OFFSET @Offset ROWS FETCH NEXT @PageSize ROWS ONLY";

            using var dataCmd = new Microsoft.Data.SqlClient.SqlCommand(dataSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                dataCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (!string.IsNullOrWhiteSpace(selectedAdjustmentType))
            {
                dataCmd.Parameters.AddWithValue("@AdjustmentType", selectedAdjustmentType);
            }
            if (startDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                dataCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }
            dataCmd.Parameters.AddWithValue("@Offset", offset);
            dataCmd.Parameters.AddWithValue("@PageSize", pageSize);

            stockAdjustments = new List<IT13_Final.Services.Data.StockAdjustmentModel>();
            using var reader = await dataCmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                stockAdjustments.Add(new IT13_Final.Services.Data.StockAdjustmentModel
                {
                    Id = reader.GetInt32(0),
                    VariantId = reader.GetInt32(1),
                    VariantName = reader.GetString(2),
                    ProductName = reader.GetString(3),
                    SizeId = reader.IsDBNull(4) ? null : reader.GetInt32(4),
                    SizeName = reader.IsDBNull(5) ? null : reader.GetString(5),
                    ColorId = reader.IsDBNull(6) ? null : reader.GetInt32(6),
                    ColorName = reader.IsDBNull(7) ? null : reader.GetString(7),
                    ColorHexValue = reader.IsDBNull(8) ? null : reader.GetString(8),
                    AdjustmentType = reader.GetString(9),
                    QuantityAdjusted = reader.GetInt32(10),
                    Reason = reader.IsDBNull(11) ? null : reader.GetString(11),
                    Timestamps = reader.GetDateTime(12),
                    UserId = reader.GetInt32(13),
                    UserName = reader.IsDBNull(14) ? "N/A" : reader.GetString(14)
                });
            }

            if (currentPage > totalPages && totalPages > 0)
            {
                currentPage = totalPages;
                await LoadStockAdjustments();
                return;
            }

            // Calculate summary statistics
            totalIncreases = stockAdjustments.Count(a => a.AdjustmentType == "Increase");
            totalDecreases = stockAdjustments.Count(a => a.AdjustmentType == "Decrease");
            var increaseQty = stockAdjustments.Where(a => a.AdjustmentType == "Increase").Sum(a => a.QuantityAdjusted);
            var decreaseQty = stockAdjustments.Where(a => a.AdjustmentType == "Decrease").Sum(a => a.QuantityAdjusted);
            netAdjustment = increaseQty - decreaseQty;
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock adjustments: {ex.Message}");
            await JSRuntime.InvokeVoidAsync("alert", "Failed to load stock adjustment records. Please try again.");
            stockAdjustments = new List<IT13_Final.Services.Data.StockAdjustmentModel>();
            totalCount = 0;
            totalIncreases = 0;
            totalDecreases = 0;
            netAdjustment = 0;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async void HandleStartDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            startDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            startDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async void HandleEndDateChange(ChangeEventArgs e)
    {
        var value = e.Value?.ToString();
        if (DateTime.TryParse(value, out var date))
        {
            endDate = date;
            selectedDateRange = "";
        }
        else if (string.IsNullOrWhiteSpace(value))
        {
            endDate = null;
            selectedDateRange = "";
        }
        await ApplyFilters();
    }

    private async Task HandleDateRangeChange()
    {
        var now = DateTime.Now;
        switch (selectedDateRange)
        {
            case "":
                startDate = null;
                endDate = null;
                break;
            case "today":
                startDate = now.Date;
                endDate = now.Date;
                break;
            case "yesterday":
                startDate = now.Date.AddDays(-1);
                endDate = now.Date.AddDays(-1);
                break;
            case "last7days":
                startDate = now.Date.AddDays(-6);
                endDate = now.Date;
                break;
            case "last30days":
                startDate = now.Date.AddDays(-29);
                endDate = now.Date;
                break;
            case "thismonth":
                startDate = new DateTime(now.Year, now.Month, 1);
                endDate = now.Date;
                break;
            case "thisyear":
                startDate = new DateTime(now.Year, 1, 1);
                endDate = now.Date;
                break;
        }
        await ApplyFilters();
    }

