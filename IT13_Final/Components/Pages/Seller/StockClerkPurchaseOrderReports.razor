@code {
    private List<IT13_Final.Services.Data.PurchaseOrderModel> purchaseOrders = new();
    private string searchTerm = string.Empty;
    private DateTime? startDate;
    private DateTime? endDate;
    private string selectedDateRange = string.Empty;
    private string selectedStatus = string.Empty;

    private bool HasActiveDateFilters => !string.IsNullOrEmpty(selectedDateRange) || startDate.HasValue || endDate.HasValue;

    private bool isLoading = false;
    private int currentPage = 1;
    private int pageSize = 10;
    private int totalCount = 0;
    private int totalPages => (int)Math.Ceiling(totalCount / (double)pageSize);
    private decimal totalAmount = 0m;
    private int completedCount = 0;
    private int pendingCount = 0;
    private System.Threading.Timer? _searchTimer;
    private bool showPODetailsModal = false;
    private IT13_Final.Services.Data.PurchaseOrderDetailsModel? selectedPO = null;
    private List<IT13_Final.Services.Data.PurchaseOrderModel> allPOsForPrint = new();
    private bool isGeneratingPDF = false;
    private int sellerUserId = 0;

    protected override async Task OnInitializedAsync()
    {
        sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        await LoadPurchaseOrders();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                await JSRuntime.InvokeVoidAsync("setupSearchInputFilter", "seller-po-report-search-input");
            }
            catch (Exception)
            {
                // JavaScript function might not be available yet, ignore
            }
        }
    }

    private async Task<List<int>> GetStockClerkUserIdsAsync()
    {
        var clerkIds = new List<int>();
        
        if (sellerUserId <= 0)
        {
            sellerUserId = AuthState.CurrentUser?.Id ?? 0;
        }

        if (sellerUserId <= 0)
        {
            return clerkIds;
        }

        try
        {
            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            var sql = @"
                SELECT u.id
                FROM dbo.tbl_users u
                JOIN dbo.tbl_roles r ON r.id = u.role_id
                WHERE u.user_id = @SellerId
                AND LOWER(r.name) = 'stockclerk'
                AND u.archived_at IS NULL";

            using var cmd = new Microsoft.Data.SqlClient.SqlCommand(sql, conn);
            cmd.Parameters.AddWithValue("@SellerId", sellerUserId);

            using var reader = await cmd.ExecuteReaderAsync();
            while (await reader.ReadAsync())
            {
                clerkIds.Add(reader.GetInt32(0));
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("console.error", $"Error loading stock clerk IDs: {ex.Message}");
        }

        return clerkIds;
    }

    private async Task LoadPurchaseOrders()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            // Get all stock clerk user IDs for this seller
            var clerkIds = await GetStockClerkUserIdsAsync();
            
            if (clerkIds.Count == 0)
            {
                purchaseOrders = new List<IT13_Final.Services.Data.PurchaseOrderModel>();
                totalCount = 0;
                isLoading = false;
                StateHasChanged();
                return;
            }

            // Build parameterized IN clause
            var userIdParams = new List<string>();
            for (int i = 0; i < clerkIds.Count; i++)
            {
                userIdParams.Add($"@clerkId{i}");
            }
            var clerkIdsInClause = userIdParams.Count > 0 ? string.Join(",", userIdParams) : "0";

            const string connectionString = "Server=localhost\\SQLEXPRESS;Database=db_SoftWear;Trusted_Connection=True;TrustServerCertificate=True;";
            using var conn = new Microsoft.Data.SqlClient.SqlConnection(connectionString);
            await conn.OpenAsync();

            // Get count - show all statuses (Completed, Cancelled, Pending)
            var countSql = $@"
                SELECT COUNT(*)
                FROM dbo.tbl_purchase_orders po
                WHERE po.archived_at IS NULL
                AND po.created_by IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countSql += " AND (po.po_number LIKE @SearchTerm OR EXISTS (SELECT 1 FROM dbo.tbl_suppliers s WHERE s.id = po.supplier_id AND s.company_name LIKE @SearchTerm))";
            }

            if (!string.IsNullOrWhiteSpace(selectedStatus))
            {
                countSql += " AND po.status = @Status";
            }

            if (startDate.HasValue)
            {
                countSql += " AND CAST(po.created_at AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                countSql += " AND CAST(po.created_at AS DATE) <= @EndDate";
            }

            using var countCmd = new Microsoft.Data.SqlClient.SqlCommand(countSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                countCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                countCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
            if (!string.IsNullOrWhiteSpace(selectedStatus))
            {
                countCmd.Parameters.AddWithValue("@Status", selectedStatus);
            }
            if (startDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@StartDate", startDate.Value.Date);
            }
            if (endDate.HasValue)
            {
                countCmd.Parameters.AddWithValue("@EndDate", endDate.Value.Date);
            }

            var countResult = await countCmd.ExecuteScalarAsync();
            totalCount = countResult != null ? Convert.ToInt32(countResult) : 0;

            // Get data
            var offset = (currentPage - 1) * pageSize;
            var dataSql = $@"
                SELECT po.id, po.po_number, po.supplier_id, s.company_name as supplier_name,
                       po.status, po.total_amount, po.created_at, po.expected_delivery_date,
                       COALESCE(u.name, (LTRIM(RTRIM(ISNULL(u.fname,''))) + ' ' + LTRIM(RTRIM(ISNULL(u.lname,''))))) as created_by_name
                FROM dbo.tbl_purchase_orders po
                INNER JOIN dbo.tbl_suppliers s ON po.supplier_id = s.id
                INNER JOIN dbo.tbl_users u ON po.created_by = u.id
                WHERE po.archived_at IS NULL
                AND po.created_by IN ({clerkIdsInClause})";

            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataSql += " AND (po.po_number LIKE @SearchTerm OR s.company_name LIKE @SearchTerm)";
            }

            if (!string.IsNullOrWhiteSpace(selectedStatus))
            {
                dataSql += " AND po.status = @Status";
            }

            if (startDate.HasValue)
            {
                dataSql += " AND CAST(po.created_at AS DATE) >= @StartDate";
            }

            if (endDate.HasValue)
            {
                dataSql += " AND CAST(po.created_at AS DATE) <= @EndDate";
            }

            dataSql += " ORDER BY po.created_at DESC OFFSET @Offset ROWS FETCH NEXT @PageSize ROWS ONLY";

            using var dataCmd = new Microsoft.Data.SqlClient.SqlCommand(dataSql, conn);
            for (int i = 0; i < clerkIds.Count; i++)
            {
                dataCmd.Parameters.AddWithValue($"@clerkId{i}", clerkIds[i]);
            }
            if (!string.IsNullOrWhiteSpace(searchTerm))
            {
                dataCmd.Parameters.AddWithValue("@SearchTerm", $"%{searchTerm}%");
            }
