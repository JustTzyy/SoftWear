    private string GetDeliveryStatus(DateTime expectedDate, string status)
    {
        // Don't show warnings for completed or cancelled orders
        if (string.IsNullOrWhiteSpace(status))
            return "normal";
            
        var statusUpper = status.Trim().ToUpperInvariant();
        if (statusUpper == "COMPLETED" || statusUpper == "CANCELLED")
            return "normal";
        
        var today = DateTime.Today;
        var expectedDateOnly = expectedDate.Date;
        
        if (expectedDateOnly < today)
            return "overdue";
        else if (expectedDateOnly == today)
            return "due-today";
        else
            return "normal";
    }

