@* Add Stock Clerk Modal *@
@if (showAddStockClerkModal)
{
    <div class="modal-overlay" @onclick="CloseAddStockClerkModal">
        <div class="add-admin-modal" @onclick:stopPropagation>
            <div class="modal-header">
                <h2 class="modal-title-text">Add Stock Clerk</h2>
                <button class="modal-close-btn" @onclick="CloseAddStockClerkModal">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="18" y1="6" x2="6" y2="18"></line>
                        <line x1="6" y1="6" x2="18" y2="18"></line>
                    </svg>
                </button>
            </div>

            <div class="modal-tabs">
                <button class="modal-tab @(activeAddStockClerkTab == "user" ? "active" : "")" @onclick='() => SetActiveAddStockClerkTab("user")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                        <circle cx="12" cy="7" r="4"></circle>
                    </svg>
                    <span>User Information</span>
                </button>
                <button class="modal-tab @(activeAddStockClerkTab == "address" ? "active" : "")" @onclick='() => SetActiveAddStockClerkTab("address")'>
                    <svg class="tab-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                        <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>Address Information</span>
                </button>
            </div>

            <div class="modal-body">
                @if (!string.IsNullOrEmpty(_addStockClerkMessage))
                {
                    <div class="alert @(_addStockClerkSuccess ? "alert-success" : "alert-error")" style="margin-bottom: 16px; padding: 12px; border-radius: 8px; background: @(_addStockClerkSuccess ? "#d4edda" : "#f8d7da"); color: @(_addStockClerkSuccess ? "#155724" : "#721c24"); border: 1px solid @(_addStockClerkSuccess ? "#c3e6cb" : "#f5c6cb");">
                        @_addStockClerkMessage
                    </div>
                }
                
                <EditForm EditContext="@_addStockClerkEditContext" OnValidSubmit="SaveStockClerkAsync" OnInvalidSubmit="HandleInvalidSubmit">
                    <DataAnnotationsValidator />
                    
                    @if (activeAddStockClerkTab == "user")
                    {
                        <div class="form-grid">
                            <div class="form-field">
                                <label class="field-label">First Name <span class="required-asterisk">*</span></label>
                                <input id="addStockClerkFirstName" class="form-input" value="@_addStockClerkModel.FirstName" @oninput="FilterAddStockClerkFirstNameInput" placeholder="Enter first name" />
                                <ValidationMessage For="@(() => _addStockClerkModel.FirstName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Middle Name</label>
                                <input id="addStockClerkMiddleName" class="form-input" value="@_addStockClerkModel.MiddleName" @oninput="FilterAddStockClerkMiddleNameInput" placeholder="Enter middle name (optional)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Last Name <span class="required-asterisk">*</span></label>
                                <input id="addStockClerkLastName" class="form-input" value="@_addStockClerkModel.LastName" @oninput="FilterAddStockClerkLastNameInput" placeholder="Enter last name" />
                                <ValidationMessage For="@(() => _addStockClerkModel.LastName)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Email <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addStockClerkModel.Email" @oninput="FilterAddStockClerkEmailInput" placeholder="Enter email address" />
                                <ValidationMessage For="@(() => _addStockClerkModel.Email)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Birthday <span class="required-asterisk">*</span></label>
                                <input type="date" class="form-input" value="@(_addStockClerkModel.Birthday?.ToString("yyyy-MM-dd") ?? "")" max="@MaxBirthdayDate.ToString("yyyy-MM-dd")" @onchange="@((ChangeEventArgs e) => { if (DateTime.TryParse(e.Value?.ToString(), out var date)) { AddStockClerkBirthday = DateOnly.FromDateTime(date); } else { AddStockClerkBirthday = null; } })" />
                                <ValidationMessage For="@(() => _addStockClerkModel.Birthday)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Age <span class="required-asterisk">*</span></label>
                                <InputNumber TValue="int?" class="form-input" @bind-Value="_addStockClerkModel.Age" disabled />
                                <ValidationMessage For="@(() => _addStockClerkModel.Age)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Sex <span class="required-asterisk">*</span></label>
                                <select class="form-input sex-select" value="@_addStockClerkModel.Sex" @onchange="@((ChangeEventArgs e) => { 
                                    _addStockClerkModel.Sex = e.Value?.ToString() ?? string.Empty; 
                                    if (_addStockClerkEditContext != null)
                                    {
                                        _addStockClerkEditContext.NotifyFieldChanged(_addStockClerkEditContext.Field(nameof(_addStockClerkModel.Sex)));
                                    }
                                    StateHasChanged(); 
                                })">
                                    <option value="">Select Sex</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <ValidationMessage For="@(() => _addStockClerkModel.Sex)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Contact Number <span class="required-asterisk">*</span></label>
                                <InputText class="form-input" @bind-Value="_addStockClerkModel.Contact" @oninput="FilterAddStockClerkContactInput" placeholder="09123456789" maxlength="11" />
                                <ValidationMessage For="@(() => _addStockClerkModel.Contact)" />
                            </div>
                        </div>
                    }
                    else if (activeAddStockClerkTab == "address")
                    {
                        <div class="form-grid">
                            <div class="form-field full-width">
                                <label class="field-label">Street Address <span class="required-asterisk">*</span></label>
                                <InputText id="add-stockclerk-street-input" class="form-input" @bind-Value="_addStockClerkAddressModel.Street" placeholder="123 Main Street, Barangay Name" />
                                <ValidationMessage For="@(() => _addStockClerkAddressModel.Street)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Province <span class="required-asterisk">*</span></label>
                                <select class="form-input province-select" value="@_addStockClerkAddressModel.Province" @onchange="OnProvinceChanged">
                                    <option value="">Select Province</option>
                                    @foreach (var province in _addStockClerkProvinces)
                                    {
                                        <option value="@province">@province</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addStockClerkAddressModel.Province)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">City <span class="required-asterisk">*</span></label>
                                <select class="form-input city-select" value="@_addStockClerkAddressModel.City" @onchange="OnCityChanged" disabled="@(string.IsNullOrEmpty(_addStockClerkAddressModel.Province))">
                                    <option value="">Select City</option>
                                    @foreach (var city in _addStockClerkCities)
                                    {
                                        <option value="@city">@city</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => _addStockClerkAddressModel.City)" />
                            </div>
                            <div class="form-field">
                                <label class="field-label">Zip Code <span class="required-asterisk">*</span></label>
                                <input class="form-input" value="@_addStockClerkAddressModel.Zip" disabled placeholder="Auto-filled" />
                                <ValidationMessage For="@(() => _addStockClerkAddressModel.Zip)" />
                            </div>
                        </div>
                    }

                    <div class="modal-footer">
                        <button type="button" class="cancel-btn" @onclick="CloseAddStockClerkModal">Cancel</button>
                        <button type="submit" class="save-admin-btn">
                            <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path>
                                <polyline points="17 21 17 13 7 13 7 21"></polyline>
                                <polyline points="7 3 7 8 15 8"></polyline>
                            </svg>
                            <span>Save Stock Clerk</span>
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
}

